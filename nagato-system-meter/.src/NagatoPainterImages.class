Private $meterFace As Image
Private $background As Image

Public Sub Paint()
    
    Paint.DrawImage($background, 0, 0)
    Paint.DrawImage($meterFace, 0, 0)
    
End

Public Sub _new()
    
    $background = Image.Load("bg.jpg").Stretch(200, 860 / 3)
    $meterFace = Image.Load("rainbow-meter.png").Stretch(200, 261 / 3 * 2)
    
End
