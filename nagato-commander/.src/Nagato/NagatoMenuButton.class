Inherits NagatoObject

Private $menuButton As MenuButton
Private $starMenu As NagatoStarMenu
Private $spacer As Panel

Private Sub initializeButton(argContainer As Container)
    
    $menuButton = New MenuButton(argContainer)
    
    With $menuButton
        .Expand = False
        .Border = False
        .Arrow = False
        .AutoResize = True
        .Picture = MikuruIcon.Get("star")
        .H = argContainer.W
        .Menu = "StarMenu"
    End With
    
End

Private Sub initializePanel(argContainer As Container)
    
    $spacer = New Panel(argContainer)
    
    With $spacer
        .Expand = True
    End With
    
End

Public Sub _new(argContainer As Container)
    
    initializeButton(argContainer)
    initializePanel(argContainer)
    
    $starMenu = New NagatoStarMenu("StarMenu") As "TFEI"
    
End
