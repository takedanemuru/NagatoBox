' Gambas class file

Private $processIds As New Integer[]

Public Sub Add(argId As Integer)
    
    $processIds.Add(argId)
    
End

Public Sub Kill(argIndex As Integer)
    
    Dim yukiProcessId As Integer = $processIds[argIndex]

    Exec ["kill", yukiProcessId] Wait
    $processIds.Remove($processIds.Find(yukiProcessId))
    
End

Public Sub KillAll()
    
    Dim yukiProcessId As Integer
    
    For Each yukiProcessId In $processIds
        Exec ["kill", yukiProcessId]
    Next
    
End
