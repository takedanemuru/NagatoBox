' Gambas class file

Property Read IsWaiting As Boolean

Private $textArea As TextEdit
Private $lastLine As String
Private $output As String

Public Sub PushOutput(argOutput As String)
    
    $output &= argOutput
    
End

Public Sub Update(argStream As String)
    
    If InStr(argStream, gb.CrLf) = 0 And argStream Not Ends "$ " Then 
        $textArea.RichText = NagatoText.GetRichText($output & argStream)
    Else
        $output &= argStream
        $textArea.RichText = NagatoText.GetRichText($output)
    End If
    
End

Public Sub Clear()
    
    $textArea.Clear()
    
End

Public Sub _new(argTextArea As TextEdit)
    
    $textArea = argTextArea
    
End

Private Function IsWaiting_Read() As Boolean

    Return $textArea.Text Ends "$ "

End
