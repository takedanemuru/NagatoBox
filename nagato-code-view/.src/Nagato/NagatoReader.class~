' Gambas class file

Inherits NagatoSignalData

Public Sub ReadLine(argFullPath As String) As Integer
    
    Dim yukiStream As Stream
    Dim yukiLine As String
    Dim yukiLocalLineCount As Integer = 0
    
    yukiStream = Open argFullPath For Input
    
    While Not Eof(yukiStream)
        Line Input #yukiStream, yukiLine
        Raise Signal(MikuruSignal.DataIncLineCount, Null)
        'NagatoCounter.IncLineCount()
        Inc yukiLocalLineCount
    Wend
    
    Close #yukiStream
    
    Return yukiLocalLineCount
    
End

Public Sub ReadLineWithoutVoid(argFullPath As String) As Integer
    
    Dim yukiStream As Stream
    Dim yukiLine As String
    Dim yukiLocalLineCount As Integer = 0
    
    yukiStream = Open argFullPath For Input
    
    While Not Eof(yukiStream)
        Line Input #yukiStream, yukiLine
        If yukiLine = "" Then Continue
        'NagatoCounter.IncLineCountWithoutVoid()
        Raise Signal(MikuruSignal.DataIncLineCountWithoutVoid, Null)
        Inc yukiLocalLineCount
    Wend
    
    Close #yukiStream
    
    Return yukiLocalLineCount
    
End
