' Gambas class file

Inherits NagatoUxContainer

Private $searchBox As ButtonBox

Public Sub _Initialize()
    
    $searchBox = New ButtonBox(Me._$parentContainer) As "SearchBox"
    
    With $searchBox
        .Picture = MikuruIcon["search"]
        .W = 200
        .NoTabFocus = True
        .NoTabFocus = True
    End With
    
End

Public Sub SearchBox_Activate()
    
    Raise Signal(MikuruSignal.ViewFilter, [$searchBox.Text])
    
End

Public Sub SearchBox_Click()
    
    SearchBox_Activate()
    
End
