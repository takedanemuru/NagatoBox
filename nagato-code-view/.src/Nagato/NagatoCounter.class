' Gambas class file

Property Read Message As String

Private $moduleCount As Integer = 0
Private $formCount As Integer = 0
Private $classCount As Integer = 0

Public Function GetType(argFileName As String) As String
    
    If argFileName Like "*.module" Then
        Inc $moduleCount
        Return "Module"
    Else If argFileName Like "*.form" Then
        Inc $formCount
        Return "Form"
    Else
        Inc $classCount
        Return "Class"
    Endif
    
End

Public Sub Clear()
    
    $moduleCount = 0
    $formCount = 0
    $classCount = 0
    
End

Private Function Message_Read() As String

    Dim yukiMessage As String = ("YUKI.N > <b>&1</b> is made of ...<br><br>")
    
    yukiMessage &= Format$($formCount, "###,###,##0") & " Forms.<br>" 
    yukiMessage &= Format$($classCount, "###,###,##0") & " Classes.<br>"
    yukiMessage &= Format$($moduleCount, "###,###,##0") & " Modules.<br><br>"
    yukiMessage &= "&2 Lines of code."
    
    Return yukiMessage

End
