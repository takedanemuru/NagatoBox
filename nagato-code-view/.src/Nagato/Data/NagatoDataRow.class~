' Gambas class file

Property Read Collection As Collection

Private $collection As New Collection
Private $reader2 As NagatoReader2

Public Sub _new(argType As String, argPath As String) 
    
    $reader2 = New NagatoReader2(argPath)
    
    With $collection
        .[MikuruColumn.KeyType] = argType
        .[MikuruColumn.KeyName] = File.Name(argPath)
        .[MikuruColumn.KeyLines] = $reader2.LinesOfCodeAll
        .[MikuruColumn.KeyLinesWithoutVoid] = $reader2.LinesOfCodeValid
        .[MikuruColumn.KeyMethods] = $reader2.MethodCountAll
    End With
    
End

Private Function Collection_Read() As Collection

    Return $collection

End
