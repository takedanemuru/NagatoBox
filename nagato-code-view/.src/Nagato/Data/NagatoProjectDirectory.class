' Gambas class file

Property Read Path As String
Property Read FilePaths As String[]

Private $path As String

Public Sub SetPath(argPath As String)
    
    $path = argPath
    
End

Private Function Path_Read() As String

    Return $path

End

Private Function FilePaths_Read() As String[]

    Dim yukiPath As String
    Dim yukiPaths As New String[]

    For Each yukiPath In RDir($path)
        If Not MikuruFileType.IsFileTypeToRead($path &/ yukiPath) Then Continue
        yukiPaths.Add($path &/ yukiPath)
    Next

    Return yukiPaths

End
