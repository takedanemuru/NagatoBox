' Gambas class file

Inherits NagatoTabContent

Private $toolBar As NagatoWebRecentPagesEditorToolBar
Private $gridView As NagatoWebRecentPagesEditorTreeView

Public Sub _new(argTabStrip As TabStrip)
    
    Me._Initialize(argTabStrip)
    $toolBar = New NagatoWebRecentPagesEditorToolBar(Me._$hBox) As "ToolBar"
    $gridView = New NagatoWebRecentPagesEditorTreeView(Me._$vBox) As "GridView"
    Me._RefreshParentTab(("RecentPages"), Stock["small/open-recent"])
    
End

Public Sub ToolBar_SearchQuery(argText As String)
    
    Debug "Search it !" & argText
    
End

Public Sub ToolBar_Open()
    
    Debug "Open it !"
    
End

Public Sub ToolBar_Delete()
    
    Debug "Delete it !"
    
End
