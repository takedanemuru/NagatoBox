' Gambas class file

Inherits NagatoTabContent

Private $zoom As Integer = 2
Private $toolBar As NagatoAppLauncherToolBar
Private $mapView As NagatoMapViewMapView
Private $observer As New Observer

Public Sub _new(Optional argTabstrip As TabStrip)
    
    Debug IIf(argTabstrip, "true", "false")
    
    Me._Initialize(argTabStrip)
    NagatoMessaging.setMessage(("...where do you want to go ?"))
    
End

