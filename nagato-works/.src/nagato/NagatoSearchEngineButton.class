Inherits NagatoSuperMenuButton

Property Read Width As Integer

Public Sub initializeWidget()
    
    Me.$button = New MenuButton(Me._$parent) As "MenuButton" 
    
    With Me.$button
        .Expand = False
        .AutoResize = True
        .Arrow = False
        .Border = False
        .Width = Me.$size
        .Text = "google"
        .Tooltip = ("select search engine")
    End With
    
End

Public Sub setIcon(argPicture As Picture)
    
    Me.$button.Picture = argPicture
    
End

Public Sub setToolTip(argText As String)
    
    Me.$button.Text = argText
    Me.$button.Tooltip = argText
    
End

Private Function Width_Read() As Integer

    Return Me.$button.Width

End
