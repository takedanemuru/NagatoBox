Inherits NagatoSuperMenu

Private $exactMatchMenu As Menu
Private $ignoreCaseMenu As Menu

Private Sub addExactMatchMenu()
    
    $exactMatchMenu = New Menu(Me._$rootMenu) As "ExactMatchMenu"
    
    With $exactMatchMenu
        .Text = ("ExactMatch")
        .Toggle = True
        .Checked = NagatoSettingsDictionary.ExactMatch
    End With
    
End

Private Sub addIgnoreCaseMenu()
    
    $ignoreCaseMenu = New Menu(Me._$rootMenu) As "IgnoreCaseMenu"
    
    With $ignoreCaseMenu
        .Text = ("IgnoreCase")
        .Toggle = True
        .Checked = NagatoSettingsDictionary.IgnoreCase
    End With
    
End

Public Sub _AddOtherMenu() 'override.
    
    addExactMatchMenu()
    addIgnoreCaseMenu()
    
End

Public Sub _ResetMenuVariables() 'override
    
    $exactMatchMenu.Checked = NagatoSettingsDictionary.ExactMatch
    $ignoreCaseMenu.Checked = NagatoSettingsDictionary.IgnoreCase
    
End

Public Sub ExactMatchMenu_Click()
    
    With NagatoSettingsDictionary
        .ExactMatch = Not .ExactMatch
    End With
    
End

Public Sub IgnoreCaseMenu_Click()
    
    With NagatoSettingsDictionary
        .IgnoreCase = Not .IgnoreCase
    End With
    
End
