' Gambas class file

Inherits NagatoContextMenu

Event Open
Event Delete

Private Sub addOpenMenu()
    
    Dim yukiMenu As New Menu(Me._$parent) As "OpenMenu"
    
    With yukiMenu
        .Text = ("Open")
        .Picture = Stock["medium/open"]
    End With
    
End

Private Sub addDeleteMenu()
    
    Dim yukiMenu As New Menu(Me._$parent) As "DeleteMenu"
    
    With yukiMenu
        .Picture = Stock["medium/trash"]
        .Text = ("Delete")
    End With
    
End

Public Sub _AddAdditionalMenu()
    
    
    
End

Public Sub _InitializeChildMenus()
    
    addOpenMenu()
    addDeleteMenu()
    Me._AddAdditionalMenu()
    
End

Public Sub OpenMenu_Click()
    
    Raise Open
    
End

Public Sub DeleteMenu_Click()
    
    Raise Delete
    
End
