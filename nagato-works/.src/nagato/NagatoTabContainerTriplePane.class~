' Gambas class file

Create Private

Inherits NagatoTabContent

Property Read LeftPane As SidePanel
Property Read CenterPane As VBox
Property Read RightPane As SidePanel

Public _$paneHBox As HBox
Public _$leftPane As SidePanel
Public _$centerPane As VBox
Public _$rightPane As SidePanel

Private Sub addPaneBox()
    
    Me._$paneHBox = New HBox(Me._$vBox) As "PaneBox"
    
    With Me._$paneHBox
        .Expand = True
    End With
    
End

Private Sub addLeftPane()
    
    Me._$leftPane = New SidePanel(Me._$paneHBox)
    
    With Me._$leftPane
        .Expand = False
        .Width = 240
        .Value = False
        .Orientation = Align.Left
        .Arrangement = Arrange.Fill
    End With
    
End

Private Sub addCenterPane()
    
    Me._$centerPane = New VBox(Me._$paneHBox)
    
    With Me._$centerPane
        .Expand = True
    End With
    
End

Private Sub addRightPane()
    
    Me._$rightPane = New SidePanel(Me._$paneHBox)
    
    With Me._$rightPane
        .Expand = False
        .Width = 240
        .Value = False
        .Orientation = Align.Right
        .Arrangement = Arrange.Fill
    End With
    
End

Public Sub _AddSidePane()
    
    addPaneBox()
    addLeftPane()
    addCenterPane()
    addRightPane()
    
End

Private Function LeftPane_Read() As SidePanel

    Return Me._$leftPane

End

Private Function CenterPane_Read() As VBox

    Return Me._$centerPane

End

Private Function RightPane_Read() As SidePanel

    Return Me._$rightPane

End
