' Gambas class file

Create Static

Public Sub Show(argPath As String)
    
    Dim yukiMessage As String = ("<h3>File Status :</h3>")
    
    With Stat(argPath, True)
        yukiMessage &= ("<b>Name</b> :" & File.Name(argPath) & "<br>")
        yukiMessage &= ("<b>Path</b> : " & .Path & "<br>")
        yukiMessage &= ("<b>MIME Type</b> : " & NagatoMimeType.GetMineType(argPath) & "<br>")
        If IsDir(argPath) Then
            yukiMessage &= ("<b>Size</b> : " & Format$(MikuruDirectory.GetSize(argPath), "###,###,###,###,### byte") & "<br>")
        Else
            yukiMessage &= ("<b>Size</b> : " & Format$(.Size, "###,###,###,###,### byte") & "<br>")
        Endif
        yukiMessage &= ("<b>User</b> : " & .User & "<br>")
        yukiMessage &= ("<b>Group</b> : " & .Group & "<br>")
        yukiMessage &= ("<b>Authorization</b> : " & .Auth & "<br>")
        yukiMessage &= ("<b>Last Modefied</b> : " & .LastModified & "<br>")
        yukiMessage &= ("<b>Last Access</b> :" & .LastAccess & "<br>")
    End With
    
    Message.Title = ("File Status")
    Message.Info(yukiMessage)
    Message.Optional(yukiMessage, "", "", Desktop.GetFileIcon(argPath, 32))
    
End

