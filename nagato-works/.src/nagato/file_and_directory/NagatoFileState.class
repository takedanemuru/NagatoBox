Create Static

Public Enum UntitledUnedited, UntitledUnsaved, Unedited, Unsaved, Saved

Public Function IsUnedited(argSaveState As Integer) As Boolean
    
    If argSaveState = Me.Unedited Or If argSaveState = Me.UntitledUnedited Then
        Return True
    Else
        Return False
    End If 
    
End

Public Function IsUntitled(argSaveState As Integer) As Boolean
    
    If argSaveState = Me.UntitledUnedited Or If argSaveState = Me.UntitledUnsaved Then
        Return True
    Else
        Return False
    End If 
    
End
