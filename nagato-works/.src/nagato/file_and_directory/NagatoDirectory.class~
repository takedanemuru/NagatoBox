' Gambas class file

Create Static

Public Function getUpperDir(argPath As String) As String
    
    Dim yukiArray As String[] = Split(argPath, "/", "", True)
    Dim yukiCounter As Integer
    Dim yukiResult As String = "/"
    
    For yukiCounter = 0 To yukiArray.Max - 1
        yukiResult = yukiResult &/ yukiArray[yukiCounter]
    Next
    
    Return yukiResult
    
End

Public Function getUpperDirs(argPath As String) As String[]
    
    Dim yukiParentDir As String = getUpperDir(argPath)
    Dim yukiResult As String[] = Dir(yukiParentDir, "[^.]*", gb.Directory).Sort()
    Dim yukiCounter As Integer
    
    For yukiCounter = 0 To yukiResult.Max
        yukiResult[yukiCounter] = yukiParentDir &/ yukiResult[yukiCounter]
    Next
    
    Return yukiResult
    
End

Public Function getCurrentDirs(argPath As String) As String[]
    
    Dim yukiResult As String[] = Dir(argPath, "[^.]*", gb.Directory).Sort()
    Dim yukiCounter As Integer
    
    For yukiCounter = 0 To yukiResult.Max
        yukiResult[yukiCounter] = argPath &/ yukiResult[yukiCounter]
    Next
    
    Return yukiResult
    
End

Public Function getLowestDir(argPath As String) As String
    
    Dim yukiArray As String[] = Split(argPath, "/", "", True)
    
    Return yukiArray[yukiArray.Max]
    
End

Public Function HasDir(argPath As String) As Boolean
    
    Dim yukiArray As String[] = Dir(argPath, "[^.]*", gb.Directory)
    
    If yukiArray.Count = 0 Then
        Return False
    Else
        Return True
    Endif
    
End
