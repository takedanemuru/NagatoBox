' Gambas class file

Inherits NagatoTabContent

Public _$paneHBox As HBox
Public _$sidePanel As SidePanel

Private Sub addPaneBox()
    
    Me._$paneHBox = New HBox(Me._$vBox) As "PaneBox"
    
    With Me._$paneHBox
        .Expand = True
    End With
    
End

Private Sub addSidePanel()
    
    Me._$sidePanel = New SidePanel(Me._$paneHBox)
    
    With Me._$sidePanel
        .Expand = False
        .Width = 240
        .Value = False
        .Orientation = Align.Left
        .Arrangement = Arrange.Fill
    End With
    
End

Public Sub _AddSidePane() 'override
    
    addPaneBox()
    addSidePanel()
    
End
