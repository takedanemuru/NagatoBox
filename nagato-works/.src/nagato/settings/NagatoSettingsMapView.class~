' Gambas class file

Inherits NagatoSettings

Property CircularScaleShow As Boolean
Property CircularScaleStep As Integer ' KiloMeter
Property CircularScaleCount As Integer
Property LastLatitude As Float
Property LastLongitude As Float
Property LastZoom As Integer

Private Function CircularScaleShow_Read() As Boolean

    Return Me._$settings["circularscale_show", False]

End

Private Sub CircularScaleShow_Write(Value As Boolean)
    
    Me._$settings["circularscale_show"] = Value
    Me._$settings.Save()
    
End

Private Function CircularScaleStep_Read() As Integer

    Return Me._$settings["circularscale_step", 100]

End

Private Sub CircularScaleStep_Write(Value As Integer)

    Me._$settings["circularscale_step"] = Value
    Me._$settings.Save()

End

Private Function CircularScaleCount_Read() As Integer

    Return Me._$settings["circularscale_count", 3]

End

Private Sub CircularScaleCount_Write(Value As Integer)

    Me._$settings["circularscale_count"] = Value
    Me._$settings.Save()

End

Private Function LastLatitude_Read() As Float

    Return Me._$settings["map/last_latitude", 0]

End

Private Sub LastLatitude_Write(Value As Float)

    Me._$settings["map/last_latitude"] = Value
    Me._$settings.Save()

End

Private Function LastLongitude_Read() As Float

    Return Me._$settings["map/last_longitude", 0]
    
End

Private Sub LastLongitude_Write(Value As Float)

    Me._$settings["map/last_longitude"] = Value
    Me._$settings.Save()

End

Private Function LastZoom_Read() As Integer
    
    Return Me._$settings["map/last_zoom", 2]
    
End

Private Sub LastZoom_Write(Value As Integer)
    
    Me._$settings["map/last_zoom"] = Value
    Me._$settings.Save()
    
End
