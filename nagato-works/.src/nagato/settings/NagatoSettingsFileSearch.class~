' Gambas class file

Inherits NagatoSettings

Create Static

Property ExactMatch As Boolean
Property Hidden As Boolean
Property Recursive As Boolean
Property Limit As Integer
Property MimeFilterText As Boolean
Property MimeFilterMusic As Boolean
Property MimeFilterVideo As Boolean
Property MimeFilterImage As Boolean

Private Function ExactMatch_Read() As Boolean

    Return Me._$settings["file_search/exact_match", False]

End

Private Sub ExactMatch_Write(Value As Boolean)

    Me._$settings["file_search/exact_match"] = Value
    Me._$settings.Save()
    
End

Private Function Hidden_Read() As Boolean

    Return Me._$settings["file_search/hidden", False]

End

Private Sub Hidden_Write(Value As Boolean)

    Me._$settings["file_search/hidden"] = Value
    Me._$settings.Save()

End

Private Function Recursive_Read() As Boolean

    Return Me._$settings["file_search/recursive", False]

End

Private Sub Recursive_Write(Value As Boolean)

    Me._$settings["file_search/recursive"] = Value
    Me._$settings.Save()

End

Private Function Limit_Read() As Integer

    Return Me._$settings["file_search/limit", 100]

End

Private Sub Limit_Write(Value As Integer)

    Me._$settings["file_search/limit"] = Value
    Me._$settings.Save()
    
End

Private Function MimeFilterText_Read() As Boolean

    Return Me._$settings["file_search/mime_filter_text", False]

End

Private Sub MimeFilterText_Write(Value As Boolean)

    Me._$settings["file_search/mime_filter_text"] = Value
    Me._$settings.Save()

End

Private Function MimeFilterMusic_Read() As Boolean

    Return Me._$settings["file_search/mime_filter_music", False]

End

Private Sub MimeFilterMusic_Write(Value As Boolean)

    Me._$settings["file_search/mime_filter_music"] = Value
    Me._$settings.Save()

End

Private Function MimeFilterVideo_Read() As Boolean

    Return Me._$settings["file_search/mime_filter_video", False]

End

Private Sub MimeFilterVideo_Write(Value As Boolean)

    Me._$settings["file_search/mime_filter_video"] = Value
    Me._$settings.Save()

End

Private Function MimeFilterImage_Read() As Boolean

    Return Me._$settings["file_search/mime_filter_image", False]

End

Private Sub MimeFilterImage_Write(Value As Boolean)

    Me._$settings["file_search/mime_filter_image"] = Value
    Me._$settings.Save()

End
