Inherits NagatoToolButtons

Private Sub addButtonAlignLeft()
    
    Dim yukiAlignLeft As New ToolButton(Me._$parent) As "Menu"

    With yukiAlignLeft
        .Width = Me.$size
        .Picture = Stock["medium/text-left"]
        .Tooltip = ("left")
        .Tag = MikuruMenuEventTextEffect.AlignLeft
    End With
    
End

