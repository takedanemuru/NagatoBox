Inherits NagatoToolButtons

Private Sub addNewButton()
    
    Dim yukiButton As New ToolButton(Me._$parent) As "Menu"
    
    With yukiButton
        .Expand = False
        .Width = Me.$size
        .Picture = Stock["medium/new"]
        .Tooltip = ("New")
        .Tag = MikuruMenuEventFile.New
    End With
    
End

