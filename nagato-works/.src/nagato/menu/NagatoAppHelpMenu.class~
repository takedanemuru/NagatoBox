' Gambas class file

Inherits NagatoToolButtonMenu

Private Sub addHelpMenu(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "HelpMenu"
    
    With yukiMenu
        .Picture = Stock["medium/help"]
        .Text = ("Help")
    End With
    
End

Private Sub addAboutMenu(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "AboutMenu"
    
    With yukiMenu
        .Text = ("About nagato-works")
        .Picture = Stock["medium/info"]
    End With
    
End

Private Sub addParentMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu)
    
    With yukiMenu
        .Text = ("Help")
        .Picture = Stock["medium/info"]
    End With
    
    addHelpMenu(yukiMenu)
    addAboutMenu(yukiMenu)
    
End

Public Sub _new(argRootMenu As Menu)
    
    Me._$rootMenu = argRootMenu
    addParentMenu()
    
End
