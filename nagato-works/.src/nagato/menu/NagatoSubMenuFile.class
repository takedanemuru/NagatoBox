Inherits NagatoSubMenu

Private Sub addNewMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "Menu"
    
    With yukiMenu
        .Text = ("New")
        .Picture = Stock["medium/new"]
        .Tag = MikuruMenuEventFile.New
    End With
    
End

Private Sub addOpenMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "Menu"
    
    With yukiMenu
        .Text = ("Open")
        .Picture = Stock["medium/open"]
        .Tag = MikuruMenuEventFile.Open
    End With
    
End

Private Sub addSaveMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "Menu"
    
    With yukiMenu
        .Text = ("Save")
        .Picture = Stock["medium/save"]
        .Tag = MikuruMenuEventFile.Save
    End With
    
End

Private Sub addSaveAsMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "Menu"
    
    With yukiMenu
        .Text = ("Save As...")
        .Picture = Stock["medium/save-as"]
        .Tag = MikuruMenuEventFile.SaveAs
    End With
    
End

Private Sub addRevertMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "Menu"
    
    With yukiMenu
        .Text = ("Revert")
        .Picture = Stock["medium/revert"]
        .Tag = MikuruMenuEventFile.Revert
    End With
    
End

Public Sub _InitializeMenu() ' override.
    
    addNewMenu()
    addOpenMenu()
    addSaveMenu()
    addSaveAsMenu()
        MikuruMenuSeparator.Set(Me._$rootMenu)
    addRevertMenu()
    
End

Public Sub Menu_Click()
    
    Raise MenuEvent(Last.Tag)
    
End
