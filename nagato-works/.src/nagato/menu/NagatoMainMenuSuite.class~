' Gambas class file

Create Static

Private $parentMenu As Menu

Private Sub addNewTabMenu()
    
    Dim yukiMenu As New Menu($parentMenu) 
    Dim yukiSubMenu As NagatoSubMenuNewTab
    
    With yukiMenu 
        .Text = ("NewTab")
        .Picture = Stock["medium/application"]
    End With
    
    yukiSubMenu = New NagatoSubMenuNewTab(yukiMenu)
    
End

Private Sub addViewMenu()
    
    Dim yukiMenu As New Menu($parentMenu) 
    Dim yukiSubMenu As NagatoDynamicSubMenuAppView
    
    With yukiMenu 
        .Text = ("View")
    End With
    
    yukiSubMenu = New NagatoDynamicSubMenuAppView(yukiMenu)
    
End

Private Sub addTabSelectMenu()
    
    Dim yukiMenu As New Menu($parentMenu) 
    Dim yukiSubMenu As NagatoDynamicSubMenuTabSelect
    
    With yukiMenu 
        .Text = ("Current Tabs")
    End With
    
    yukiSubMenu = New NagatoDynamicSubMenuTabSelect(yukiMenu)
    
End

Private Sub addHelpMenu()
    
    Dim yukiMenu As New Menu($parentMenu)
    Dim yukiSubMenu As NagatoSubMenuAppHelp
    
    With yukiMenu
        .Text = ("Help")
        .Picture = Stock["medium/help"]
    End With
    
    yukiSubMenu = New NagatoSubMenuAppHelp(yukiMenu)
    
End

Private Sub addCloseMenu()
    
    Dim yukiMenu As New Menu($parentMenu) As "CloseMenu"
    
    With yukiMenu 
        .Text = ("Close")
        .Picture = Stock["medium/quit"]
    End With
    
End

Public Sub Add(argParentMenu As Menu)
    
    $parentMenu = argParentMenu
    
    addNewTabMenu()
    addTabSelectMenu()
    addViewMenu()
        MikuruMenuSeparator.Set($parentMenu)
    addHelpMenu
    addCloseMenu()
    
End

Public Sub CloseMenu_Click()
    
    HaruhiMain.Close()
    
End
