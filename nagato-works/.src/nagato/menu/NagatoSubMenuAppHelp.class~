' Gambas class file

Inherits NagatoSubMenu

Private Sub addHelpMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "HelpMenu"
    
    With yukiMenu
        .Picture = Stock["medium/help"]
        .Text = ("Help")
    End With
    
End

Private Sub addAboutMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "AboutMenu"
    
    With yukiMenu
        .Text = ("About nagato-works")
        .Picture = Stock["medium/info"]
    End With
    
End

Public Sub _InitializeMenu() ' override
    
    addAboutMenu()
    addHelpMenu()
    
End

Public Sub AboutMenu_Click()
    
    HaruhiAbout.Show()
    
End
