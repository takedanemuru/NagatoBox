Inherits NagatoSubMenu

Private Sub addRotateLeftMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "MenuButton"
    
    With yukiMenu
        .Text = ("Rotate left")
        .Picture = Stock["medium/rotate-left"]
        .Tag = MikuruMenuEventImageEffect.RotateLeft
    End With
    
End

