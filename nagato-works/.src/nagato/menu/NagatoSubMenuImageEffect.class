Public Sub _InitializeMenu() ' override.
    
    addRotateLeftMenu()
    addRotateRightMenu()
        MikuruMenuSeparator.Set(Me._$rootMenu)
    addZoomNormalMenu()
    addZoomInMenu
    addZoomOutMenu()
    addZoomFitMenu()
        MikuruMenuSeparator.Set(Me._$rootMenu)
    addResizeMenu()
    
End

Public Sub MenuButton_Click()
    
    Raise MenuEvent(Last.Tag)
    
End

