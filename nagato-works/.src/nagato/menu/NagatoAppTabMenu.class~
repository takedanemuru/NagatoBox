    Dim yukiMenu As New Menu(argParentMenu) As "Menu"
    
    With yukiMenu
        .Picture = Stock["16/internet"]
        .Text = ("WebBrowser")
        .Tag = MikuruFunctionType.WebBrowser
    End With
    
