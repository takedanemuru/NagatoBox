' Gambas class file

Inherits NagatoToolButtonMenu

Event NewTab(argFunctionType As Integer)

Private Sub addAppLauncherMenu(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "Menu"
    
    With yukiMenu
        .Picture = Stock["medium/program"]
        .Text = ("AppLauncher")
        .Tag = MikuruFunctionType.AppLauncher
    End With
    
End
Private Sub addFileSelectorMenu(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "Menu"
    
    With yukiMenu
        .Picture = Stock["medium/file-manager"]
        .Text = ("FileSelector")
        .Tag = MikuruFunctionType.FileSelector
    End With
    
End

Private Sub addFileManagerMenu(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "Menu"
    
    With yukiMenu
        .Text = ("FileManager")
        .Tag = MikuruFunctionType.FileSelector
    End With
    
End

Private Sub addTextEditorMenu(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "Menu"
    
    With yukiMenu
        .Picture = Stock["16/text"]
        .Text = ("TextEditor")
        .Tag = MikuruFunctionType.TextEditor
    End With
    
End

Private Sub AddHighlightEditorMenu(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "Menu"
    
    With yukiMenu
        .Picture = Stock["16/edit"]
        .Text = ("HighlightEditor")
        .Tag = MikuruFunctionType.HighlightEditor
    End With
    
End

