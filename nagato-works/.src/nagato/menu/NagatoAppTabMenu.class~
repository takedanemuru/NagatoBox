    Dim yukiMenu As New Menu(argParentMenu) As "Menu"
    
    With yukiMenu
        .Picture = Stock["16/image"]
        .Text = ("ImageViwer")
        .Tag = MikuruFunctionType.ImageViewer
    End With
    
End

Private Sub addMapViewMenu(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "Menu"
    
    With yukiMenu
        .Picture = Picture["pictures/osm_logo.png"]
        .Text = ("Map")
        .Tag = MikuruFunctionType.Map
    End With
    
End

Private Sub addMediaPlayerMenu(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "Menu"
    
    With yukiMenu
        .Picture = Stock["16/video"]
        .Text = ("MediaPlayer")
        .Tag = MikuruFunctionType.MediaPlayer
    End With
    
End

Private Sub addParentMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu)
    
    yukiMenu.Text = ("NewTab")
    addAppLauncherMenu(yukiMenu)
    addDictionaryMenu(yukiMenu)
    addFileSelectorMenu(yukiMenu)
    'addFileManagerMenu(yukiMenu)
    addHighlightEditorMenu(yukiMenu)
    addImageViewMenu(yukiMenu)
    addMapViewMenu(yukiMenu)
    addMediaPlayerMenu(yukiMenu)
    addPureTextEditorMenu(yukiMenu)
    addTextEditorMenu(yukiMenu)
    addWebViewMenu(yukiMenu)

End

Public Sub _new(argRootMenu As Menu)
    
    Me._$rootMenu = argRootMenu
    addParentMenu()
    
End

Public Sub Menu_Click()
    
    Raise NewTab(Last.Tag)
    
End
