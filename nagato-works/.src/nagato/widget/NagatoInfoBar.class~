' Gambas class file

Public Const $size As Integer = 32
Public $infobar As HBox

Public Sub initializeInfobar(argParent As Container)
    
    Me.$infobar = New HBox(argParent)
    
    With Me.$infobar
        .Expand = False
        .Height = Me.$size
        .Background = &HF2E9EC
    End With
    
End
