Inherits NagatoToolButtons

Private Sub addZoomInButton()
    
    Dim yukiButton As New ToolButton(Me._$parent) As "ZoomButton"
    
    With yukiButton
        .Picture = Stock["medium/zoom-in"]
        .Width = Me.$size
        .Border = False
        .Tooltip = ("zoom in")
        .Tag = MikuruMenuEventImageEffect.ZoomIn
    End With
    
End

