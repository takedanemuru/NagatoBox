' Gambas class file

Inherits NagatoToolButtons

Property Read Category As String

Private $category As String = "AllApplications"

Event SelectCategory(argTag As String)

Private Sub addAllAppsButton()
    
    Dim yukiButton As New ToolButton(Me._$parent) As "CategoryButton"
    
    With yukiButton
        .AutoResize = True
        .Picture = Stock["medium/program"]
        .Text = ("All Applications")
        .Toggle = True
        .Value = True
        .Radio = True
        .Tag = "AllApplications"
    End With
    
End

Private Sub addCategoryButton(argCategory As String)
    
    Dim yukiButton As New ToolButton(Me._$parent) As "CategoryButton"
    
    With yukiButton
        .AutoResize = True
        '.Picture = Stock["medium/" bookmark]
        .Text = (argCategory)
        .Toggle = True
        .Value = False
        .Radio = True
        .Tag = argCategory
    End With
    
End

Private Sub initializeButtons()
    
    addAllAppsButton()
    addCategoryButton("Nagato")
    addCategoryButton("Utility")
    addCategoryButton("Network")
    addCategoryButton("Office")
    addCategoryButton("Graphics")
    addCategoryButton("Game")
    addCategoryButton("System")
    addCategoryButton("Media")
    addCategoryButton("Development")
    addCategoryButton("Education")
    addCategoryButton("Settings")
    
End

Public Sub _new(argContainer As Container)
    
    Me.initialize(argContainer)
    initializeButtons()
    
End

Public Sub CategoryButton_Click()
    
    $category = Last.Tag
    
    Raise SelectCategory(Last.Tag)
    
End


Private Function Category_Read() As String

    Return $category

End
