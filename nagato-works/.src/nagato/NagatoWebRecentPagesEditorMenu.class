' Gambas class file

Inherits NagatoSuperMenu

Event Open
Event Delete
Event DeleteAll

Private Sub addOpenMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "OpenMenu"
    
    With yukiMenu
        .Text = ("Open")
    End With
    
End

Private Sub addDeleteMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "DeleteMenu"
    
    With yukiMenu
        .Picture = Stock["medium/erase"]
        .Text = ("Delete")
    End With
    
End

Private Sub addDeleteAllMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "DeleteAllMenu"
    
    With yukiMenu
        .Picture = Stock["medium/trash"]
        .Text = ("DeleteAll")
    End With
    
End

Public Sub _AddOtherMenu() ' override
    
    addOpenMenu()
    addDeleteMenu()
    addDeleteAllMenu()
    
End

Public Sub OpenMenu_Click()
    
    Raise Open
    
End

Public Sub DeleteMenu_Click()
    
    Raise Delete
    
End

Public Sub DeleteAllMenu_Click()
    
    Raise DeleteAll
    
End
