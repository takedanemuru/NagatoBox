' Gambas class file

Inherits NagatoToolButtons

Private $combobox As ComboBox

Event NewSize(argIndex As Integer) ' please referer to NagatoIconSize.class

Private Sub initializeWidget(argIconSizeIndex As Integer)
    
    $combobox = New ComboBox(Me._$parent) As "IconSizeBox"
    With $combobox
        .Width = 100
        .ReadOnly = True
        .List = [("small"), ("medium"), ("large"), ("huge"), ("baka")]
        .Index = argIconSizeIndex
        .Tooltip = ("set icon size")
    End With
    
End

Public Sub _new(argContainer As Container, Optional argIconSizeIndex As Integer = 2)
    
    Me.initialize(argContainer)
    initializeWidget(argIconSizeIndex)
    
End

Public Sub IconSizeBox_Click()
    
    Raise NewSize($combobox.Index)
    
End

