Private Function getCommand() As String
    
    ' command options
    '  -i : ignore case
    ' -w : exact match
    
    If NagatoSettingsDictionary.IgnoreCase Then
        Return IIf(NagatoSettingsDictionary.ExactMatch, "grep -w -i &1 &2", "grep -i &1 &2")
    Else
        Return IIf(NagatoSettingsDictionary.ExactMatch, "grep -w &1 &2", "grep &1 &2")
    Endif
    
End

Public Function getSerchResultStarndardDictionary(argQuery As String) As String
    
    Dim yukiCommandLine As String = Subst$(getCommand(), argQuery, NagatoHiddenDirectory.DictionaryFilePath)
    Dim yukiBuffer As String
    
    Shell yukiCommandLine To yukiBuffer 
    
    Return yukiBuffer
    
End

