' Gambas class file

Create Static

Public EffectList As String[] = ["OilPaint", "Gray", "Tile", "Blur", "mirror(virtical)", "mirror(horizontal)", "Solarize"]

Public Function ExecuteEffect(argIndex As Integer, argImage As Image) As Image
    
    Select Case argIndex
        Case 0
            Return argImage.OilPaint(3.0)
        Case 1
            Return argImage.Desaturate()
        Case 2
            Return argImage.Tile()
        Case 3
            Return argImage.Blur(0.5)
        Case 4
            Return argImage.Mirror(False, True)
        Case 5
            Return argImage.Mirror(True, False)
        Default
            Return argImage
    End Select
    
End
