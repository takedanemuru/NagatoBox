' Gambas class file

Create Static

Public Function GetShowHiddenKey(argBoolean As Boolean) As String ' true means "show hidden dir and file"
    
    If argBoolean = True Then
        Return "*"
    Else
        Return "[^.]*"
    Endif
    
End

Public Sub Get(argQuery As String) As String
    
    Dim yukiKey As String = argQuery
    
    If Not NagatoSettingsFileSearch.ExactMatch Then yukiKey = "*" & yukiKey & "*"
    
    Return yukiKey
    
End
