Private Sub addMiscMenus()
    
    Dim yukiMenu As Menu = getParentMenu("Misc", Stock["medium/question"])
    
    setEngine(yukiMenu, ("Twitter"), "!tw", Picture.Load("pictures/twitter-bird-white-on-blue.png"))
    setEngine(yukiMenu, ("Wikipedia"), "!wiki", Picture.Load("pictures/logos/Wikipedia-logo.png"))
    setEngine(yukiMenu, ("Wikipadia (Japanese)"), "!wja", Picture.Load("pictures/logos/Wikipedia-logo.png"))
    setEngine(yukiMenu, ("Uncyclopedia"), "!unwiki")
    setEngine(yukiMenu, ("Urban Dictionary"), "!ud")
    
End

Private Sub addDictionaryMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "Engine"
    
    With yukiMenu
        .Text = ("Dictionary")
        .Picture = Stock["medium/book"]
        .Tag = "Dictionary"
    End With
    
End

Public Sub _InitializeMenu() ' override
    
    addGoogleMenus()
    addTechMenus()
    addVideoMenus()
    addMapMenus()
    addMiscMenus()
    addDictionaryMenu()
    
End

Public Sub Engine_Click()
    
    Raise Select(Last.Tag, Last.Text, Last.Picture)
    
End
