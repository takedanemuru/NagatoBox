' Gambas class file

Inherits NagatoSubMenu

Event Select(argTag As String, argNewName As String, argIcon As Picture)

Private Function getParentMenu(argTitle As String, Optional argIcon As Picture) As Menu
    
    Dim yukiMenu As New Menu(Me._$rootMenu)
    
    With yukiMenu
        .Text = argTitle
        If argIcon Then .Picture = argIcon
    End With
    
    Return yukiMenu
    
End

Private Sub setEngine(argParent As Menu, argTitle As String, argTag As String, Optional argIcon As Picture)
    
    Dim yukiMenu As New Menu(argParent) As "Engine"
    
    With yukiMenu
        If argIcon Then .Picture = argIcon
        .Text = argTitle
        .Tag = argTag
    End With
    
End

Private Sub addGoogleMenus()
    
    Dim yukiMenu As Menu = getParentMenu("Google", Picture.Load("pictures/google-g-logo-2012.png"))
    
    setEngine(yukiMenu, ("Google"), "!g", Picture.Load("pictures/google-g-logo-2012.png"))
    setEngine(yukiMenu, ("Google Image"), "!gi", Picture.Load("pictures/google-g-logo-2012.png"))
    setEngine(yukiMenu, ("Google Blogs"), "!blogs", Picture.Load("pictures/google-g-logo-2012.png"))
    setEngine(yukiMenu, ("Google (Japanese)"), "!gjp", Picture.Load("pictures/google-g-logo-2012.png"))
    
End

Private Sub addTechMenus()
    
    Dim yukiMenu As Menu = getParentMenu("Tech", Picture.Load("pictures/ubuntu-logo-better.png"))
    
    setEngine(yukiMenu, ("manpages"), "!man", Stock["medium/book"])
    setEngine(yukiMenu, ("StackOverflow"), "!so", Picture.Load("pictures/logos/stackoverflow.png"))
    setEngine(yukiMenu, ("Ubuntu Man Pages"), "!uman", Picture.Load("pictures/ubuntu-logo-better.png"))
    setEngine(yukiMenu, ("Ubuntu Forums"), "!ubuntuf", Picture.Load("pictures/ubuntu-logo-better.png"))
    setEngine(yukiMenu, ("Ubuntu Users"), "!ubuntuusers", Picture.Load("pictures/ubuntu-logo-better.png"))
    setEngine(yukiMenu, ("Ubuntu Personal Package Archive"), "!ppa", Picture.Load("pictures/ubuntu-logo-better.png"))
    setEngine(yukiMenu, ("Ubuntu Packages"), "!upackages", Picture.Load("pictures/ubuntu-logo-better.png"))
    
End

Private Sub addVideoMenus()
    
