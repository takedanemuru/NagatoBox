    setEngine(yukiMenu, ("niconico"), "!nico", Picture.Load("pictures/logos/niconico_logo.png"))
    setEngine(yukiMenu, ("YouTube"), "!yt", Picture.Load("pictures/logos/youtube-logo.jpg"))
    setEngine(yukiMenu, ("Veoh"), "!veoh")
    setEngine(yukiMenu, ("Dailymotion"), "!dailymotion")
    
End

Private Sub addMapMenus()
    
    Dim yukiMenu As Menu = getParentMenu("Maps", Picture.Load("pictures/osm_logo.png"))
    
    setEngine(yukiMenu, ("Google Maps"), "!gmaps", Picture.Load("pictures/google-g-logo-2012.png"))
    setEngine(yukiMenu, ("Bing Maps"), "!bingmaps", Picture.Load("pictures/logos/bing-b-logo.png"))
    setEngine(yukiMenu, ("Open Street Map"), "!osm", Picture.Load("pictures/osm_logo.png"))
    
