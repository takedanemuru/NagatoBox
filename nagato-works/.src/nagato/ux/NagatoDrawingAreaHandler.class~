' Gambas class file

Create Static

Private $observer As Observer

Private Sub popUpAppMenu()
    
    Dim yukiMenu As New NagatoAppMenu(Kyon) 
    
    yukiMenu.popup()
    
End

Public Sub Activate()
    
    Debug "get up !!"
    
End

Public Sub _new()
    
    $observer = New Observer(Kyon.MessagingArea) As "Asakura"
    
End

Public Sub Asakura_MouseDown()

    popUpAppMenu()

End

Public Sub Asakura_Menu()

    popUpAppMenu()

End
