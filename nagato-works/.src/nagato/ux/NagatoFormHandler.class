Private Sub refreshNagatoFaceDA()
    
    With HaruhiMain.MessagingArea
        .X = 0
        .Y = 0
        .Width = HaruhiMain.Width
        .Height = 160
    End With
    
End

Private Sub refreshMainTabPanel()
    
    With HaruhiMain.MainTabStrip
        .X = 0
        .Y = 120
        .Width = HaruhiMain.Width
        .Height = HaruhiMain.Height - 120
    End With
    
End

Private Sub refreshGlobalSearchBox()
    
    With HaruhiMain.GlobalSearchBox
        .Move(HaruhiMain.Width - (HaruhiMain.GlobalSearchBox.Width + 48), 48)
    End With
    
End

Public Sub SetWidgetPositionAndSize()
    
    refreshNagatoFaceDA()
    refreshMainTabPanel()
    refreshGlobalSearchBox()
    
End
