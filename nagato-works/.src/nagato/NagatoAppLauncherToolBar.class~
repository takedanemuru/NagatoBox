' Gambas class file

Inherits NagatoToolBar

Private $selectButtons As NagatoAppSelectButtons

Event SelectCategory(argCategory As String)
Event SearchQuery(argCategory As String, argText As String)
Event Refresh
Event Change(argIconSizeIndex As Integer)

Private Sub addAppSelectButtons()
    
    $selectButtons = New NagatoAppSelectButtons(Me._$parent) As "AppSelectButtons"
    
End

Private Sub addSpacer()
    
    Dim yukiSpacer As NagatoSeparator
    
    yukiSpacer = New NagatoSeparator(Me._$parent)
    
End

Private Sub addSearchBox()
    
    Dim yukiSearchBox As NagatoSearchBox
    
    yukiSearchBox = New NagatoSearchBox(Me._$parent) As "SearchBox"
    
End

Private Sub addGearButton()
    
    Dim yukiGearButton As NagatoGearButton
    Dim yukiMenu As NagatoAppLauncherMenu
    
    yukiGearButton = New NagatoGearButton(Me._$parent) 
    yukiMenu = New NagatoAppLauncherMenu(yukiGearButton.RootMenu) As "GearMenu"
    
End

Public Sub _Initialize() 'override.
    
    addAppSelectButtons()
    addSpacer()
    addSearchBox()
    addGearButton()
    
End

Public Sub AppSelectButtons_SelectCategory(argTag As String)
    
    Raise SelectCategory(argTag)
    
End

Public Sub SearchBox_SearchQuery(argText As String)
    
    Raise SearchQuery($selectButtons.Category, argText)
    
End

Public Sub GearMenu_Refresh()
    
    Raise Refresh
    
End

Public Sub GearMenu_Change(argIconSizeIndex As Integer)
    
    Raise Change(argIconSizeIndex)
    
End
