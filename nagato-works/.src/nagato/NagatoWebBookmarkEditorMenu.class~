' Gambas class file

Inherits NagatoSuperMenu

Event Open
Event Delete

Private Sub addOpenMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "OpenMenu"
    
    With yukiMenu
        .Text = ("Open")
    End With
    
End

Private Sub addDeleteMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "DeleteMenu"
    
    With yukiMenu
        .Picture = Stock["medium/trash"]
        .Text = ("Delete")
    End With
    
End

Private Sub addRenameMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "RenameMenu"
    
    With yukiMenu
        .Text = ("Rename")
    End With
    
End

Private Sub addNewCategoryMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "NewCategoryMenu"
    
    With yukiMenu
        .Picture = Stock["medium/add"]
        .Text = ("NewCategory")
    End With
    
End

Private Sub addRefreshMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "RefreshMenu"
    
    With yukiMenu
        .Picture = Stock["small/refresh"]
        .Text = ("Refresh")
    End With
    
End

Public Sub _AddOtherMenu() ' override
    
    addOpenMenu()
    addDeleteMenu()
    addRenameMenu()
        MikuruMenuSeparator.Set(Me._$rootMenu)
    addNewCategoryMenu()
    addRefreshMenu()
    
End

Public Sub OpenMenu_Click()
    
    Raise Open
    
End

Public Sub DeleteMenu_Click()
    
    Raise Delete
    
End
