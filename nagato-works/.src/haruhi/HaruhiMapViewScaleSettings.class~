' Gambas class file

Public Sub Form_Show()
    
    Me.Center()
    CircularScaleCountSpinBox.Value = NagatoSettingsMapView.CircularScaleCount
    CircularScaleStepSpinBox.Value = NagatoSettingsMapView.CircularScaleStep
    
End

Public Sub ApplyButton_Click()
    
    NagatoSettingsMapView.CircularScaleCount = CircularScaleCountSpinBox.Value
    NagatoSettingsMapView.CircularScaleStep = CircularScaleStepSpinBox.Value
    Me.Close(2)
    
End
