Private Const GuakeApplication As String = "Session://org.guake.RemoteControl"
Private Const GuakeObjectPath As String = "/org/guake/RemoteControl"
Private Const GuakeInterface As String = "org.guake.RemoteControl"

Public Function ConfirmService() As Boolean
    
    Dim yukiList As String[] = DBus["Session://org.freedesktop.DBus"]["/", "org.freedesktop.DBus"].ListNames()
    
    Return yukiList.Exist("org.guake.RemoteControl")
    
End

Public Sub AddTab()
    
    Shell Subst$("guake -n &1", NagatoArgs.Directory) Wait
    Me.ShowHide()
    
End

Public Sub ShowHide()
    
    Shell "guake -t"
    
End
