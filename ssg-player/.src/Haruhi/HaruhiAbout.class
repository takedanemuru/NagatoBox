' Gambas class file

Private Sub setImage()
    
    Dim yukiImage As Image = Image.Load("Pictures/background.jpg").Stretch(Me.W, Me.H)
    
    Me.Picture = yukiImage.Picture    
    
End

Private Sub setText()
    
    With InformationLabel
        .Font.Bold = True
        .Font.Size = Me.Font.Size 
        .Foreground = Color.Orange
        .Text = Subst$(File.Load("Text/Information"), Application.Version)
    End With
    
End

Public Sub Form_Show()
    
    setImage()
    setText()
    
End

Public Sub QuitButton_Click()

    Me.Close()

End
