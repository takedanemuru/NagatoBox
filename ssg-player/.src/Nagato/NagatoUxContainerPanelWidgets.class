Inherits NagatoUxContainer

Private $hBox As NagatoUxItemHBox
Private $toggleButton As NagatoUxItemToggleButton
Private $drawingArea As NagatoUxItemProgressBar
Private $starButton As NagatoUxItemStarButton

Public Sub SetState(argState As Integer)
    
    $toggleButton.SetState(argState)
    
End

Public Sub SetProgress(argPosition As Float, argDuration As Float)
    
    $drawingArea.SetProgress(argPosition, argDuration)
    
End

Public Sub _new(argContainer As Container)
    
    $hBox = New NagatoUxItemHBox(argContainer)
    $toggleButton = New NagatoUxItemToggleButton($hBox.Item) As "TFEI"
    $drawingArea = New NagatoUxItemProgressBar($hBox.Item) As "TFEI"
    $starButton = New NagatoUxItemStarButton($hBox.Item) As "TFEI"
    
End
