Public Function Get(argName As String, Optional argIconSize As Integer) As Picture
    
    Dim yukiImage As Image = Image.Load(Subst$("pictures/mono_icon/&1.png", argName))
    Dim yukiSize As Integer = IIf(argIconSize, argIconSize, 2 * MikuruUX.Grid)
    
    Return yukiImage.Stretch(yukiSize, yukiSize).Picture
    
End
