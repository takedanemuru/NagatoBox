' Gambas class file

Private $tab As TabStrip
Private $grid As GridView
Private $gridHandler As NagatoGridDone

Public Sub Refresh()
    
    $gridHandler.Refresh()
    
End

Public Sub _new(argTab As TabStrip)
    
    $tab = argTab
    
    $grid = New GridView($tab)
    $grid.Expand = True
    $grid.Header = GridView.Horizontal
    
    $gridHandler = New NagatoGridDone($grid)
    
End
