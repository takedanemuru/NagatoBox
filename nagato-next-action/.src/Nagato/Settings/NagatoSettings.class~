' Gambas class file

Create Static

Property Filter As Boolean

Private $settings As New Settings

Public Sub LoadFromSettings(argForm As Form)
    
    With argForm
        .X = $settings[Subst$("&1/x", .Name), .X]
        .Y = $settings[Subst$("&1/y", .Name), .Y]
        .Height = $settings[Subst$("&1/height", .Name), .Height]
        .Width = $settings[Subst$("&1/width", .Name), .Width]
    End With
    
End

Public Sub SaveFromSettings(argForm As Form)
    
    With argForm
        $settings[Subst$("&1/x", .Name)] = .X
        $settings[Subst$("&1/y", .Name)] = .Y
        $settings[Subst$("&1/height", .Name)] = .Height
        $settings[Subst$("&1/width", .Name)] = .Width
    End With
    
    $settings.Save()
    
End

Private Function Filter_Read() As Boolean

    Return $settings["todo/filter", False]

End

Private Sub Filter_Write(Value As Boolean)

    $settings["todo/filter"] = Value
    $settings.Save

End
