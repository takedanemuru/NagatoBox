' Gambas class file

Private $sampleDate As Date

Public Sub Form_Open()
    
    Dim yukiImage As Image = Image.Load("Pictures/yukichan_21.jpg").Stretch(Me.W, Me.H)
    
    Me.Picture = yukiImage.Picture
    Me.Text = ("Clock format")
    $sampleDate = Now()
    CurrentLabel.Text = Format$($sampleDate, NagatoSettings.ClockFormat)
    UserLabel.Text = ""
    
    Me.Center()
    
End


Public Sub InputBox_Change()

    UserLabel.Text = Format$($sampleDate, InputBox.Text)

End
