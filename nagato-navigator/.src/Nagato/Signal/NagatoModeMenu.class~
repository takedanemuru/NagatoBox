' Gambas class file

Inherits NagatoSubMenu

Public Enum ModeTasks, ModeTasks2, ModeSystem, ModeMusic, ModeRss

Public Sub _InitializeParentMenu(argRootMenu As Menu)
    
    Me._$parentMenu = New Menu(argRootMenu)
    
    With Me._$parentMenu
        .Text = ("Mode")
        .Picture = MikuruIcon.Get("information")
    End With
    
End

Public Sub _InitializeMenus()
    
    Me._AddMenu(("Tasks"), ModeTasks, MikuruIcon.Get("gear"))
    Me._AddMenu(("Tasks (Tint2 style)"), ModeTasks2, MikuruIcon.Get("gears"))
    Me._AddMenu(("System monitor"), ModeSystem, MikuruIcon.Get("oscilloscope"))
    Me._AddMenu(("Music"), ModeMusic, MikuruIcon.Get("headphone"))
    Me._AddMenu(("RSS"), ModeRss, MikuruIcon.Get("feed"))
    
End

Public Sub MenuItem_Click()
    
    Raise Signal(MikuruSignal.ModeChanged, [Last.Tag])
    
End
