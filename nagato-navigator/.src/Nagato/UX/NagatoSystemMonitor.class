Inherits NagatoPainter

Private Function getText() As String
    
    Dim yukiText As String = Format$(NagatoSystemObserver.CpuUsage, "Processor ##0.00%   ")
    
    yukiText &= Format$(NagatoSystemObserver.MemoryUsage, "Memory ##0.00%   ")
    yukiText &= Format$(NagatoSystemObserver.SwapUsage, "Swap ##0.00%   ")
    yukiText &= Format$(NagatoSystemObserver.ProcessCount, "Processes ##0")
    
    Return yukiText
    
End

Public Sub Paint()
    
    Paint.Begin(Me._$drawingArea)
        Paint.Brush = Paint.Color(NagatoSettings.ForegroundColor)
        Paint.Font.Bold = True
        Paint.Text(getText(), 0, 0, Me._$drawingArea.W, Me._$drawingArea.H, Align.Left)
        Paint.Fill()
    Paint.End()
    
End
