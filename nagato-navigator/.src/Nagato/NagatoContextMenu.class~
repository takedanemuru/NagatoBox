' Gambas class file

Inherits NagatoSignal

Public Sub _$rootMenu As Menu

Public Sub _AddMenu(argText As String, argTag As Integer, Optional argIconName As String)
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "ContextMenu"
    
    With yukiMenu
        .Text = argText
        .Tag = argTag
        If argIconName Then .Picture = MikuruIcon.Get(argIconName)
    End With
    
End

Public Sub PopUp()
    
    Me._$rootMenu.Popup()
    
End
