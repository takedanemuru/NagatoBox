' Gambas class file

Inherits NagatoSignal

Public Enum MenuAdd, MenuRemove

Private $container As Container

Private Sub initalizeAddButton()
    
    Dim yukiButton As New Button($container) As "Button"
    
    With yukiButton
        .Text = ("Add")
        .AutoResize = True
        .Picture = MikuruIcon.Get("toggle-expand-alt")
        .Border = False
        .Tag = Me.MenuAdd
    End With
    
End

Private Sub initalizeRemoveButton()
    
    Dim yukiButton As New Button($container) As "Button"
    
    With yukiButton
        .Text = ("Remove")
        .AutoResize = True
        .Picture = MikuruIcon.Get("toggle-collapse-alt")
        .Border = False
        .Tag = Me.MenuRemove
    End With
    
End

Public Sub _new(argContainer As Container)
    
    $container = argContainer
    initalizeAddButton()
    initalizeRemoveButton()
    
End

Public Sub Button_Click()
    
    Raise Signal(Last.Tag, [""])
    
End
