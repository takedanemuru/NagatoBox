' Gambas class file

Create Static

Property Delay As Integer

Private $timer As Timer

Event Timer

Public Sub Activate()
    
    $timer = New Timer As "Timer"
    
    With $timer
        .Delay = 1000
        .Enabled = True
    End With
    
End

Public Sub Stop()
    
    $timer.Stop()
    
End

Public Sub Timer_Timer()
    
    Raise Timer
    
End

Private Function Delay_Read() As Integer

    Return $timer.Delay

End

Private Sub Delay_Write(Value As Integer)

    $timer.Delay = Value

End
