' Gambas class file

Create Static

Public Sub AddFiles()
    
    Dialog.Title = ("AddMusicFiles")
    Dialog.Path = NagatoSettingsMusic.Directory
    
    If Not Dialog.OpenFile(True) Then
        NagatoMusicQueue.AddFile(Dialog.Paths)
        NagatoSettingsMusic.Directory = File.Dir(Dialog.Paths[0])
    Endif
    
End

Public Sub AddDirectory()
    
    Dialog.Title = ("AddMusicDir")
    Dialog.Path = NagatoSettingsMusic.Directory
    
    If Not Dialog.SelectDirectory() Then
        If Dialog.Path = User.Home Then
            HaruhiBalloon.SetText("That's silly...")
            Return
        Endif
        NagatoMusicQueue.AddDirectory(Dialog.Path)
        NagatoSettingsMusic.Directory = File.Dir(Dialog.Path)
    Endif
    
End

Public Sub Clear()
    
    NagatoMusicQueue.Clear()
    
End

