' Gambas class file

Inherits NagatoMenu

Private Sub addPositionsMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) 
    Dim yukiPositionsMenu As New NagatoOSDPositionsMenu(yukiMenu)
    
    With yukiMenu
        .Text = ("Position")
    End With
    
End

Private Sub addOnScreenClockMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "Menu"
    
    With yukiMenu
        .Text = ("Clock")
        .Picture = Me._GetCheckedIcon(Not NagatoOSDClock.Closed)
        .Tag = NagatoOSDClock
    End With
    
End

Private Sub addOnScreenWeatherForecastMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "Menu"
    
    With yukiMenu
        .Text = ("Weather")
        .Picture = Me._GetCheckedIcon(Not NagatoOSDWeather.Closed)
        .Tag = NagatoOSDWeather
    End With
    
End

