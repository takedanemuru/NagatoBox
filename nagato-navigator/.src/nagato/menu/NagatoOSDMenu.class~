Public Sub _InitializeMenu() ' override
    
    addPositionsMenu()
        MikuruMenuSeparator.Set(Me._$rootMenu)
    addOnScreenClockMenu()
    addOnScreenWeatherForecastMenu()
    addOnScreenMusicMenu()
    'addOnScreenRadioMenu()
    addOnScreenRssMenu()
    addOnScreenBatteryMenu()
    addOnScreenSystemMenu()
    addOnScreenNetworkMenu()
    addOnScreenTrashBinMenu()
    addOnScreenGMailMenu()
    
End

Public Sub Menu_Click()
    
    Dim yukiOSD As Object = Last.Tag
    
    With yukiOSD
        If .Closed Then
            .Show()
        Else
            .Close()
        Endif
    End With
    
    NagatoOSD.Sort()
    
End
