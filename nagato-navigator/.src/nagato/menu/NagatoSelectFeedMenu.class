' Gambas class file

Inherits NagatoMenu

Event Selected(argFeedIndex As Integer)

Public Sub _InitializeMenu() 'override
    
    Dim yukiCount As Integer
    Dim yukiMenu As Menu
    
    For yukiCount = 0 To NagatoRss.Max
        yukiMenu = New Menu(Me._$rootMenu) As "Menu"
        yukiMenu.Text = NagatoRss.GetFeed(yukiCount).GetTitle(0)
        yukiMenu.Picture = MikuruMonoIconBlue.Get("feed-document", 16)
        yukiMenu.Tag = yukiCount
    Next
    
End

Public Sub Menu_Click()
    
    Raise Selected(Last.Tag)
    
End
