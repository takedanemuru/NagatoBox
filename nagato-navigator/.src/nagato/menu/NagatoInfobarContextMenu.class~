' Gambas class file

Create Private

Public _$rootMenu As Menu
Public _$optionalVariable As Variant

Public Sub _Initialize() ' This method is virtual, adn MUST BE overridden.
    
    
    
End

Public Sub PopUp()
    
    If Not Object.IsValid(Me._$rootMenu) Then Return
    
    Me._$rootMenu.Popup()
    
End

Public Sub _new(Optional argOptianlVariable As Variant)
    
    Me._$rootMenu = New Menu(HaruhiInfoBar2)
    If argOptianlVariable Then Me._$optionalVariable = argOptianlVariable
    Me._Initialize()
    
End



