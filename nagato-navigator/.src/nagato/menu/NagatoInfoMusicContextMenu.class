Inherits NagatoInfobarContextMenu

Private Sub addPlayMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "Menu"
    
    With yukiMenu
        .Text = ("Play")
        .Picture = MikuruMonoIconBlue.Get("button-play", 2 * MikuruUX.Grid)
        .Tag = "Play"
    End With
    
End

Private Sub addPauseMenu()
    
