Inherits NagatoDynamicSubMenu

Private Sub addPositionMenu(argText As String, argTag As Integer)
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "PositionMenu"
    
    With yukiMenu
        .Text = argText
        .Tag = argTag
        If .Tag = NagatoSettingsOSD.Positions Then .Picture = MikuruMonoIconBlue.Get("button-check")
    End With
    
End

Public Sub _RefreshMenu() ' override
    
    With NagatoSettingsOSD
        addPositionMenu(("Left side"), .LeftSide)
        addPositionMenu(("Right side"), .RightSide)
        addPositionMenu(("Free"), .FreePosition)
    End With
    
End

Public Sub PositionMenu_Click()
    
    NagatoSettingsOSD.Positions = Last.Tag
    NagatoOSDManeuver.Sort()
    
End
