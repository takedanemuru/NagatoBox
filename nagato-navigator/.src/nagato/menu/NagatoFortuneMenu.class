' Gambas class file

Inherits NagatoMenu

Public Sub _InitializeMenu() 'override
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "FortuneMenu"
    
    With yukiMenu
        .Picture = Picture["super-mono/basic/blue/magic-wand.png"]
        .Text = ("Fortune")
    End With
    
End

Public Sub FortuneMenu_Click()
    
    Dim yukiOutput As String
    
    Shell "fortune" To yukiOutput
    yukiOutput = Replace$(yukiOutput, "\t", "  ")
    
    HaruhiBalloon.TextAreaText = yukiOutput
    
End
