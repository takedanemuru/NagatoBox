' Gambas class file

Inherits NagatoSettings

Property Read CommandHistory As String[]

Private Const HistoryMax As Integer = 20

Public Sub PushCommand(argCommand As String)
    
    Dim yukiHistory As String[] = Me.CommandHistory
    
    If yukiHistory.Exist(argCommand) Then yukiHistory.Remove(yukiHistory.Find(argCommand))
    yukiHistory.Add(argCommand, 0)
    If yukiHistory.Count > HistoryMax Then yukiHistory = yukiHistory.Extract(HistoryMax, -1)
    
    Me._$settings["command/history"] = yukiHistory
    Me._$settings.Save()
    
End

Private Function CommandHistory_Read() As String[]

    Return Me._$settings["command/history", [""]]

End
