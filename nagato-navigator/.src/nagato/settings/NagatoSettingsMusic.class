Public Function GetQueue() As String[]
    
    Return Me._$settings["music/queue", Null]
    
End

Public Sub SetQueue(argQueue As String[])
    
    Me._$settings["music/queue"] = argQueue
    Me._$settings.Save()
    
End

Private Function DoesShuffle_Read() As Boolean

    Return Me._$settings["playback/shuffle", False]

End

Private Sub DoesShuffle_Write(Value As Boolean)

    Me._$settings["playback/shuffle"] = Value
    Me._$settings.Save()

End

Private Function DoesRepeat_Read() As Boolean

    Return Me._$settings["playback/repeat", False]

End

Private Sub DoesRepeat_Write(Value As Boolean)

    Me._$settings["playback/repeat"] = Value
    Me._$settings.Save()

End

Private Function SoutwareVolume_Read() As Float

    Return Me._$settings["playback/softwarevolume", 0.5]

End

Private Sub SoutwareVolume_Write(Value As Float)

    Me._$settings["playback/softwarevolume"] = Value
    Me._$settings.Save()

End

