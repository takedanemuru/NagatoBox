' Gambas class file

Inherits NagatoInfo

Public Sub DrawInfo(argOffsetLeft As Integer)
    
    Dim yukiFont As New Font
    Dim yukiClockText As String = Format$(Now, ("hh:nn:ss AM/PM"))
    
    yukiFont.Size = 10
    Paint.Font = yukiFont
    Me._$width = yukiFont.TextWidth(yukiClockText) + argOffsetLeft
    Paint.DrawText(yukiClockText, Desktop.W - Me._$width, 0, Me._$width, 2 * MikuruUX.Grid, Align.Left)
    Paint.Fill()
    
End

Public Sub _SetType()
    
    Me._$type = NagatoInfo.Clock
    
End
