Inherits NagatoObject

Public _$container As Container

Public Sub _AddButton(argText As String, argTag As Integer, Optional argIcon As Picture)
    
    Dim yukiButton As New MenuButton(Me._$container) As "MenuButton"
    
    With yukiButton
        .Tooltip = argText
        .Tag = argTag
        .Border = False
        .AutoResize = True
        .Arrow = False
        If argIcon Then .Picture = argIcon
    End With
    
End

Public Sub _OnInitializeButtons()
    
    
End

Public Sub _new(argParentContainer As Container)
    
    Me._$container = argParentContainer
    Me._OnInitializeButtons()
    
End

Public Sub MenuButton_Click()
    
    Raise Signal(Last.Tag, Null)
    
End
