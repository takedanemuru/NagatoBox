' Gambas class file

Private $imageView As NagatoImageView
Private $menuPanel As NagatoMenuPanel

Public Sub _new()
    
    $imageView = New NagatoImageView(VBox1) As "ImageView"
    $menuPanel = New NagatoMenuPanel(VBox1) As "MenuPanel"
    
End

Public Sub Form_Open()
    
    Application.MainWindow = Me
    NagatoSettings.LoadFormSettings(Me)
    
End

Public Sub Form_Close()
    
    NagatoSettings.SaveFormSettings(Me)
    
End

Public Sub MenuPanel_Signal(argSignal As Integer, argValues As Variant[])
    
    Select Case argSignal
        Case MikuruSignal.FileNone To MikuruSignal.ZoomNone + 999
            $imageView(argSignal, argValues)
    End Select
    
End

