Inherits NagatoMenuPipe

Public _$container As Container
Public _$button As MenuButton
Public _$tag As Integer

Public Sub _Initialize()
    
    
    
End

Public Sub _new(argContainer As Container, argTag As Integer, Optional argText As String, Optional argIconName As String)
    
    Me._$container = argContainer
    Me._$tag = argTag
    
    Me._$button = New MenuButton(Me._$container) As "MenuButton"
    
    With Me._$button
        .AutoResize = True
        .Arrow = False
        .Border = False
        If argText Then .Text = argText
        If argIconName Then .Picture = MikuruIcon.Get(argIconName)
    End With
    
    Me._Initialize()
    
End

Public Sub MenuButton_Click()
    
    Raise MenuEvent(Me._$tag)
    
End
