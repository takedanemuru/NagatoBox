Private $rootMenu As Menu

Private Sub initializeRootMenu(argMenuName As String)
    
    $rootMenu = New Menu(HaruhiMain)
    
    With $rootMenu
        .Name = argMenuName
    End With
    
End

Private Sub addMenu(argText As String, argTag As Integer, Optional argIconName As String)
    
    Dim yukiMenu As New Menu($rootMenu) As "MenuItem"
    
    With yukiMenu
        .Text = argText
        .Tag = argTag
        .Picture = MikuruIcon[argIconName]
    End With
    
End

Public Sub _new(argMenuName As String)
    
    initializeRootMenu(argMenuName)
    
    addMenu("About", 0, "information-balloon")
    addMenu("Quit", 1, "button-power")
    
End

Public Sub MenuItem_Click()
    
    Select Case Last.Tag
        Case 0
            HaruhiAbout.ShowDialog()
        Case 1
            HaruhiMain.Close()
    End Select
    
End
