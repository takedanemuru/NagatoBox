Private $timer As New Timer As "Timer"
Private $menuPanel As NagatoContainerSystemMenuPanel
Private $systemGraph As NagatoSystemGraph
Private $systemGrids As NagatoGridsProcess

Private Sub initializeUserInterface()
    
    $systemGraph = New NagatoSystemGraph(MainContainer)
    $menuPanel = New NagatoContainerSystemMenuPanel(MainContainer)
    $systemGrids = New NagatoGridsProcess(MainContainer)
    
End

Public Sub Form_Open()
    
    NagatoObserverFacade.Activated = True
    initializeUserInterface()
    
    $timer.Start()
    
End

Public Sub Form_Close()
    
    NagatoObserverFacade.Activated = False
    NagatoSettings.SaveFormSettings(Me)
    
End

Public Sub Timer_Timer()
    
    $systemGraph.Refresh()
    $menuPanel.Refresh()
    $systemGrids.Refresh()
    
End
