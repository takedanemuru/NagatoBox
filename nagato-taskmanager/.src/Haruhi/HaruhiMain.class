Private $timer As New Timer As "Timer"
Private $tabProcesses As NagatoTabProcesses
Private $tabNetwork As NagatoTabNetwork

Public Sub Form_Open()
    
    NagatoObserverFacade.Activated = True
    NagatoNetworkLoad.Start()
    $tabProcesses = New NagatoTabProcesses(ProcessesContainer)
    $tabNetwork = New NagatoTabNetwork(NetworkContainer)
    
    $timer.Start()
    
End

Public Sub Form_Close()
    
    NagatoObserverFacade.Activated = False
    NagatoSettings.SaveFormSettings(Me)
    
End

Public Sub Timer_Timer()
    
    Select Case MainTabStrip.Index
        Case 0
            $tabProcesses.Tick()
        Case 1
            $tabNetwork.Tick()
    End Select
    
End
