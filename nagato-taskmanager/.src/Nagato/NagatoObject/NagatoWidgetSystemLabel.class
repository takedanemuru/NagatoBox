Inherits NagatoWidget

Private $label As Label

Private Function getText() As String
    
    Dim yukiText As String = Space$(2)
    
    yukiText &= Format$(NagatoObserverFacade.CpuUsage, " CPU: ##0.00%,   ")
    yukiText &= Format$(NagatoObserverFacade.MemoryUsage, " Memory: ##0.00%,   ")
    yukiText &= Format$(NagatoObserverFacade.SwapUsage, " Swap: ##0.00%,   ")
    yukiText &= Format$(NagatoObserverFacade.ProcessCount, " Processes: ###0")
    
    Return yukiText
    
End

Public Sub Refresh()
    
    $label.Text = getText()
    
End

Public Sub _OnInitializeWidget()
    
    $label = New Label(Me._$container)
    
    With $label
        .Expand = True
        .Background = Me._$container.Background
        .Foreground = Color.White
    End With
    
End
