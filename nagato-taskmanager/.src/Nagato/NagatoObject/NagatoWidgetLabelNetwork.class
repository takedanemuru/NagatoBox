Inherits NagatoWidget

Private $label As Label

Private Function getText() As String
    
    Dim yukiText As String = Space$(2)
    
    yukiText &= Format$(NagatoNetworkLoad.TransmitBps, "Up: 0.00 bps,   ")
    yukiText &= Format$(NagatoNetworkLoad.TransmitTotal, "Up Total: 0.00 bit,   ")
    yukiText &= Format$(NagatoNetworkLoad.ReceiveBps, "Down: 0.00 bps,   ")
    yukiText &= Format$(NagatoNetworkLoad.ReceiveTotal, "Down Total: 0.00 bit,   ")
    
    Return yukiText
    
End

Public Sub Refresh()
    
    $label.Text = getText()
    
End

Public Sub _OnInitializeWidget()
    
    $label = New Label(Me._$container)
    
    With $label
        .Expand = True
        .Background = Me._$container.Background
        .Foreground = Color.White
    End With
    
End
