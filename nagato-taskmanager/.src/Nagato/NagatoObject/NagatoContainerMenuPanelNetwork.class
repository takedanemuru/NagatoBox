Inherits NagatoContainer

Private $hBox As HBox
Private $systemLabel As NagatoWidgetLabelNetwork
Private $starButton As NagatoStarButton

Public Sub _OnInitializeContainer()
    
    $hBox = New HBox(Me._$parentContainer)
    
    With $hBox
        .H = 28
        .Background = 12570623
    End With
    
End

Public Sub _OnInitializeChildren()
    
    $systemLabel = New NagatoWidgetLabelNetwork($hBox)
    $starButton = New NagatoStarButton($hBox) 
    
End

Public Sub Refresh()
    
    $systemLabel.Refresh()
    
End
