' Gambas class file

Inherits NagatoPainterHistoryLines

Public Function _OnGetY(argUsage As Float) As Integer
    
    Dim yukiUsageInInteger As Integer = ((argUsage / NagatoNetworkLoad.Max) * 100)
    
    Return Me.GraphHeight - yukiUsageInInteger + Me.BottomMargin
    
Catch
    Return Me.GraphHeight + Me.BottomMargin
    
End

Public Sub _OnPaint() ' override

    If 3 > NagatoNetworkLoad.ReceiveBpsHistory.Max Then Return
    
    Me._OnPaintLine(Color.Red, NagatoNetworkLoad.TransmitBpsHistory)
    Me._OnPaintLine(Color.Blue, NagatoNetworkLoad.ReceiveBpsHistory)
    
End
