' Gambas class file

Inherits NagatoPainterHistoryLines

Public Function _OnGetY(argUsage As Float) As Integer
    
    Dim yukiUsageInInteger As Integer = (argUsage * 100)
    
    Return Me.GraphHeight - yukiUsageInInteger + Me.BottomMargin
    
End

Public Sub _OnPaint() ' override

    If 3 > NagatoObserverFacade.CpuHistory.Count Then Return
    
    Me._OnPaintLine(Color.Red, NagatoObserverFacade.CpuHistory)
    Me._OnPaintLine(Color.Blue, NagatoObserverFacade.MemoryHistory)
    Me._OnPaintLine(Color.Green, NagatoObserverFacade.SwapHistory)
    
End
