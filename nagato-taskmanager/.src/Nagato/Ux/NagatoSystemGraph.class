Inherits NagatoWidget

Private $drawingArea As DrawingArea
Private $observer As Observer
Private $screen As NagatoPainterScreen
Private $lines As NagatoPainterHistoryLines

Public Sub _OnInitializeWidget()
    
    $drawingArea = New DrawingArea(Me._$container)
    $drawingArea.H = 120
    
    $observer = New Observer($drawingArea) As "Asakura"
    $screen = New NagatoPainterScreen($drawingArea)
    $lines = New NagatoPainterHistoryLines($drawingArea)
    
End

Public Sub Refresh()
    
    $drawingArea.Refresh()
    
End

Public Sub Asakura_Draw()
    
    Paint.Begin($drawingArea)
        $screen.Paint()
        $lines.Paint()
    Paint.End()
    
End
