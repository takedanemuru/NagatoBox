Private $sortAscend As Boolean = False
Private $targetHeader As New NagatoSystemGridsTargetHeader

Private Function isLesser(argGridData As Variant, argRowData As Variant) As Boolean
    
    If $sortAscend Then
        Return (argGridData > argRowData)
    Else
        Return (argRowData > argGridData)
    Endif
    
End

Public Function Compare(argCollectionA As Collection, argCollectionB As Collection) As Boolean
    
    Return isLesser(argCollectionA[$targetHeader.Current], argCollectionB[$targetHeader.Current])
    
End

Public Sub SwitchSort(argColumnIndex As Integer)
    
    If $targetHeader.Index = argColumnIndex Then
        $sortAscend = Not $sortAscend
    Else
        $targetHeader.Index = argColumnIndex
    Endif
    
End
