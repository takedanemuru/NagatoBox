Inherits NagatoPainter

Private Const GridLineWidth As Float = 0.1
Private Const GridLineStep As Integer = 25

Private $nagatoImage As Image

Private Sub paintGridLine()
    
    Dim yukiCount As Integer
    
    Me._SetLineProperties(Color.Gray, GridLineWidth)
        For yukiCount = Me.BottomMargin To Me.GraphHeight + Me.BottomMargin Step GridLineStep
            Paint.MoveTo(0, yukiCount)
            Paint.LineTo(Me._$drawingArea.W, yukiCount)
        Next
    Paint.Stroke()
    
End

Private Sub paintImage()
    
    Dim yukiScreen As New Image(Me._$drawingArea.W, Me._$drawingArea.H, Color.White + 16777216 * 128)
    
    Paint.DrawImage($nagatoImage, 0, -172)
    Paint.DrawImage(yukiScreen, 0, 0)
    
End

Public Sub Paint()
    
    paintImage()
    paintGridLine()
    
End

Public Sub _new(argDrawingArea As DrawingArea)
    
    Me._$drawingArea = argDrawingArea
    $nagatoImage = Image.Load("Pictures/yukisamishen.png")
    
End
