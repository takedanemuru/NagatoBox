' Gambas class file

Private $button As MenuButton

Public Sub _new(argContainer As Container)
    
    Dim yukiMenu As NagatoStarMenu
    
    $button = New MenuButton(argContainer)
    
    With $button
        .W = argContainer.H
        .AutoResize = False
        .Text = ""
        .Arrow = False
        .Picture = MikuruIcon.Get("star")
        .Border = False
    End With
    
    yukiMenu = New NagatoStarMenu($button)
    
End
