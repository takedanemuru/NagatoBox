Create Static 

Private Sub drawFootPrint(argX As Integer, argY As Integer)
    
    Draw.Picture(Picture["pictures/footprint.png"], argX, argY)
    
End

Public Sub Draw(argEngine As Object)
    
    Draw.Picture(NekomimiPictures.Get(argEngine.HourTen), 50, 50)
    Draw.Picture(NekomimiPictures.Get(argEngine.HourOne), 100, 50)
    drawFootPrint(150, 55)
    drawFootPrint(150, 95)
    Draw.Picture(NekomimiPictures.Get(argEngine.MinuteTen), 200, 50)
    Draw.Picture(NekomimiPictures.Get(argEngine.MinuteOne), 250, 50)
    drawFootPrint(300, 55)
    drawFootPrint(300, 95)
    Draw.Picture(NekomimiPictures.Get(argEngine.SecondTen), 350, 50)
    Draw.Picture(NekomimiPictures.Get(argEngine.SecondOne), 400, 50)
    
End
