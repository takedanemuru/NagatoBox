' Gambas class file

Public Sub Added(argMessage As String)
    
    Exec ["notify-send", "-a", "dataovermind-disks", "-u", "normal", (argMessage)]
    
End

Public Sub Removed(argDisk As String)
    
    Dim yukiMessage As String = Subst$("&1 unmounted.", argDisk)
    
    Exec ["notify-send", "-a", "dataovermind-disks", "-u", "normal", Quote(yukiMessage)]
    
End
