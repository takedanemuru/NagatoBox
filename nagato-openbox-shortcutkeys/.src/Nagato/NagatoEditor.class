Inherits NagatoObject

Private $hbox As NagatoHBox
Private $label As NagatoLabel
Private $userInput As NagatoUserInput

Public Sub Edit(argXmlElement As XmlElement)
    
    Dim yukiAction As String = MikuruAction.GetAction(argXmlElement)

    $hbox.Refresh(yukiAction)
    
    If $hbox.Container.H = 0 Then Return

    $userInput.Refresh(argXmlElement)
    $label.Refresh(argXmlElement.Name)
    
End

Public Sub _new(argContainer As Container)
    
    $hbox = New NagatoHBox(argContainer)
    $label = New NagatoLabel($hbox.Container)
    $userInput = New NagatoUserInput($hbox.Container) As "TFEI"
    
End
