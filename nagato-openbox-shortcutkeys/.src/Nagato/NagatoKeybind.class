Inherits NagatoNodeIntermediate

Private Sub setKeyBinds(argXmlElements As XmlElement[])
    
    If argXmlElements.Count > 1 Then Me._SetChildren(argXmlElements.Copy(1, argXmlElements.Max))
    
End

Public Sub _OnInitialize(argXmlElement As XmlElement)
    
    Me._$text = argXmlElement.GetAttribute("key")
    Me._$columnView.Add(Me._$key, Me.Text, MikuruIcon["keyboard"], Me._$parentKey)
    setKeyBinds(argXmlElement.GetChildrenByTagName("keybind",, 2))
    Me._SetChildren(argXmlElement.GetChildrenByTagName("action",, 2))
    
End

Public Sub _OnGetText() As String

    Return MikuruKeybindText.GetReadableText(Me._$text)

End
