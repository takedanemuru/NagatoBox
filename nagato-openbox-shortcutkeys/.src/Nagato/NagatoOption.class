' Gambas class file

Inherits NagatoNode

Private $propertyKey As String
Private $value As Variant

Private Sub getIcon() As Picture
    
    Return MikuruIcon["information-balloon"]
    
End

Public Sub _OnInitialize(argXmlElement As XmlElement)
    
    Me._$xmlElement = argXmlElement
    
    $propertyKey = argXmlElement.Name
    $value = MikuruSanitize.Clean(argXmlElement.Value, [" ", "\t", "\n"])
    
    Me._$columnView.Add(Me._$key, $propertyKey, getIcon(), Me._$parentKey)
    Me._$columnView[Me._$key][1] = Space(2) & $value
    
End

Public Sub GetChild(argKey As Integer) As XmlElement
    
    If argKey = Me._$key Then Return Me._$xmlElement
    
    Return Null
    
End
