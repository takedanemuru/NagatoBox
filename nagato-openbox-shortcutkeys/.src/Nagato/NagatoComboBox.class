Inherits NagatoObject

Private $comboBox As ComboBox

Public Sub Hide()
    
    $comboBox.Visible = False
    
End

Public Sub Reset(argList As String[], argCurrentValue As String)
    
    $comboBox.Visible = True
    
    Object.Lock($comboBox)
        $comboBox.List = argList
        Try $comboBox.Index = $comboBox.List.Find(argCurrentValue)
    Object.Unlock($comboBox)
    
End

Public Sub _new(argContainer As Container)
    
    $comboBox = New ComboBox(argContainer) As "ComboBox"

    With $comboBox
        .List = ["foo", "bar", "baz"]
        .ReadOnly = True
        .Expand = True
    End With
    
End

Public Sub ComboBox_Click()
    
    Raise Signal(MikuruSignal.ValueChanged, [$comboBox.Text])
    
End
