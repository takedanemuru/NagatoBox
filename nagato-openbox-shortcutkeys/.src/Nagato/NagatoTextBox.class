Inherits NagatoObject

Private $textBox As TextBox

Public Sub Hide()
    
    $textBox.Visible = False
    
End

Public Sub Reset(argValue As String)
    
    $textBox.Visible = True
    $textBox.Text = argValue
    
End

Public Sub _new(argContainer As Container)
    
    $textBox = New TextBox(argContainer) As "TextBox"
    
    With $textBox
        .Expand = True
        .Visible = False
    End With
    
End

Public Sub TextBox_Activate()
    
    Raise Signal(MikuruSignal.ValueChanged, [$textBox.Text])
    
End
