' Gambas class file

Property Read Max As Integer

Private $xmlDocument As New XmlDocument
Private $keybinds As New NagatoKeybind[]

Private Sub readKeybindElements(argXmlElements As XmlElement[])
    
    Dim yukiElement As XmlElement
    Dim yukiKeybind As NagatoKeybind
    
    For Each yukiElement In argXmlElements
        yukiKeybind = New NagatoKeybind(yukiElement)
        $keybinds.Add(yukiKeybind)
    Next
    
End

Public Sub _get(argIndex As Integer) As NagatoKeybind
    
    Return $keybinds[argIndex]
    
End

Public Sub _new()
    
    $xmlDocument.Open(Desktop.ConfigDir &/ "NagatoBox/nagatobox-rc.xml")
    readKeybindElements($xmlDocument.GetElementsByNamespace("keybind"))
    
End

Private Function Max_Read() As Integer

    Return $keybinds.Max

End
