' Gambas class file

Inherits NagatoMenuButton

Public Sub Show()
    
    Me._$menuButton.Visible = True
    
End

Public Sub _OptionalInitializeMenuButton(argContainer As Container)
    
    With Me._$menuButton
        .Picture = MikuruIcon["hard-drive-download"]
        .Visible = False
        .Tooltip = ("Save")
    End With
    
End

Public Sub MenuButton_Click()
    
    Raise Signal(MikuruSignal.FileSave, Null)
    
End
