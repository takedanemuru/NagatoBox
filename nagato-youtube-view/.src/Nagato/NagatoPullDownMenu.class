Inherits NagatoObject

Public _$rootMenu As Menu

Private Sub initializeRootMenu(argMenuName As String)
    
    Me._$rootMenu = New Menu(HaruhiMain) As "RootMenu"

    With Me._$rootMenu
        .Name = argMenuName
    End With
    
End

Public Sub _AddMenuItem(argText As String, argTag As Integer, Optional argIcon As String)
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "MenuItem"
    
    With yukiMenu
        .Text = argText
        .Tag = argTag
        If argIcon Then .Picture = MikuruIcon[argIcon]
    End With
    
End

Public Sub _OnInitializeChildMenus()
    
    
    
End

Public Sub _new(argMenuName As String)
    
    initializeRootMenu(argMenuName)
    Me._OnInitializeChildMenus()
    
End

Public Sub MenuItem_Click()
    
    Raise Signal(Last.Tag, Null)
    
End
