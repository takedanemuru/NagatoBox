Inherits NagatoWidget

Private $hBox As NagatoHBox
Private $playButton As NagatoMenuButtonPlay
Private $textArea As NagatoLabel
Private $downloadButton As NagatoMenuButtonDownload
Private $starButton As NagatoMenuButtonStar

Public Sub _OnCall(argSignal As Integer, argValues As Variant[])
    
    Select Case argSignal
        Case MikuruSignal.WebViewLoaded
            $playButton(argSignal, argValues)
            $downloadButton(argSignal, argValues)
        Case MikuruSignal.DownloaderNone To MikuruSignal.DownloaderNone + 999
            $textArea(argSignal, argValues)
    End Select
    
End

Public Sub _OnInitialize()
    
    $hBox = New NagatoHBox(Me._$container)
    $playButton = New NagatoMenuButtonPlay($hBox.Container) As "TFEI"
    $textArea = New NagatoLabel($hBox.Container) 
    $downloadButton = New NagatoMenuButtonDownload($hBox.Container) As "TFEI"
    $starButton = New NagatoMenuButtonStar($hBox.Container) As "TFEI"
    
End
