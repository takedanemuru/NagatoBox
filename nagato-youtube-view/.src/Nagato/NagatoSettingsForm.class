' Gambas class file

Inherits NagatoSettings

Public Sub Load(argForm As Form)
    
    argForm.X = Me._$settings[Subst("Form_&1/x", argForm.Name), argForm.X]
    argForm.Y = Me._$settings[Subst("Form_&1/y", argForm.Name), argForm.Y]
    argForm.H = Me._$settings[Subst("Form_&1/h", argForm.Name), argForm.H]
    argForm.W = Me._$settings[Subst("Form_&1/w", argForm.Name), argForm.W]
    argForm.Maximized = Me._$settings[Subst("Form_&1/maximized", argForm.Name), argForm.Maximized]
    
End

Public Sub Save(argForm As Form)
    
    Me._$settings[Subst("Form_&1/x", argForm.Name)] = argForm.X
    Me._$settings[Subst("Form_&1/y", argForm.Name)] = argForm.Y
    Me._$settings[Subst("Form_&1/h", argForm.Name)] = argForm.H
    Me._$settings[Subst("Form_&1/w", argForm.Name)] = argForm.W
    Me._$settings[Subst("Form_&1/maximized", argForm.Name)] = argForm.Maximized
    
End
