' Gambas class file

Create Static

Export

Public Function GetList() As String[]
    
    Dim yukiPath As String
    Dim yukiResult As New String[]
    
    For Each yukiPath In Dir("Icons").Sort()
        yukiResult.Add(File.BaseName(yukiPath))
    Next
    
    Return yukiResult
    
End

Public Function Get(argName As String, Optional argSize As Integer = 16) As Picture
    
    Return Image.Load(Subst$("Icons/&1.png", argName)).Stretch(argSize, argSize).Picture
    
Catch
    Return Null
    
End
