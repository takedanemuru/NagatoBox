' Gambas class file

Create Static

Property Read DataDirectory As String
Property Read SoundsDirectory As String

Private Sub ensureDirectories()
    
    If Not Exist(Me.DataDirectory) Then Mkdir Me.DataDirectory
    If Not Exist(Me.SoundsDirectory) Then Mkdir Me.SoundsDirectory
    
End

Private Sub ensureSoundData()
    
    Dim yukiPath As String
    
    For Each yukiPath In Dir("/usr/share/nagato-ambient/sounds")
        If Exist(Me.SoundsDirectory &/ yukiPath) Then Continue
        Try Copy ("/usr/share/nagato-ambient/sounds" &/ yukiPath) To (Me.SoundsDirectory &/ yukiPath)
    Next
    
End

Public Sub Ensure()
    
    ensureDirectories()
    ensureSoundData()
    
End

Private Function DataDirectory_Read() As String

    Return User.Home &/ ".nagato-ambient"

End

Private Function SoundsDirectory_Read() As String

    Return Me.DataDirectory &/ "sounds"

End
