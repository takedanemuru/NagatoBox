' Gambas class file

Private $player As NagatoPlayer

Private Sub setIcon()
    
    Me.Title = "nagato-ambient: " & $player.Name
    
End

Public Sub Form_Open()

    Application.MainWindow = Me
    Me.Center()

    $player = New NagatoPlayer
    $player.Play()
    setIcon()

End

Public Sub NextButton_Click()

    $player.Next()
    setIcon()

End

Public Sub BackButton_Click()

    $player.Back()
    setIcon()

End

Public Sub Form_Close()

    $player.Kill()

End

Public Sub RandomButton_Click()

    $player.Random()
    setIcon()

End
