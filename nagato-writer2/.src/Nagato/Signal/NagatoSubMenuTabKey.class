' Gambas class file

Inherits NagatoSubMenu

Public Sub _AddChildMenus()
    
    Me._AddMenu("Tab", 0, IIf(NagatoSettings.TabSize = 0, "button-check", Null))
    Me._AddMenu("", 0)
    Me._AddMenu("2", 2, IIf(NagatoSettings.TabSize = 2, "button-check", Null))
    Me._AddMenu("4", 4, IIf(NagatoSettings.TabSize = 4, "button-check", Null))
    Me._AddMenu("8", 8, IIf(NagatoSettings.TabSize = 8, "button-check", Null))
    
End

Public Sub MenuItem_Click()
    
    NagatoSettings.TabSize = Last.Tag
    
End
