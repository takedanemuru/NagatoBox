' Gambas class file

Create Static

Property Read Path As String

Private $path As String

Private Sub setPath(argArgs As String[])
    
    Dim yukiIndex As Integer
    
    For yukiIndex = 0 To argArgs.Max
        If Not Exist(argArgs[yukiIndex]) Then Continue
        If DesktopMime.FromFile(argArgs[yukiIndex]).Type Not Begins "text" Then Continue
        $path = argArgs[yukiIndex]
        Break
    Next
    
End

Public Sub Parsing()
    
    Dim yukiArgs As String[]
    
    Args.Begin("usage: nagato-write /path/to/open")
    
    yukiArgs = Args.End()
    
    If yukiArgs.Count > 0 Then setPath(yukiArgs)
    
End

Private Function Path_Read() As String

    Return $path

End
