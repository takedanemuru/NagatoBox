' Gambas class file

Create Static

Public Function Get(argIndex As Integer) As Picture
    
    With MikuruMonoIconBlue
    
    Select Case argIndex
        Case 1 'Clear
            Return .Get("weather-sun")
        Case 2  'Fair (Few Cloud)
            Return .Get("weather-sun")
        Case 3  'Partly Cloudy
            Return .Get("weather-cloudy")
        Case 4  'Cloudy
            Return .Get("weather-clouds")
        Case 5  'Rain Showers
            Return .Get("weather-rain")
        Case 6  'Rain Showers with Thunder
            Return .Get("weather-thunder")
        Case 7  'Sleet Showers
            Return .Get("weather-snow")
        Case 8  'Snow Showers
            Return .Get("weather-snow")
        Case 9  'Rain
            Return .Get("umbrella")
        Case 10 'Heavy Rain
            Return .Get("umbrella")
        Case 11 'Rain and Thunder
            Return .Get("weather-thunder")
        Case 12 'Sleet
            Return .Get("weather-snow")
        Case 13 'Snow
            Return .Get("weather-snow")
        Case 14 'Snow with Thunder
            Return .Get("weather-thunder")
        Case 15 'Fog
            Return .Get("weather-clouds")
        Case 16 'Clear / Winter Darkness
            Return .Get("weather-sun")
        Case 17 'Partly Cloudy / Winter Darkness
            Return .Get("weather-cloudy")
        Case 18 'Rain Showers / Winter Darkness
            Return .Get("umbrella")
        Case 19 'Snow Showers / Winter Darkness
            Return .Get("weather-snow")
        Case 20 'Sleet Showers and Thunder
            Return .Get("weather-thunder")
        Case 21 'Snow Showers and Thunder
            Return .Get("weather-thunder")
        Case 22 'Rain Showers and Thunder
            Return .Get("weather-thunder")
        Case 23 'Sleet Showers and Thunder
            Return .Get("weather-thunder")
        Default 'Unknown
            Return .Get("question")
    End Select
    
    End With
    
End
