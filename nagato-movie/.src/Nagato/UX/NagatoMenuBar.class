Inherits NagatoObject

Private $playButton As NagatoMenuButtonPlay
Private $pauseButton As NagatoMenuButtonPause
Private $progressIndicator As NagatoProgressIndicator
Private $starButton As NagatoMenuButtonStar

Public Sub SetWidgetProperty(argPosition As Float, argDuration As Float)
    
    $progressIndicator.SetWidgetProperty(argPosition, argDuration)
    
End

Public Sub _new(argContainer As Container)
    
    Dim yukiHbox As New HBox(argContainer)
    
    yukiHbox.H = 24
    
    $playButton = New NagatoMenuButtonPlay(yukiHbox) As "TFEI"
    $pauseButton = New NagatoMenuButtonPause(yukiHbox) As "TFEI"
    $progressIndicator = New NagatoProgressIndicator(yukiHbox) As "TFEI"
    $starButton = New NagatoMenuButtonStar(yukiHbox) As "TFEI"
    
End
