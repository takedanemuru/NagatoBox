' Gambas class file

Private $api As New NagatoXkcdApi As "Api"

Public Sub Form_Open()

    $api.GetCurrent()

End

Public Sub Api_Finished()
    
    MainImageView.Image = $api.Image
    MainImageView.Tooltip = $api.Alt
    MainImageView.W = $api.Image.W
    MainImageView.H = $api.Image.H
    
    Me.Title = Subst$("(#&1)  &2", $api.Number, $api.SafeTitle)
    Me.Center()
    
End
