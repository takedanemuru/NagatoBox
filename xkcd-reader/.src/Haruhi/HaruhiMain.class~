' Gambas class file

Private $api As New NagatoXkcdApi As "Api"
Private $index As New NagatoComicIndex

Private Sub setImageView()
    
    With MainImageView
        .Image = $api.Image
        .Tooltip = $api.Alt
        .W = $api.Image.W
        .H = $api.Image.H
    End With
    
End

Private Sub setForm()
    
    With Me
        .Title = Subst$("(#&1)  &2", $api.Number, $api.SafeTitle)
        If .Closed Then .Show()
        '.Center() ' doesn't work correctlly. why ?
        Me.X = (Screen.W - Me.W) / 2
        Me.Y = (Screen.H - Me.H) / 2
    End With
    
End

Public Sub Start()

    $api.GetCurrent()

End

Public Sub Api_Finished()
    
    $index.Reset($api.Number)
    
    setImageView()
    setForm()
    Object.Unlock(MainImageView)
    
End

Public Sub MainImageView_DblClick()

    Object.Lock(MainImageView)

    $api.GetSelect($index.GetRandom())

End
