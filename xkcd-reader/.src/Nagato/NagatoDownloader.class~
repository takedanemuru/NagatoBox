' Gambas class file

Public _$buffer As String

Event Finished

Public Sub Get(argUrl As String)
    
    Dim yukiHttpClient As New HttpClient As "HttpClient"
    
    Me._$buffer = ""
    
    With yukiHttpClient
        .Async = True
        .Timeout = 30
        .URL = argUrl
        .Get()
    End With
    
End

Public Sub HttpClient_Read()
    
    Me._$buffer &= Read #Last, Lof(Last)
    
End
