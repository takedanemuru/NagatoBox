Inherits NagatoDownloader

Property Read ImageUrl As String
Property Read Number As Integer
Property Read SafeTitle As String
Property Read AlternativeTitle As String

Private $collection As Collection

Public Sub _SetData() ' override
    
    $collection = JSON.Decode(Me._$buffer)
    
End

Private Function ImageUrl_Read() As String

    Return $collection["img"]

End

Private Function Number_Read() As Integer

    Return $collection["num"]

End

Private Function SafeTitle_Read() As String

    Return $collection["safe_title"]

End

Private Function AlternativeTitle_Read() As String

    Return Replace$($collection["alt"], ".", ".\n")

End
