Inherits NagatoUxItem

Public _$gridView As GridView

Public Sub _InitializeGridView(argContainer As Container)
    
    Me._$gridView = New GridView(argContainer) As "GridView"

    With Me._$gridView
        .Expand = True
        .ScrollBar = Scroll.Vertical
        .Header = GridView.Horizontal
        .Grid = False
        .Mode = Select.Single
    End With
    
End

Public Sub _SetIcon(argColums As Integer, argRow As Integer, argIconName As String)
    
    Dim yukiRow As Integer
    
    For yukiRow = 0 To Me._$gridView.Rows.Max
        With Me._$gridView
            .[argRow, argColums].Picture = IIf(argRow = .Row, MikuruIcon[argIconName], Null)
        End With
    Next
    
End

Public Sub _SetBackGround()
    
    Dim yukiIndex As Integer
    
    For yukiIndex = 0 To Me._$gridView.Columns.Max
        Me._$gridView[Me._$gridView.Rows.Max, yukiIndex].Background = Color.Merge(Color.White, Color.Pink, 0.4)
    Next
    
End
