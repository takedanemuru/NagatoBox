Inherits NagatoUxItem

Private $toggleButton As MenuButton

Public Sub _Initialize(argContainer As Container)
    
    $toggleButton = New MenuButton(argContainer) As "ToggleButton"
    
    With $toggleButton
        .Expand = False
        .W = argContainer.H
        .Border = False
        .NoTabFocus = True
        .Arrow = False
        .Picture = MikuruIcon["question", 16]
        .Enabled = False 
    End With
    
End

Public Sub SetState(argState As Integer)
    
    $toggleButton.Enabled = True
    If Media.Playing = argState Then $toggleButton.Picture = MikuruIcon["button-pause", 16]
    If Media.Paused = argState Then $toggleButton.Picture = MikuruIcon["button-play", 16]
    
End

Public Sub ToggleButton_Click()
    
    Raise Signal(MikuruSignal.RequestToggle, Null)
    
End
