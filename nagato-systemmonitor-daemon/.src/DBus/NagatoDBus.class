' Gambas class file

Create Static

Property Read Proxy As DBusProxy

Public Const BusName As String = "org.gambas.nagato-systemmonitor-daemon"
Public Const ObjectPath As String = "/org/nagato/systemmonitor/daemon"
Public Const Interface As String = "org.gambas.nagato.systemmonitor.daemon.tfei"

Public Function Activated() As Boolean
    
    Return DBus.Session.Applications.Exist(Me.BusName)
    
End

Public Function IsUnique() As Boolean
    
    Return Not DBus.Session.Applications.Exist(Me.BusName)
    
End

Public Sub Register()
    
    DBus.Name = Me.BusName
    DBus.Unique = True
    DBus.Session.Register(TFEI, Me.ObjectPath)
    
End

Public Sub Unregister()
    
    DBus.Session.Unregister(TFEI)
    
End

Private Function Proxy_Read() As DBusProxy

    Return DBus[Me.BusName][Me.ObjectPath, Me.Interface]

End
