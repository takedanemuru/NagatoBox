' Gambas class file

Private $needsDots As Boolean
Private $baseText As String
Private $count As Integer

Public Function Get() As String
    
    Inc $count
    If Not $needsDots Then Return $baseText
    Return $baseText & String$($count Mod 5 + 1, ".")
    
End

Public Sub Reset(argBaseText As String, argNeedsDots As Boolean)
    
    $baseText = argBaseText
    $needsDots = argNeedsDots
    $count = 0
    
End
