Inherits NagatoMenuButton

Private Const MenuName As String = "MenuPlayWithMpv"

Public Sub _OnCall(argSignal As Integer, argValues As Variant[])
    
    Select Case argSignal
        Case MikuruSignal.WebViewLoaded
            Me._$menuButton.Visible = argValues[0]
    End Select
    
End

Public Sub _OptionalOnInitializeMenuButton()
    
    With Me._$menuButton
        .Picture = MikuruIcon["button-play"]
        .Tooltip = ("Play with mpv")
        .Visible = False
        .Menu = MenuName
    End With
    
End

Public Sub _OptionalOnInitializePulldownMenu()
    
    Dim yukiMenu As NagatoPullDownMenuPlayWithMpv
    
    yukiMenu = New NagatoPullDownMenuPlayWithMpv(MenuName) As "TFEI"
    
End
