' Gambas class file

Public Sub OpenWebView(argUrl As String)
    
    Me.Center()
    Me.Show()
    NagatoSettings.LoadFormSettings(Me)
    
    Try WebView1.Url = argUrl
    
End

Public Sub Form_Close()
    
    NagatoSettings.SaveFormSettings(Me)
    
End

Public Sub WebView1_Load()
    
    Me.Title = WebView1.Url
    
End

Public Sub WebView1_Link(argLink As String)
    
    If argLink = "" Then Return
    
    Me.Title = argLink
    
End
