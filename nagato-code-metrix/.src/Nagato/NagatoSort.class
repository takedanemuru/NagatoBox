Property Read Ascend As Boolean
Property Read TargetColumn As Integer

Private $ascend As Boolean 
Private $targetColumn As Integer 

Public Function IsLesser(argGridData As Variant, argRowData As Variant) As Boolean
    
    Return IIf($ascend, (argGridData > argRowData), (argRowData > argGridData))
    
Catch
    Return False
    
End

Public Sub SetTargetIndex(argIndex As Integer)
    
    If argIndex = $targetColumn Then
        $ascend = Not $ascend
    Else
        $targetColumn = argIndex
    Endif
    
End

Public Sub Reset()
    
    $targetColumn = -1
    $ascend = False
    
End

Private Function Ascend_Read() As Boolean

    Return $ascend

End

Private Function TargetColumn_Read() As Integer

    Return $targetColumn

End
