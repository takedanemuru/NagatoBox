Public _$grids As GridView

Public Sub _SetColumns(argIndex As Integer, argText As String, argWidth As Integer, argAlign As Integer)
    
    With Me._$grids.Columns[argIndex]
        .Text = argText
        .W = argWidth
        .Alignment = argAlign
    End With
    
End

Public Sub _SetRow(argColumnIndex As Integer, argText As String, Optional argAlign As Integer = Align.Right)
    
    Me._$grids[Me._$grids.Rows.Max, argColumnIndex].Text = argText
    Me._$grids[Me._$grids.Rows.Max, argColumnIndex].Alignment = argAlign
    
End

Public Sub _SetBackgroundColor(argColor As Integer)
    
    Dim yukiCount As Integer
    
    For yukiCount = 0 To Me._$grids.Columns.Max
        Me._$grids[Me._$grids.Rows.Max, yukiCount].Background = argColor
    Next
    
End

Public Sub _AbstractOnInitializeGridView()
    
    
    
End

Public Sub Clear()
    
    Me._$grids.Clear()
    Me._$grids.Rows.Count = 0
    
End

Public Sub _new(argGrids As GridView)
    
    Me._$grids = argGrids
    
    Me._AbstractOnInitializeGridView()
    
End
