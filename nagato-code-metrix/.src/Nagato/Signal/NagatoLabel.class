Inherits NagatoUxContainer

Private $hBox As HBox
Private $pictureBox As PictureBox
Private $label As TextLabel

Private Sub initializeHBox()
    
    $hBox = New HBox(Me._$parentContainer)
    
    With $hBox
        .H = 250
    End With
    
End

Private Sub initializePictureBox()
    
    $pictureBox = New PictureBox($hBox)
    
    With $pictureBox
        .W = 161
        .Stretch = True
        .Picture = Picture.Load("Pictures/looking_back.jpg")
    End With
    
End

Private Sub initializeLabel()
    
    $label = New TextLabel($hBox)
    
    With $label
        .Background = 16444890
        .Expand = True
        .Text = ("YUKI.N > Open Gambas3 project directory.")
        .Alignment = Align.Left
        .Padding = 16
        .Font.Size = 12
        .Foreground = 6179679
    End With
    
End

Public Sub SetText(argText As String)
    
    $label.Text = argText
    
End

Public Sub _initialize() ' virtual
    
    initializeHBox()
    initializePictureBox()
    initializeLabel()
    
End
