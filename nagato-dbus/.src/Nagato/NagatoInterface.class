Private $interface As String
Private $xml As XmlElement

Private Sub setMethods()
    
    Dim yukiElement As XmlElement
    Dim yukiMethod As NagatoMethod
    
    For Each yukiElement In $xml.GetChildrenByTagName("method")
        yukiMethod = New NagatoMethod($interface, yukiElement)
    Next
    
End

Private Sub setSignals()
    
    Dim yukiElement As XmlElement
    Dim yukiSignal As NagatoSignal
    
    For Each yukiElement In $xml.GetChildrenByTagName("signal")
        yukiSignal = New NagatoSignal($interface, yukiElement)
    Next
    
End

Private Sub setProperties()
    
    Dim yukiElement As XmlElement
    Dim yukiProperty As NagatoProperty
    
    For Each yukiElement In $xml.GetChildrenByTagName("property")
        yukiProperty = New NagatoProperty($interface, yukiElement)
    Next
    
End

Public Sub _new(argParent As String, argName As String, argXml As XmlElement)
    
    $interface = argParent & "_" & argName
    
    If Not HaruhiMain.TreeView1.Exist(argParent) Then
        HaruhiMain.TreeView1.Add($interface, argName)
    Else
        HaruhiMain.TreeView1.Add($interface, argName,, argParent)
    End If
    
    $xml = argXml
    
    setMethods()
    setSignals()
    setProperties()
    
End
