' Gambas module file

Public Enum InputNone, InputHere, InputOpen, InputMove, InputUp

Public Function Select(argMax As Integer) As Integer 'returns enum
    
    MikuruUserInput("YUKI.N > Where do you want to go ?")
    
    If MikuruUserInput.Has("here") Then Return Me.InputHere
    If MikuruUserInput.Has("up") Then Return Me.InputUp
    If MikuruUserInput.IsValidIndex(argMax) Then Return Me.InputMove
    
    Return Me.InputNone
    
End
