Property Read Count As Integer

Private $filter As New String[]

Public Function Matches(argQuery As String) As Boolean
    
    Dim yukiFilter As String
    
    For Each yukiFilter In $filter
        If argQuery Not Like Subst$("*&1*", Replace$(yukiFilter, "/", "")) Then Return False
    Next
    
    Return True
    
End

Public Sub Set(argFilters As String[])
    
    Dim yukiFilter As String
    Dim yukiKeywords As String[] = ["find", "match", "matches", "filter"]
    
    $filter.Clear()
    
    For Each yukiFilter In argFilters
        If yukiKeywords.Exist(yukiFilter) Then Continue
        $filter.Add(yukiFilter)
    Next
    
End

Public Sub Clear()
    
    $filter.Clear()
    
End

Private Function Count_Read() As Integer

    Return $filter.Count

End
