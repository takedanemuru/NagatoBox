Inherits NagatoFunction

Public Sub Show(Optional argValues As Variant[])
    
    If NagatoUserInput.Has("speak") Then
        Shell "fortune"
    Else If NagatoUserInput.CompleteMatch(["what", "time"]) Then
        Print Format$(Now(), ("hh:nn:ss"))
    Else If NagatoUserInput.CompleteMatch(["love", "you"]) Then
        Print "YUKI.N > No way."
    End If
    
End

