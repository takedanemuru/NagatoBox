' Gambas class file

Create Static

Public Enum HookNone, HookFiles, HookApplications, HookDictionary, HookRss

Private $apps As New NagatoApps
Private $dictionary As New NagatoDictionary
Private $files As New NagatoMove
Private $misc As New NagatoMisc
Private $rss As New NagatoRss

Private Sub catchCommand()
    
    NagatoUserInput.Catch("YUKI.N > Can you see this ?") 

    If NagatoUserInput.Include(["move", "file", "files"]) Then
        $files.Show([User.Home])
    Else If NagatoUserInput.Include(["app", "apps", "application", "applications", "launch"]) Then
        $apps.Show()
    Else If NagatoUserInput.Include(["dic", "dict", "dictionary"]) Then
        $dictionary.Show()
    Else If NagatoUserInput.Include(["rss", "news"]) Then
        $rss.Show()
    Else
        $misc.Show()
    End If

End

Private Sub catchApplicationArgument()
    
    If NagatoArguments.File Then
        $files.Show([User.Home])
    Else If NagatoArguments.App Then
        $apps.Show()
    Else
        catchCommand()
    Endif
    
End

Private Sub endlessEight()
    
    Dim yukiCount As Integer
    
    Do 
        Inc yukiCount
        If yukiCount = 1 Then catchApplicationArgument()
        If yukiCount > 1 Then catchCommand()
    Loop
    
End

Public Sub Show()
    
    endlessEight()
    
End
