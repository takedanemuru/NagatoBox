' Gambas class file

Create Static

Private Sub weatherTest()
    
    Dim yukiDownloader As New NagatoDownloader As "WeatherTest"
    Dim yukiApi As String = NagatoWeatherApi.Get(0, 0, 5)
    
    yukiDownloader.Download(yukiApi)
    
End

Public Sub Show()
    
    If MikuruUserInput.Has("speak") Then
        Print "YUKI.N > What ?"
    Else If MikuruUserInput.Has("weather") Then
        weatherTest()
    Else If MikuruUserInput.CompleteMatch(["what", "time"]) Then
        Print Format$(Now(), ("hh:nn:ss"))
    Else If MikuruUserInput.CompleteMatch(["love", "you"]) Then
        Print "YUKI.N > No way."
    End If
    
End

Public Sub WeatherTest_Finished(argData As String)
    
    Debug argData
    
End
