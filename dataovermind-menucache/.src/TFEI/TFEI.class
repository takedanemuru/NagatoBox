Inherits DBusObject

Create Static

Property Read Ready As String

Private $applications As NagatoApplicationCollection

Public Sub Stop() As Boolean
    
    NagatoDBus.Unregister()
    
    If Not Error Then Return True
    
Catch
    Return False
    
End

Public Sub GetApplicationsByCategory(argCategory As String) As Collection
    
    If Not NagatoMenuCache3.Ready Then Return Null
    
    NagatoMenuCache3.GetApplications(argCategory)
    
Catch
    Return Null
    
End

Public Sub GetApplicationPathsByCategory(argCategory As String) As String[]
    
    Dim yukiCollection As Collection = NagatoMenuCache3.GetApplications(argCategory)
    Dim yukiPaths As New String[]
    Dim yukiDesktopFile As NagatoDesktopFile
    
    For Each yukiDesktopFile In yukiCollection
        yukiPaths.Add(yukiDesktopFile.Path)
    Next
    
    Return yukiPaths
    
Catch
    Return Null
    
End

Private Function Ready_Read() As String

    Return NagatoMenuCache3.Ready

End
