' Gambas class file

Inherits NagatoEffectProperties

Property Read Values As Variant[]

Private $container As Container
Private $sliderBox As SliderBox 

Private Sub addLabel()
    
    Dim yukiLabel As New Label($container)
    
    With yukiLabel
        .Font.Bold = True
        .Foreground = Color.White
        .Alignment = Align.Center
        .H = 32
        .Text = ("Radius")
    End With
    
End

Private Sub addSliderBox()
    
    $sliderBox = New SliderBox($container) As "SliderBox"
    
    With $sliderBox
        .MinValue = 1
        .MaxValue = 100
        .H = 32
        .Value = 5
    End With
    
End

Public Sub _new(argContainer As Container)
    
    $container = argContainer
    Try $container.Children.Clear()
    
    addLabel()
    addSliderBox()
    
End

Private Function Values_Read() As Variant[]

    Return [$sliderBox.Value]

End
