Inherits NagatoMenuPipe

Private $locationLabel As TextLabel

Public Sub _new(argContainer As Container)
    
    $locationLabel = New TextLabel(argContainer)
    
    With $locationLabel
        .Text = "YUKI .N > Can you see this ?"
        .Alignment = Align.Left
        .Expand = True
        .Padding = 2
        .AutoResize = True
    End With
    
End

Public Sub SetLocation(argLatitude As Float, argLongitude As Float)
    
    Dim yukiTemplate As String = "<b>Latitude:</b> &1, <b>Longitude:</b> &2"
    Dim yukiLatitude As Float = Format(argLatitude, "##0.########")
    Dim yukiLongitude As Float = Format(argLongitude, "##0.########")
    
    $locationLabel.Text = Subst$(yukiTemplate, yukiLatitude, yukiLongitude)
    
Catch
    Return
    
End
