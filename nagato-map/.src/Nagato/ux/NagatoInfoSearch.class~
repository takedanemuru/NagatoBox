' Gambas class file

'Private $tabStrip As TabStrip
Private $searchBox As NagatoSearchBox
Private $searchGrid As NagatoSearchGrid

Public Sub SetFocus()
    
    $searchBox.SetFocus()
    
End

Public Sub _new(argTabstrip As TabStrip)
    
    ' $tabStrip = argTabstrip
    ' $tabStrip.Index = 3
    argTabstrip.Index = 3
    $searchBox = New NagatoSearchBox(argTabstrip) As "SearchBox"
    $searchGrid = New NagatoSearchGrid(argTabstrip) As "SearchGrid"
    
End

Public Sub SearchBox_NewData(argData As Collection)
    
    $searchGrid.RefreshSearchGridData(argData)
    
End
