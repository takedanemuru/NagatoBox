' Gambas class file

Create Static

Public Function GetText(argIndex As Integer) As String
    
    Select Case argIndex
        Case 1 'Clear
            Return ("Clear")
        Case 2  'Fair
            Return ("Mostly Sunny")
        Case 3  'Partly cloudy
            Return ("Partly Cloudy")
        Case 4  'Cloudy
            Return ("Cloudy")
        Case 5  'Rain Showers
            Return ("Rain Showers")
        Case 6  'Rain Showers with Thunder
            Return ("Rain Showers with Thunder")
        Case 7  'Sleet Showers
            Return ("Sleet Showers")
        Case 8  'Snow Showers
            Return ("Snow Showers")
        Case 9  'Rain
            Return ("Rain")
        Case 10 'Heavy Rain
            Return ("Heavy Rain")
        Case 11 'Rain and Thunder
            Return ("Rain and Thunder")
        Case 12 'Sleet
            Return ("Sleet")
        Case 13 'Snow
            Return ("Snow")
        Case 14 'Snow with Thunder
            Return ("Snow with Thunder")
        Case 15 'Fog
            Return ("Fog")
        Case 16 'Clear / Winter Darkness
            Return ("Clear / Winter Darkness")
        Case 17 'Partly Cloudy / Winter Darkness
            Return ("Partly Cloudy / Winter Darkness")
        Case 18 'Rain Showers / Winter Darkness
            Return ("Rain Showers / Winter Darkness")
        Case 19 'Snow Showers / Winter Darkness
            Return ("Snow Showers / Winter Darkness")
        Case 20 'Sleet Showers and Thunder
            Return ("Sleet Showers and Thunder")
        Case 21 'Snow Showers and Thunder
            Return ("Snow Showers and Thunder")
        Case 22 'Rain Showers and Thunder
            Return ("Rain Showers and Thunder")
        Case 23 'Sleet Showers and Thunder
            Return ("Sleet Showers and Thunder")
        Default 'Unknown
            Return ("Unknown")
    End Select
    
End

Private Function getColorDay(argIndex As Integer) As Integer
    
    Select Case argIndex
        Case 1 'Clear
            Return Color.Orange
        Case 2  'Fair
            Return Color.Orange
        Case 3  'Partly cloudy
            Return Color.Orange
        Case 4  'Cloudy
            Return Color.Gray
        Case 5  'Rain Showers
            Return Color.Blue
        Case 6  'Rain Showers with Thunder
            Return Color.Blue
        Case 7  'Sleet Showers
            Return Color.Blue
        Case 8  'Snow Showers
            Return Color.Lighter(Color.Gray)
        Case 9  'Rain
            Return Color.Blue
        Case 10 'Heavy Rain
            Return Color.Blue
        Case 11 'Rain and Thunder
            Return Color.Blue
        Case 12 'Sleet
            Return Color.Lighter(Color.Gray)
        Case 13 'Snow
            Return Color.Lighter(Color.Gray)
        Case 14 'Snow with Thunder
            Return Color.Lighter(Color.Gray)
        Case 15 'Fog
            Return Color.Gray
        Case 16 'Clear / Winter Darkness
            Return Color.Black
        Case 17 'Partly Cloudy / Winter Darkness
            Return Color.Gray
        Case 18 'Rain Showers / Winter Darkness
            Return Color.Gray
        Case 19 'Snow Showers / Winter Darkness
            Return Color.Lighter(Color.Gray)
        Case 20 'Sleet Showers and Thunder
            Return Color.Lighter(Color.Gray)
        Case 21 'Snow Showers and Thunder
            Return Color.Lighter(Color.Gray)
        Case 22 'Rain Showers and Thunder
            Return Color.Lighter(Color.Gray)
        Case 23 'Sleet Showers and Thunder
            Return Color.Lighter(Color.Gray)
        Default 'Unknown
            Return Color.DarkBlue
    End Select
    
End

Private Function getColorNight(argIndex As Integer) As Integer
    
    Select Case argIndex
        Case 1 'Clear
            Return Color.Lighter(Color.Gray)
        Case 2  'Fair
            Return Color.Lighter(Color.Gray)
        Case 3  'Partly cloudy
            Return Color.Lighter(Color.Gray)
        Case 4  'Cloudy
            Return Color.Gray
        Case 5  'Rain Showers
            Return Color.DarkBlue
        Case 6  'Rain Showers with Thunder
            Return Color.DarkBlue
        Case 7  'Sleet Showers
            Return Color.Lighter(Color.Gray)
        Case 8  'Snow Showers
            Return Color.Lighter(Color.Gray)
        Case 9  'Rain
            Return Color.DarkBlue
        Case 10 'Heavy Rain
            Return Color.DarkBlue
        Case 11 'Rain and Thunder
            Return Color.DarkBlue
        Case 12 'Sleet
            Return Color.Lighter(Color.Gray)
        Case 13 'Snow
            Return Color.Lighter(Color.Gray)
        Case 14 'Snow with Thunder
            Return Color.Lighter(Color.Gray)
        Case 15 'Fog
            Return Color.Lighter(Color.Gray)
        Case 16 'Clear / Winter Darkness
            Return Color.Lighter(Color.Gray)
        Case 17 'Partly Cloudy / Winter Darkness
            Return Color.Gray
        Case 18 'Rain Showers / Winter Darkness
            Return Color.DarkBlue
        Case 19 'Snow Showers / Winter Darkness
            Return Color.Lighter(Color.Gray)
        Case 20 'Sleet Showers and Thunder
            Return Color.Lighter(Color.Gray)
        Case 21 'Snow Showers and Thunder
            Return Color.Lighter(Color.Gray)
        Case 22 'Rain Showers and Thunder
            Return Color.DarkBlue
        Case 23 'Sleet Showers and Thunder
            Return Color.Lighter(Color.Gray)
        Default 'Unknown
            Return Color.Black
    End Select
    
End

Public Sub GetColor(argIndex As Integer, Optional argIsDay As Boolean = Null) As Integer
    
    If argIsDay <> Null Then
        Return IIf(argIsDay, getColorDay(argIndex), getColorNight(argIndex))
    Else If Hour(Now()) >= 6 And If 18 > Hour(Now()) Then
        Return getColorDay(argIndex)
    Else
        Return getColorNight(argIndex)
    Endif
    
End
