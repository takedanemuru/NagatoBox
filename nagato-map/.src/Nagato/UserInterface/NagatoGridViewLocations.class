Inherits NagatoGridView

Create Private

Public Sub _Activate(argLatitude As Float, argLongitude As Float) ' virtual interface
    
    
    
End

Public Sub _InitializeGridView(argContainer As Container)
    
    Me._$gridView = New GridView(argContainer) As "GridView"

    With Me._$gridView
        .Columns.Count = 3
        .Rows.Count = 0
        .Header = GridView.Horizontal
        .Expand = True
        .Mode = Select.Single
        .Columns[0].Text = ("Name")
        .Columns[1].Text = ("Latitude")
        .Columns[2].Text = ("Longitude")
    End With
    
End

Public Function _GetLatitude(argRow As Integer) As Float
    
    Return CFloat(Me._$gridView[argRow, 1].Text)
    
End

Public Function _GetLongitude(argRow As Integer) As Float
    
    Return CFloat(Me._$gridView[argRow, 2].Text)
    
End

Public Sub GridView_Activate()
    
    If Not Me._IsValidRow(Me._$gridView.Row) Then Return
    
    Me._Activate(Me._GetLatitude(Me._$gridView.Row), Me._GetLongitude(Me._$gridView.Row))
    
End
