Inherits NagatoMenuPipe

Private $container As Container
Private $searchButton As NagatoSearchButton
Private $mapSelectButton As NagatoMapSelectButton
Private $locationLabel As NagatoLocationLabel
Private $starButton As NagatoStarButton

Private Sub initializeWidgets()
    
    $searchButton = New NagatoSearchButton($container) As "Menu"
    $mapSelectButton = New NagatoMapSelectButton($container) As "Menu"
    $locationLabel = New NagatoLocationLabel($container)
    $starButton = New NagatoStarButton($container) As "Menu"
    
End

Public Sub SetLocation(argLatitude As Float, argLongitude As Float)
    
    $locationLabel.SetLocation(argLatitude, argLongitude)
    
End

Public Sub _new(argContainer As Container)
    
    $container = argContainer
    initializeWidgets()
    
End
