' Gambas class file

Inherits NagatoWidget

Private $searchBox As ButtonBox

Public Sub _InitializeWidget() 'override
    
    $searchBox = New ButtonBox(Me._$container) As "SearchBox"
    
    With $searchBox
        .Width = 1
        .Picture = MikuruIcons.Get("search")
    End With
    
End

Public Sub Clear()
    
    $searchBox.Clear()
    
End

Public Sub Toggle()
    
    If $searchBox.H = 1 Then
        $searchBox.W = 1
    Else
        $searchBox.W = 160
    Endif
    
End

Public Sub SearchBox_Activate()
    
    If $searchBox.Text <> "" Then
        HaruhiApplicationSearch.SetIconViewWithSearchQuery($searchBox.Text)
    End If
    
End

Public Sub SearchBox_Click()
    
    Searchbox_Activate()
    
End
