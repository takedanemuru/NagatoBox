' Gambas class file

Inherits NagatoWidget

Public Sub _InitializeWidget() 'override
    
    Dim yukiButton As MenuButton
    Dim yukiMenu As NagatoRecentApplicationsMenu
    
    If Not NagatoSettings.RecentApplications Then Return
    
    yukiButton = New MenuButton(Me._$container)
    
    With yukiButton
        .Text = ("Recent")
        .AutoResize = True
        .Arrow = False
        .Picture = MikuruIcons.Get("alarm-clock")
        .Border = False
        .Foreground = NagatoSettings.FontColor
        .Font.Bold = True
    End With
    
    yukiMenu = New NagatoRecentApplicationsMenu(yukiButton)
    
End
