Inherits NagatoObject

Private $applicationButtons As NagatoApplicationButtons
Private $spacer As NagatoSpacer
Private $searchBox As NagatoSearchBox
Private $infomationButton As NagatoInformationButton

Public Sub Toggle(argClearSearchQuery As Boolean)
    
    If argClearSearchQuery Then $searchBox.Clear()
    
    $applicationButtons.Toggle()
    $searchBox.Toggle()
    $infomationButton.Toggle()
    
End

Public Sub _new(argContainer As Container)
    
    $applicationButtons = New NagatoApplicationButtons(argContainer) As "TFEI"
    $spacer = New NagatoSpacer(argContainer)
    $searchBox = New NagatoSearchBox(argContainer)
    $infomationButton = New NagatoInformationButton(argContainer) As "TFEI"
    
End
