' Gambas class file

Create Static

Private Const BusNameFull As String = "Session://org.freedesktop.Notifications"
Private Const BusNameShort As String = "org.freedesktop.Notifications"
Private Const ObjectPath As String = "/org/freedesktop/Notifications"
Private Const Interface As String = "org.freedesktop.Notifications"

Private $proxy As DBusProxy

Public Sub Show()
    
    If Not DBus.Session.Applications.Exist(BusNameShort) Then Return
    
    $proxy = DBus[BusNameFull][ObjectPath, Interface]
    $proxy.Notify("nagato-lookup", Null, Null, "nagato-lookup", "nagato-lookup is activated.", Null, Null, 20)

Catch
    Return

End
