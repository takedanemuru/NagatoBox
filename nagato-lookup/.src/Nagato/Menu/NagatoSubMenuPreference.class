Inherits NagatoSubMenu

Public Sub _OnInitializeParentMenu(argRootMenu As Menu)
    
    Me._$parentMenu = New Menu(argRootMenu) As "ParentMenu"
    
    With Me._$parentMenu
        .Picture = MikuruIcons("equalizer")
        .Text = ("Preference")
    End With
    
End

Public Sub _OnRefreshChildMenus()
    
    Object.New("NagatoMenuItemForegroundColor", [Me._$parentMenu])
    Object.New("NagatoMenuItemFontColor", [Me._$parentMenu])
    Object.New("NagatoSubMenuRecentApplications", [Me._$parentMenu])
    
End
