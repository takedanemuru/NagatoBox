' Gambas class file

Inherits NagatoMenuItem

Public Sub _AbstractOnInitialize(argParentMenu As Menu)
    
    Dim yukiMenu As New Menu(argParentMenu) As "MenuItem"
    
    With yukiMenu
        .Picture = MikuruColorChip.Get(NagatoSettingsForm.Foreground)
        .Text = ("Change Form Color")
    End With
    
End

Public Sub _AbstractOnMenuClicked()
    
    HaruhiColorChooser.Title = ("Select Form Color")
    HaruhiColorChooser.SetColor(NagatoSettingsForm.Foreground)
    
    If HaruhiColorChooser.ShowDialog() = HaruhiColorChooser.ResponseApply Then
        HaruhiMain.Background = MikuruDialog.Color
        NagatoSettingsForm.Foreground = MikuruDialog.Color
    Endif
    
End
