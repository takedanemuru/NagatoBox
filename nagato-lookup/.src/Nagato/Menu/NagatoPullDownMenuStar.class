Inherits NagatoPullDownMenu

Public Sub _OnRefreshChildMenus()
    
    Object.New("NagatoMenuDirectory", [Me._$rootMenu, User.Home])
        MikuruMenuSeparator.Set(Me._$rootMenu)
    Object.New("NagatoSubMenuPreference", [Me._$rootMenu])
    Object.New("NagatoSubMenuScreenshot", [Me._$rootMenu])
    Object.New("NagatoSubMenuAlsa", [Me._$rootMenu])
    Object.New("NagatoMenuItemScreenlocker", [Me._$rootMenu])
        MikuruMenuSeparator.Set(Me._$rootMenu)
    Object.New("NagatoMenuItemAbout", [Me._$rootMenu])
    If Not MikuruSessionType.IsOpenbox() Then Object.New("NagatoMenuItemClose", [Me._$rootMenu])
    If MikuruSessionType.IsOpenbox() Then Object.New("NagatoMenuItemLogout", [Me._$rootMenu])
    
End
