Public Sub _AddMenu(argText As String, argTag As Integer, Optional argIcon As String)
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    
    With yukiMenu
        .Text = argText
        .Tag = argTag
        If argIcon Then .Picture = MikuruIcon[argIcon]
    End With
    
End

