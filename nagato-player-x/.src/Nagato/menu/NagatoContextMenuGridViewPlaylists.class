Inherits NagatoContextMenu

Public Sub _InitializeRootMenu()
    
    Me._$rootMenu = New Menu(HaruhiPlayList)
    Me._$rootMenu.Visible = False
    
End

Public Sub _InitializeChildMenus()
    
    Me._AddMenu(("Delete"), MikuruSignal.ListsDataDelete, "bin")
        Me._AddMenu("", MikuruSignal.None)
    Me._AddMenu(("Add to queue"), MikuruSignal.ListsDataAdd)
    Me._AddMenu(("Replace queue"), MikuruSignal.ListsDataReplace)
    
End

Public Sub PopUp()
    
    Me._$rootMenu.Popup()
    
End

Public Sub _new()
    
    Me._InitializeRootMenu()
    Me._InitializeChildMenus()
    
End

Public Sub MenuItem_Click()
    
     Raise Signal(Last.Tag, Null)
    
End
