' Gambas class file

Inherits NagatoMenuItem

Public Sub _OnInitializeMenu()
    
    With Me._$menuItem
        .Text = ("Skip Taskbar")
        .Picture = MikuruCheckButtonIcon[HaruhiCovergloobus.SkipTaskbar]
    End With
    
End

Public Sub _OnClickMenuItem()
    
    HaruhiCovergloobus.SkipTaskbar = Not HaruhiCovergloobus.SkipTaskbar
    
    NagatoSettingsForm.SaveGloobusForm(HaruhiCovergloobus)
    
End
