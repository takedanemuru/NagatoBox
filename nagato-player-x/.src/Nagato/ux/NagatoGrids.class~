' Gambas class file

Inherits NagatoObject

'Property Read Selection As Integer[]

Public _$grids As GridView
Public _$observer As Observer
Public _$sortAscend As Boolean
Public _$handlerBackground As NagatoGridViewHandlerBackground
Public _$handlerData As NagatoGridViewHandlerData

Public Function _GetSelectionText(argColumnIndex As Integer) As String[]
    
    Return Me._$handlerData.GetSelectionText(argColumnIndex)
    
End

Public Sub _SetBackgroundStripe(argColor As Integer)
    
    Me._$handlerBackground.SetBackgroundStripe(argColor)
    
End

Public Sub _SetColumns(...)
    
    Dim yukiIndex As Integer
    
    Me._$grids.Columns.Count = Param.Count
    
    For yukiIndex = 0 To Param.Max
        Me._$grids.Columns[yukiIndex].Text = Param[yukiIndex]
    Next
    
End

Public Sub _ResizeColumns(...)
    
    Dim yukiIndex As Integer
    
    For yukiIndex = 0 To Param.Max
        Me._$grids.Columns[yukiIndex].W = Param[yukiIndex]
    Next
    
End

Public Sub _SetGridData2(argRow As Integer, argColumn As Integer, argData As String, argAlign As Integer)
    
    Me._$handlerData.SetGridData2(argRow, argColumn, argData, argAlign)
    
End

Public Sub _InitializeGrids()
    
    
    
End

Public Sub _new(argGrids As GridView)
    
    Me._$grids = argGrids
    Me._$handlerBackground = New NagatoGridViewHandlerBackground(Me._$grids)
    Me._$handlerData = New NagatoGridViewHandlerData(Me._$grids)
    Me._InitializeGrids()
    Me._$observer = New Observer(Me._$grids) As "Asakura"
    
End

