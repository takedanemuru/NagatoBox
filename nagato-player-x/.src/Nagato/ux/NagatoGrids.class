Public Sub _new(argGrids As GridView)
    
    Me._$grids = argGrids
    Me._$handlerBackground = New NagatoGridViewHandlerBackground(Me._$grids)
    Me._$handlerData = New NagatoGridViewHandlerData(Me._$grids)
    Me._InitializeGrids()
    Me._$observer = New Observer(Me._$grids) As "Asakura"
    
End

Public Sub Asakura_Activate()
    
    Me._Activate()
    
End

Public Sub Asakura_ColumnClick(argIndex As Integer)
    
