Inherits NagatoGridViewContextMenu

Public Sub _OnRaiseMenu()
    
    Dim yukiMenu As New NagatoContextMenuCurrent As "Hello"
    
    Debug "go popup"
    
    yukiMenu.PopUp()
    
End

Public Sub Hello_Signal(argSignal As Integer, argValues As Variant[])
    
   If Me._$gridView.Rows.Selection.Count = 0 Then Return
   
    Select Case argSignal
        Case MikuruSignal.ListDelete
            NagatoQueue.DeleteIndexes(Me._$gridView.Rows.Selection)
        Case MikuruSignal.ListEdit
            MikuruDialogPortalTagEdit.EditIndexes(Me._$gridView.Rows.Selection)
    End Select
    
End
