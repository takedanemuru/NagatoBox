Inherits NagatoObject

Public _$container As Container

Public Sub _AddButton(argTag As Integer, Optional argIconName As String, Optional argText As String)
    
    Dim yukiButton As New MenuButton(Me._$container) As "MenuButton"
    
    With yukiButton
        .Tag = argTag
        .AutoResize = True
        .Arrow = False
        .Border = False
        If argIconName Then .Picture = MikuruIcon.Get(argIconName)
        If argText Then .Tooltip = argText
    End With
    
End

Public Sub _OnInitialize()
    
    'virtual
    
End

Public Sub _new(argContainer As Container)
    
    Me._$container = argContainer
    Me._OnInitialize()
    
End

Public Sub MenuButton_Enter()
    
    Swap Last.Text, Last.Tooltip
    
End

Public Sub MenuButton_Leave()
    
    Swap Last.Tooltip, Last.Text
    
End
