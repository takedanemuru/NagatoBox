' Gambas class file

Inherits NagatoMenuBar

Public Sub _OnInitialize() 'override
    
    Object.New("NagatoMenuBarButtonGroupPlayerControls", [Me._$container])
    Me._AddButton(MikuruSignal.ListDown, "arrow-down", ("Down"))
    Me._AddButton(MikuruSignal.ListUp, "arrow-up", ("Up"))
    Object.New("NagatoMenuButtonAddMusic", [Me._$container])
    Object.New("NagatoMenuButtonAddDirectory", [Me._$container])
    Me._AddButton(MikuruSignal.ListClear, "bin", ("Clear"))
        Object.New("NagatoMenuBarSpacer", [Me._$container])
    Object.New("NagatoStarButtonQueue", [Me._$container])
    
End

Public Sub MenuButton_Click()
    
    Select Case Last.Tag
        Case MikuruSignal.ListDown, MikuruSignal.ListUp
            Raise Signal(Last.Tag, [""])
        Default
            NagatoQueue(Last.Tag, Null)
    End Select
    
End
