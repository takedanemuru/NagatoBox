' Gambas class file

Inherits NagatoSignal

Public _$container As Container
'Public _$starButton As MenuButton

Public Sub _AddPanel()
    
    Dim yukiPanel As New Panel(Me._$container)
    
    yukiPanel.Expand = True
    
End

Public Sub _AddSeparator()
    
    Dim yukiSeparator As Separator
    
    yukiSeparator = New Separator(Me._$container)
    
End

Public Sub _AddButton(argTag As Integer, Optional argIconName As String, Optional argText As String)
    
    Dim yukiButton As New MenuButton(Me._$container) As "MenuButton"
    
    With yukiButton
        .Tag = argTag
        .AutoResize = True
        .Arrow = False
        .Border = False
        If argIconName Then .Picture = MikuruIcon.Get(argIconName)
        If argText Then .Tooltip = argText
        .Foreground = Color.DarkCyan
    End With
    
End

Public Sub _AddStarMenu() 
    
    'virtual
    
End

