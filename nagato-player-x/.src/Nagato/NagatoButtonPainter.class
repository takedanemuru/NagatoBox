Inherits NagatoWidgetPainter

Private Sub paintButton(argRectangle As Rect, argLabel As String, Optional argFlag As Integer = MikuruState.None)
    
    Me._PaintRectangle(argRectangle, Me._GetWidgetColor(argRectangle, argFlag), 2 * MikuruUx.Grid)
    Me._PaintRichText(argRectangle, Subst$(("<b>&1</b>"), argLabel))
    
End

Public Sub Draw()
    
    paintButton(MikuruUx.PlayButton, ("PLAY"), MikuruState.Play)
    paintButton(MikuruUx.PauseButton, ("PAUSE"), MikuruState.Pause)
    paintButton(MikuruUx.BackButton, ("BACK"))
    paintButton(MikuruUx.NextButton, ("NEXT"))
    paintButton(MikuruUx.ShuffleButton, ("SHUFFLE"), MikuruState.Shuffle)
    paintButton(MikuruUx.RepeatButton, ("REPEAT"), MikuruState.Repeats)
    paintButton(MikuruUx.PlaylistButton, ("PLAYLIST"))

End