' Gambas class file

Create Static

Public Enum SignalChanged, SignalMoved, SignalSelectionMoved, SignalTagChanged, IndexMoved

Event Changed
Event Moved
Event TagChanged
Event SelectionMoved(argNewSelection As Integer[])

Public Sub _call(argSignal As Integer, ...)
    
    Select Case argSignal
        Case SignalChanged
            Raise Changed
        Case SignalSelectionMoved
            Raise SelectionMoved(Param[0])
        Case SignalTagChanged
            Try NagatoQueue.ChannelCurrent.Reload()
            Raise TagChanged
        Case SignalMoved
            Try NagatoQueue.ChannelCurrent.Reload()
            Raise Moved
        Case IndexMoved
            Raise Moved
    End Select
    
    Try Print "YUKI.N > Next Tune : " & NagatoQueue.ChannelCurrent.Titile 
    
    Try HaruhiPlayer.Title = NagatoQueue.ChannelCurrent.Titile
    
End
