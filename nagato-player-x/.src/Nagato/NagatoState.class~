' Gambas class file

Create Static

Public Enum None, Play, Pause, Shuffle, Repeats

Public Function CheckState(argIndex As Integer) As Boolean
    
    Select Case argIndex
        Case Me.Play
            Return NagatoPlayer.State = MediaPlayer.Playing
        Case Me.Pause
            Return NagatoPlayer.State = MediaPlayer.Paused
        Case Me.Shuffle
            Return False
        Case Me.Repeats
            Return True
        Case Me.None
            Return False
    End Select
    
End

