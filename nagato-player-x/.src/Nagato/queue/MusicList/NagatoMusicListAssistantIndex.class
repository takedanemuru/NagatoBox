' Gambas class file

Private $musicElements As NagatoMusicElements
Private $position As NagatoMusicPosition 

Public Function SetPath(argPath As String) As Boolean
    
    'Array.Find()  shall retun -1 when query is not found
    If $musicElements.FindIndex(argPath) = -1 Then Return False

    $position.Current = $musicElements.FindIndex(argPath) 
    NagatoBroadCast(NagatoBroadCast.SignalMoved)
    Return True
    
End

Public Sub Next()
    
    $position.Next($musicElements.Count)
    
End

Public Sub Back()
    
    $position.Back($musicElements.Count)
    
End

Public Sub _new(argElements As NagatoMusicElements, argPosition As NagatoMusicPosition)
    
    $musicElements = argElements
    $position = argPosition
    
End