' Gambas class file

Inherits NagatoMusicListAssistant

Public Function SetPath(argPath As String) As Boolean
    
    'Array.Find()  shall retun -1 when query is not found
    If Me._$musicElements.FindIndex(argPath) = -1 Then Return False

    Me._$position.Current = Me._$musicElements.FindIndex(argPath) 
    NagatoBroadCast(NagatoBroadCast.SignalMoved)
    Return True
    
End

Public Sub Next()
    
    Me._$position.Next(Me._$musicElements.Count)
    
End

Public Sub Back()
    
    Me._$position.Back(Me._$musicElements.Count)
    
End
