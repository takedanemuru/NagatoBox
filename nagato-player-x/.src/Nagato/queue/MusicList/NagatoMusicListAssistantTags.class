Private $musicElements As NagatoMusicElements
Private $position As NagatoMusicPosition 

Public Function Get(argTagType As Integer) As String
    
    If $musicElements.Count = 0 Then Return ""
    
    Return $musicElements.GetTag(argTagType, $position.Current)
    
End

Public Sub Set(argTitle As String, argArtist As String, argAlbum As String) 
    
    $musicElements.SetTag($position.Current, argTitle, argArtist, argAlbum)
    
End

Public Sub _new(argElements As NagatoMusicElements, argPosition As NagatoMusicPosition)
    
    $musicElements = argElements
    $position = argPosition
    
End
