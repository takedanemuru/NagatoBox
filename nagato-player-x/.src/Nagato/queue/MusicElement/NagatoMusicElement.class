Private $tags As New NagatoTags

Public Sub EditTags(argTags As NagatoId3TagInfo)
    
    NagatoDBMedia.AddTagsByNagatoTags($tags.Path, argTags)
    $tags.SetTag($tags.Path)
    
End

Public Sub FetchDuration(argDuration As Float)
    
    $tags.FetchDuration(argDuration)
    
End

Public Sub _new(argPath As String)
    
    NagatoDBMedia.EnsureLibrary(argPath)
    $tags.SetTag(argPath)
    
End

