' Gambas class file

Inherits NagatoQueueAssistant

Public Function SetIndex(argIndex As Integer) As Boolean
    
    Return Me._$musicList.SetIndex(argIndex)
    
End

Public Sub AddDirectory(argPath As String)
    
    Dim yukiPaths As String[] = MikuruMusicFiles.GetFromDirectory(argPath)
    
    If yukiPaths.Count > 0 Then Me._$musicList.EnqueuePaths(yukiPaths)
    
End

Public Sub MoveUp(argIndexes As Integer[])
    
    If argIndexes.Count > 0 Then Me._$musicList.Up(argIndexes)
    
End

Public Sub MoveDown(argIndexes As Integer[])
    
    If argIndexes.Count > 0 Then Me._$musicList.Down(argIndexes)

End
