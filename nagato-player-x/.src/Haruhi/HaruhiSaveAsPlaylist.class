' Gambas class file

Private $notEntered As Boolean = True

Private Sub setFormPicture()
    
    Dim yukiImage As Image = Image.Load("Pictures/default_background.png")
    
    Me.Picture = yukiImage.Stretch(Me.W, Me.H).Picture
    
End

Public Sub Form_Open()
    
    $notEntered = True
    
    Me.Center()
    setFormPicture()
    
End

Public Sub PlaylistNamesComboBox_Enter()

    $notEntered = False
    PlaylistNamesComboBox.Text = ""

End

Public Sub CancelButton_Click()

    PlaylistNamesComboBox.Text = ("Input or select Playlist name")
    $notEntered = True
    
    Me.Close()

End

Public Sub SaveButton_Click()

    If PlaylistNamesComboBox.Text = "" Then Return

    NagatoQueue(MikuruSignal.ListSaveAs, [PlaylistNamesComboBox.Text])
    PlaylistNamesComboBox.Text = ("Input or select Playlist name")
    $notEntered = True
    
    Me.Close()

End
