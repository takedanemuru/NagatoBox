' Gambas class file

Private $nowPlayingTab As NagatoTabNowPlaying
Private $playlistsTab As NagatoTabPlaylists

Public Sub _new()

    NagatoSettingsForm.Load(Me)
    
    $nowPlayingTab = New NagatoTabNowPlaying(MenuPanelNowPlaying, NowPlayingGrid) As "NowPlayingTab"
    $playlistsTab = New NagatoTabPlaylists(MenuPanelPlaylists, PlaylistsGrid) As "PlaylistsGrids"
    
End

Public Sub EnsureVisible()
    
    Dim yukiDesktopWindow As New DesktopWindow(Me.Id)
    
    Me.Show()
    
    yukiDesktopWindow.Desktop = Desktop.Current
    
End

Public Sub Form_Close()
    
    NagatoSettingsForm.Save(Me)
    
End

Public Sub NowPlayingTab_NewPlayList()
    
    $playlistsTab.Refresh()
    
End
