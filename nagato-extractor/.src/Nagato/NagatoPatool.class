' Gambas class file

Create Static

Public Sub Extract(argPathsLine As String)
    
    Dialog.Title = ("Select directory")
    Dialog.Path = User.Home
    
    If NagatoArguments.OutDir <> "" And If Exist(NagatoArguments.OutDir) Then
        Shell Subst$("patool extract --outdir &1 &2", NagatoArguments.OutDir, argPathsLine) Wait
        Message.Info(Subst$("YUKI.N > Files has been extracted to &1", NagatoArguments.OutDir))
    Else If Not Dialog.SelectDirectory() Then
        Shell Subst$("patool extract --outdir &1 &2", Dialog.Path, argPathsLine) Wait
        Message.Info(Subst$("YUKI.N > Files has been extracted to &1", Dialog.Path))
    Endif
    
End
