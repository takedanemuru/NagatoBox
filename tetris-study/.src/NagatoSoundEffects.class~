' Gambas class file

Private $soundSucsess As Sound
Private $soundEnd As Sound
Private $soundKick As Sound

Public Sub _new()
        
        $soundSucsess = New Sound("success.wav")
        $soundEnd = New Sound("end-bell.wav")
        $soundKick = New Sound("kick.wav")
        
End

Public Sub Success()
        
        $soundSucsess.Play()
        
End

Public Sub EndBell()
        
        $soundEnd.Play()
        
End

Public Sub Kick()
        
        $soundKick.Play()
        
End
