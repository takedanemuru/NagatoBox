' Gambas class file

Inherits NagatoMenuSignal

Property Text As String

Private $textArea As TextArea

Public Sub _new(argContainer As Container)
    
    $textArea = New TextArea(argContainer) As "TextArea"
    
    With $textArea
        .Expand = True
        .SetFocus()
    End With
    
End

Public Sub TextArea_KeyPress()
    
    If Key.Control Then
        If Key.Code = Key["t"] Then Raise Signal(MikuruSignal.ViewNewTab, [""])
        If Key.Code = Key["s"] Then Raise Signal(MikuruSignal.FileSave, [""])
        ' If Key.Code = Key["z"] Then Raise Signal(MikuruSignal.ViewNewTab, [""])
        ' If Key.Code = Key["x"] Then Raise Signal(MikuruSignal.ViewNewTab, [""])
        ' If Key.Code = Key["c"] Then Raise Signal(MikuruSignal.ViewNewTab, [""])
        ' If Key.Code = Key["v"] Then Raise Signal(MikuruSignal.ViewNewTab, [""])
    End If
    
End

Public Sub TextArea_Change()
    
    Raise Signal(MikuruSignal.EditChange, [""])
    
End

Private Function Text_Read() As String

    Return $textArea.Text

End

Private Sub Text_Write(Value As String)

    $textArea.Text = Value

End
