' Gambas class file

Inherits NagatoContextMenu

Private $column As Integer

Public Sub _OnRefreshChildMenus()
    
    Me._AddChildMenu(("Edit Column"), MikuruSignal.ColumnEdit)
    
End

Public Sub _OptionalOnInitialize(argValues As Variant[])
    
    $column = argValues[0]
    
End

Public Sub _OnMenuItemClick()
    
    Select Case Last.Tag
        Case MikuruSignal.ColumnEdit
            If Not MikuruDialogPortalTextInput() Then Return
            Raise Signal(MikuruSignal.ColumnEdit, [$column, MikuruDialogPortalTextInput.LastText])
    End Select
    
End
