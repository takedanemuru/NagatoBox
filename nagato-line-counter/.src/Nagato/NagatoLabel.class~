' Gambas class file

Private $label As TextLabel

Public Sub SetText()
    
    Dim yukiMessage As String = ("YUKI.N > This project contains ...<br><br>")
    
    yukiMessage &= NagatoCounter.FormCount & " Forms.<br>" 
    yukiMessage &= NagatoCounter.ClassCount & " Classes.<br>"
    yukiMessage &= NagatoCounter.ModuleCount & " Modules.<br>"
    yukiMessage &= Format$(NagatoCounter.IncLineCount, "#,###,###") & " Lines of code."
    
    $label.Text = yukiMessage
    
End

Public Sub _new(argLabel As TextLabel)
    
    $label = argLabel
    
End

