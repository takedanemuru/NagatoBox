' Gambas class file

Public Sub SetCode(argPath As String)
    
    Debug argPath
    
    Try Editor1.Text = File.Load(argPath)
    Me.Title = File.Name(argPath)
    
Catch
    Me.Close()
    Return
    
End

Public Sub Form_Show()
    
    Editor1.TabSize = 4
    Editor1.Flags[Editor1.ShowLineNumbers] = True
    Editor1.Flags[Editor1.ShowLimits] = True
    
    Me.Center()
    
End
