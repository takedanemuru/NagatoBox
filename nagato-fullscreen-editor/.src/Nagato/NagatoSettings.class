Inherits NagatoSettingsCore

Property FontSize As Integer
Property Foreground As Integer
Property Background As String

Private Function FontSize_Read() As Integer

    Return Me._$settings["font/size", 14]

End

Private Sub FontSize_Write(Value As Integer)

    Me._$settings["font/size"] = Value
    Me._SaveSettings()

End

Private Function Foreground_Read() As Integer

    Return Me._$settings["font/color", Color.Violet]

End

Private Sub Foreground_Write(Value As Integer)

    Me._$settings["font/color"] = Value
    Me._SaveSettings()

End

Private Function Background_Read() As String
    
    Dim yukiPath As String = Me._$settings["app/background", ""]
    
    Return IIf(Exist(yukiPath), yukiPath, "bg.png")
    
End

Private Sub Background_Write(Value As String)

    Me._$settings["app/background"] = Value
    Me._SaveSettings()

End
