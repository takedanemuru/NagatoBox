Inherits NagatoMenuItem

Public Sub _OnClickMenu()
    
    If Dialog.SelectColor() Then Return
    
    NagatoSettingsScale.Background = Dialog.Color
    
End

Public Sub _OnInitialize()
    
    With Me._$menuItem
        .Text = ("Background Color")
        .Picture = MikuruColorChip[NagatoSettingsScale.Background]
    End With
    
End
