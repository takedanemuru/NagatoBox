Inherits NagatoScalePainter

Public Function _OnGetScaleHeight(argStep As Integer) As Integer
    
    If argStep Mod 16 = 0 Then
        Return Me._$height * 0.35
    Else If argStep Mod 4 = 0 Then
        Return Me._$height * 0.25
    Else
        Return Me._$height * 0.15
    End If
    
End

Public Function _OnGetStep() As Integer
    
    Return Desktop.Resolution / 16 * Me.UpScaleRate
    
End
