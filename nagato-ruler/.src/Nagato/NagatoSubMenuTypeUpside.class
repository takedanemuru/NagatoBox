Inherits NagatoSubMenu

Public Sub _OnInitializeChildMenus()
    
    Dim yukiMenu As Menu 
    Dim yukiIndex As Integer
    
    For yukiIndex = 0 To 2
        yukiMenu = New Menu(Me._$menu) As "TypeMenu"
        yukiMenu.Text = MikuruScaleType[yukiIndex]
        yukiMenu.Tag = yukiIndex
        If yukiIndex = NagatoSettingsScale.Upside Then yukiMenu.Picture = MikuruIcon["button-check"]
    Next
    
End

Public Sub _OnShow()
    
    Me._$menu.Children.Clear()
    Me._OnInitializeChildMenus()
    
End

Public Sub _OnInitializeMenu()
    
    With Me._$menu
        .Text = ("Upside")
    End With
    
End

Public Sub TypeMenu_Click()
    
    If Last.Tag = NagatoSettingsScale.Upside Then Return
    
    NagatoSettingsScale.Upside = Last.Tag
    
End
