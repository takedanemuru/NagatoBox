Inherits NagatoMenuItem

Public Sub _OnClickMenu()
    
    If Dialog.SelectColor() Then Return
    
    NagatoSettingsScale.Foreground = Dialog.Color
    
End

Public Sub _OnInitialize()
    
    With Me._$menuItem
        .Text = ("Foreground Color")
        .Picture = MikuruColorChip[NagatoSettingsScale.Foreground]
    End With
    
End
