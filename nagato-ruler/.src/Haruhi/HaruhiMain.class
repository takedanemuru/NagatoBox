Private $rootMenu As New NagatoContextMenu
Private $painter As New NagatoPainter

Public Sub Reload()
    
    Me.Picture = $painter.GetPicture()
    
End

Public Sub Form_MouseDrag()

    Me.X = Mouse.ScreenX - Mouse.StartX
    Me.Y = Mouse.ScreenY - Mouse.StartY

End

Public Sub Form_Menu()
    
    $rootMenu.Popup()
    
End

Public Sub _new()
    
    Me.W = NagatoSettings.PaletteSize
    Me.H = NagatoSettings.PaletteSize
    Me.Mask = True
    Me.Stacking = Window.Above
    Me.Sticky = True
    Me.Picture = $painter.GetPicture()
    
End
