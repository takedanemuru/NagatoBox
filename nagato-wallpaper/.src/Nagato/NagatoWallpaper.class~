Public Sub SetLast()
    
    With NagatoSettings
        If Exist(MikuruHidden.PathOriginalImage) Then
            NagatoPreview.CalendarPosition = .LastCalendarPosition
            Me.Set(MikuruHidden.PathOriginalImage, .LastColor, .LastMode)
        Endif
    End With
    
End
