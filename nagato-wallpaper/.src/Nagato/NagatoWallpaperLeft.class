Inherits NagatoWallpaperRendarer

Public Sub Set(argImage As Image)
    
    Dim yukiImage As Image = New Image(Screen.W, Screen.H, NagatoPreviewProperties.Color)
    Dim yukiPoint As PointF = MikuruImagePosition.GetCenter(argImage)
    
    Paint.Begin(yukiImage)
        Paint.DrawImage(argImage, 0, yukiPoint.Y)
    Paint.End()
    
    Me._SaveModefiedImage(yukiImage)
    
End
