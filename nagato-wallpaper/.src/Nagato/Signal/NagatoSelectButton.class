' Gambas class file

Inherits NagatoSignal

Private $button As Button

Public Sub _new(argContainer As Container)
    
    $button = New Button(argContainer) As "Button"
    
    With $button
        .Picture = MikuruIcon["folder"]
        .Text = "Select"
        .W = 84
    End With
    
End

Public Sub Button_Click()

    If HaruhiFileChooser.ShowDialog() = MikuruDialog.ResponseSelected Then 
        Raise Signal(MikuruSignal.PropertyPathChanged, [MikuruDialog.Path])
    End If

End
