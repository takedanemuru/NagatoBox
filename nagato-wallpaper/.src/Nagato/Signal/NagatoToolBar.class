Inherits NagatoSignal

Private $hBox As HBox
Private $selectButton As NagatoSelectButton
Private $modeComboBox As NagatoModeComboBox
Private $colorButton As NagatoColorButton
Private $helpButton As NagatoHelpButton
Private $applyButton As NagatoApplyButton

Private Sub initializeHBox(argContainer As Container)
    
    $hBox = New HBox(argContainer)
    
    With $hBox
        .H = 28
    End With
    
End

Private Sub initializeWidgets()
    
    $selectButton = New NagatoSelectButton($hBox) As "TFEI"
    $modeComboBox = New NagatoModeComboBox($hBox) As "TFEI"
    $colorButton = New NagatoColorButton($hBox) As "TFEI"
    $helpButton = New NagatoHelpButton($hBox) As "TFEI"
    $applyButton = New NagatoApplyButton($hBox) As "TFEI"
    
End

Public Sub _new(argContainer As Container)
    
    initializeHBox(argContainer)
    initializeWidgets()
    
End
