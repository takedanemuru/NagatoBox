Inherits NagatoSignal

Private $comboBox As ComboBox

Public Sub _new(argContainer As Container)
    
    $comboBox = New ComboBox(argContainer) As "ModeComboBox"
    
    With $comboBox
        .ReadOnly = True
        .Expand = True
        .List = MikuruRenderMode.List
        .Index = NagatoSettings.LastMode
    End With
    
End

Public Sub ModeComboBox_Click()
    
    NagatoPreviewProperties.Mode = $comboBox.Index
    
    Raise Signal(MikuruSignal.PropertyModeChanged, [$comboBox.Index])
    
End
