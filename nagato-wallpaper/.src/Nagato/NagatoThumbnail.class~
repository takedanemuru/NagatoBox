' Gambas class file

Create Private

Static Public Sub Set(argMode As Integer)
    
    Dim yukiThumbnail As Object
    
    Select Case argMode
        Case MikuruRenderMode.Tile
            yukiThumbnail = New NagatoThumbnailTile
        Case MikuruRenderMode.Full
            yukiThumbnail = New NagatoThumbnailFull
        Case MikuruRenderMode.Fill
            yukiThumbnail = New NagatoThumbnailFill
        Case MikuruRenderMode.Fit
            yukiThumbnail = New NagatoThumbnailFit
        Case MikuruRenderMode.Center
            yukiThumbnail = New NagatoThumbnailCenter
        Case MikuruRenderMode.TopLeft
            yukiThumbnail = New NagatoThumbnailTopLeft
        Case MikuruRenderMode.TopCenter
            yukiThumbnail = New NagatoThumbnailTopCenter
        Case MikuruRenderMode.TopRight
            yukiThumbnail = New NagatoThumbnailTopRight
        Case MikuruRenderMode.Left
            yukiThumbnail = New NagatoThumbnailLeft
        Case MikuruRenderMode.Right
            yukiThumbnail = New NagatoThumbnailRight
        Case MikuruRenderMode.BottomLeft
            yukiThumbnail = New NagatoThumbnailBottomLeft
        Case MikuruRenderMode.BottomCenter
            yukiThumbnail = New NagatoThumbnailBottomCenter
        Case MikuruRenderMode.BottomRight
            yukiThumbnail = New NagatoThumbnailBottomRight
    End Select
    
    yukiThumbnail.Paint()
    
End

Public Function _GetOriginPoint(argImage As Image) As PointF
    
    Dim yukiPoint As New PointF

    With HaruhiEdit
        yukiPoint.X = IIf(argImage.W = .PreviewW, 0, (.PreviewW - argImage.W) / 2)
        yukiPoint.Y = IIf(argImage.H = .PreviewH, 0, (.PreviewH - argImage.H) / 2)
    End With
    
    Return yukiPoint
    
End

Public Sub Paint()
    
    ' virtual
    
End
