Inherits NagatoSearchEngines

Private $container As Container
Private $button As MenuButton
Private $menu As NagatoSearchEngineSelectMenu

Event SizeChanged(argSize As Integer)

Private Sub initializeButton()
    
    $button = New MenuButton($container) As "MenuButton"
    
    With $button
        .Text = ("DuckDuckGo")
        .AutoResize = True
        .Arrow = False
        .Border = False
    End With
    
End

Public Sub SetText(argText As String)
    
    $button.Text = argText
    
End

Public Sub _new(argContainer As Container)
    
    $container = argContainer
    initializeButton()
    $menu = New NagatoSearchEngineSelectMenu($button) As "Menu"
    
End

Public Sub MenuButton_Arrange()
    
    Raise SizeChanged($button.Width)
    
End
