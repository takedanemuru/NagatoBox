Private $container As Container

Public Sub Capture()
    
    Dim yukiPicture As Picture
    
    Debug $container.Children[0].Y
    Debug $container.Children[0].H
    
    With $container
        yukiPicture = Desktop.Screenshot(.X, .Y, .W, .H)
    End With
    
    Try yukiPicture.Save(User.Home &/ "screencapture.png")
    
    If Not Error Then Debug "page captured."
    
End

Public Sub _new(argContainer As Container)
    
    $container = argContainer
    
End
