' Gambas class file

Inherits NagatoTable

Public Sub _EnsureTable()
    
    Dim yukiTable As Table
    
    Try Me._$connection.Open()
    
    With NagatoDBWeb
        If Not Me._$connection.Tables.Exist(.TableHistory) Then
            yukiTable = Me._$connection.Tables.Add(.TableHistory)
            yukiTable.Fields.Add(.ColumnId, db.Serial)
            yukiTable.Fields.Add(.ColumnTimeStamp, db.Date)
            yukiTable.Fields.Add(.ColumnUrl, db.String)
            yukiTable.Fields.Add(.ColumnPageName, db.String)
            yukiTable.PrimaryKey = [.ColumnId]
            yukiTable.Update()
        Endif
    End With

End

Public Sub GetAll() As Result
    
    Return Me._$connection.Find(NagatoDBWeb.TableHistory, "order by time_stamp desc limit 1000")
    
End

Public Sub PushHistory(argUrl As String, argTitle As String)
    
    Dim yukiResult As Result
    
    Me._$connection.Begin()
        yukiResult = Me._$connection.Create(NagatoDBWeb.TableHistory)
        yukiResult[NagatoDBWeb.ColumnTimeStamp] = Now()
        yukiResult[NagatoDBWeb.ColumnUrl] = argUrl
        yukiResult[NagatoDBWeb.ColumnPageName] = argTitle
        yukiResult.Update()
    Me._$connection.Commit()
    
Catch
    Me._$connection.Rollback()
    
End
