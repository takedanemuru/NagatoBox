' Gambas class file

Inherits NagatoTable

Public Sub _EnsureTable()
    
    Dim yukiTable As Table
    
    With NagatoDBWeb2
        If Not Me._$connection.Tables.Exist(.TableWebCategories) Then
            yukiTable = Me._$connection.Tables.Add(.TableWebCategories)
            yukiTable.Fields.Add(.ColumnId, db.Serial)
            yukiTable.Fields.Add(.ColumnCategory, db.Integer)
            yukiTable.Fields.Add(.ColumnIcon, db.Blob)
            yukiTable.Fields.Add(.ColumnUrl, db.String)
            yukiTable.Fields.Add(.ColumnLastAccessed, db.Date)
            yukiTable.PrimaryKey = [.ColumnId]
            yukiTable.Update()
        Endif
    End With
    
End

Public Function HasBookmark() As Boolean
    
    If Me._$connection.Find(NagatoDBWeb2.TableWebPages).Count > 0 Then
        Return True
    Else
        Return False
    Endif
    
End
