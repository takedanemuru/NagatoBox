Inherits NagatoSettingsCore

Property Path As String
Property Y As Integer
Property Lock As Boolean

Private Function Path_Read() As String

    Return Me._$settings["persona/path", "pictures/default_persona.png"]
    
End

Private Sub Path_Write(Value As String)

    Me._$settings["persona/path"] = Value
    Me._$settings.Save()

End

Private Function Y_Read() As Integer

    Return Me._$settings["persona/y", 0]

End

Private Sub Y_Write(Value As Integer)

    Me._$settings["persona/y"] = Value
    Me._$settings.Save()

    If Not Error Then MikuruPersona.Reset()

End

Private Function Lock_Read() As Boolean

    Return Me._$settings["persona/lock", False]

End

Private Sub Lock_Write(Value As Boolean)

    Me._$settings["persona/lock"] = Value
    Me._$settings.Save()

End
