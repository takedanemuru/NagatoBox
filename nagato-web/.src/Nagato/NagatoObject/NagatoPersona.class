Inherits NagatoObject

Private $tabs As NagatoTabs
Private $handlerPainter As NagatoPersonaHandlerPainter
Private $handlerUserInput As NagatoPersonaHandlerUserInput
Private $handlerUserInputForBackground As NagatoPersonaHandlerUserInputForBackground


Public Sub Refresh()
    
    $handlerPainter.Refresh()
    
End

Public Sub SetText(argText As String)
    
    $handlerPainter.SetText(argText)
    
End

Public Sub _new(argDrawingArea As DrawingArea)
    
    $tabs = New NagatoTabs(argDrawingArea)
    $handlerPainter = New NagatoPersonaHandlerPainter(argDrawingArea, $tabs) As "TFEI"
    $handlerUserInput = New NagatoPersonaHandlerUserInput(argDrawingArea, $tabs) As "TFEI"
    $handlerUserInputForBackground = New NagatoPersonaHandlerUserInputForBackground(argDrawingArea)
    
End
