Inherits NagatoObject

Private $treeView As TreeView

Private $handlerData As NagatoBookmarkTreeViewHandlerData
Private $handlerUserInput As NagatoBookmarkTreeViewHandlerUserInput
Private $handlerContextMenu As NagatoBookmarkTreeViewHandlerContextMenu

Public Sub _new(argContainer As Container)
    
    $treeView = New TreeView(argContainer) 
    $treeView.Foreground = Color.DarkCyan
    $treeView.Drop = True
    
    $handlerData = New NagatoBookmarkTreeViewHandlerData($treeView)
    $handlerUserInput = New NagatoBookmarkTreeViewHandlerUserInput($treeView) As "TFEI"
    $handlerContextMenu = New NagatoBookmarkTreeViewHandlerContextMenu($treeView) As "TFEI"
    
End

Public Sub TFEI_RequestRemove(argData As String)
    
    $handlerData.RemoveBookmark(argData)
    
End

Public Sub TFEI_RequestRefresh()
    
    $handlerData.Reload()
    
End
