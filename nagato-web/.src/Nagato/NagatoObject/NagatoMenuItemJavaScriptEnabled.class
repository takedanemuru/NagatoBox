Inherits NagatoMenuItem

Public Sub _OnInitializeMenuItem()
    
    With Me._$menuItem
        .Text = ("JavaScript Enabled")
        .Picture = MikuruIcon.GetCheckButton(NagatoSettings.JavaScriptEnabled)
    End With
    
End

Public Sub _OnClickMenuItem()
    
    NagatoSettings.JavaScriptEnabled = Not NagatoSettings.JavaScriptEnabled
    WebSettings[WebSettings.JavascriptEnabled] = NagatoSettings.JavaScriptEnabled
    
End
