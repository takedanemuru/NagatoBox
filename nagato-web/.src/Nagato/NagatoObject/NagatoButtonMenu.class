Inherits NagatoObject

Public _$rootMenu As Menu

Public Function _AbstractOnGetUniqueName() As String
    
    Return ""
    
End

Public Sub _InitializeRootMenu(argButton As MenuButton)
    
    Me._$rootMenu = New Menu(HaruhiMain)  
    Me._$rootMenu.Name = Me._AbstractOnGetUniqueName()
    
    argButton.Menu = Me._AbstractOnGetUniqueName()
    
End

Public Sub _AddMenu(argText As String, argTag As Integer, Optional argIconName As String)
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "MenuItem"
    
    With yukiMenu
        .Text = argText
        .Tag = argTag
        If argIconName Then .Picture = MikuruIcon.Get(argIconName)
    End With
    
End

Public Sub _InitializeCategoryMenus()
    
    
    
End

Public Sub _new(argButton As MenuButton)
    
    Me._InitializeRootMenu(argButton)
    Me._InitializeCategoryMenus()
    
End
