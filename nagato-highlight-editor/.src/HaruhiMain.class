Public Sub _new()

End

Public Sub Form_Open()

    Dim yukiFile As String = File.Load("nagato_slide.css")

    Application.MainWindow = Me

    MainEditor.Highlight = Highlight.CSS
    MainEditor.TabSize = 4
    MainEditor.Text = yukiFile
    MainEditor.Font.Size = 15
    MainEditor.Font.Name = "Times New Roman"
    MainEditor.Flags[MainEditor.ShowLineNumbers] = True
    MainEditor.Flags[MainEditor.ShowModifiedLines] = True
    
    With MainEditor.Styles
        .[Highlight.Background].Color = 16247
        .[Highlight.Number].Foreground = Color.Red
        .[Highlight.Keyword].Foreground = 14114815
        .[Highlight.Normal].Foreground = Color.White
        .[Highlight.String].Foreground = Color.White
        .[Highlight.Symbol].Foreground = Color.White
        .[Highlight.CSS].Color = Color.Yellow
        .[Highlight.Function].Foreground = Color.Cyan
    End With
    
End
