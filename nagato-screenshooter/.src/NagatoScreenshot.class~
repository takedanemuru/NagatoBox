' Gambas class file

Create Static

Private Sub playSound()
    
    Dim yukiSound As New Sound("sound/camera-snap.wav") 
    
    yukiSound.Play()
    
End

Public Sub TakeNow()
    
    playSound()
    HaruhiSave.Show()
    
End

Public Sub TakeDelay(argDelay As Integer)
    
    Debug argDelay
    
    Wait argDelay
    
    TakeNow()
    
End
