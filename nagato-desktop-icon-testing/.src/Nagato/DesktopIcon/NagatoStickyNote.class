' Gambas class file

Inherits NagatoIcon

Private Sub setFormPicture(Optional argBackground As Integer = NagatoSettings.BackgroundStickyNote)
    
    Dim yukiBaseImage As New Image(128, 32, Color.LightGray)
    
    Paint.Begin(yukiBaseImage)
        Paint.Brush = Paint.Color(Color.White)
        Paint.Font.Bold = True
        Paint.DrawRichText("YUKI.N>...", 4, 4, 120, 24, Align.Center)
    Paint.End()
    
    Me._$form.Picture = yukiBaseImage.Picture
    
End

Public Sub _new()
    
    Me._InitializeForm(32)
    Me._$form.Show
    setFormPicture()
    
End
