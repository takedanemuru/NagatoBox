' Gambas class file

Private Sub setFontsComboBox()
    
    Dim yukiFont As String
    
    FontsComboBox.List.Clear()
    
    For Each yukiFont In Fonts
        FontsComboBox.Add(yukiFont)
    Next
    
End

Public Sub _new()

    Dim yukiConfgGtk2 As NagatoConfigFile
    Dim yukiConfgGtk3 As NagatoConfigFile
    Dim yukiConfgGtkTest As NagatoConfigFile

    Application.MainWindow = Me

    yukiConfgGtk2 = New NagatoConfigFile(MikuruGtkConfig.Gtk2Settings)
    yukiConfgGtk3 = New NagatoConfigFile(MikuruGtkConfig.Gtk3Settings)
    yukiConfgGtkTest = New NagatoConfigFile(User.Home &/ "gtkrc-2.0test")

    Debug yukiConfgGtkTest["gtk-theme-name"]

    yukiConfgGtkTest["gtk-theme-name"] = "nagato-yuki"
    
    'yukiConfgGtkTest.SetValue("gtk-theme-name", "Adwaita")

End

Public Sub Form_Open()

    Me.Center()

    MikuruGtkThemes.Reload()

    ThemesComboBox.List = MikuruGtkThemes.Names
    setFontsComboBox()

End
