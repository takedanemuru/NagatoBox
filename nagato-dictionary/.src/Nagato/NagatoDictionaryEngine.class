Private Function getCommand() As String
    
    ' command options
    '  -i : ignore case
    ' -w : exact match
    
    If NagatoSettings.IgnoreCase Then
        Return IIf(NagatoSettings.ExactMatch, "grep -w -i &1 &2", "grep -i &1 &2")
    Else
        Return IIf(NagatoSettings.ExactMatch, "grep -w &1 &2", "grep &1 &2")
    Endif
    
End

Public Function GetSerchResultStarndardDictionary(argQuery As String) As String
    
    Dim yukiCommandLine As String = Subst$(getCommand(), argQuery, NagatoSettings.DictionaryFilePath)
    Dim yukiBuffer As String
    
    Shell yukiCommandLine To yukiBuffer 
    
    Return yukiBuffer
    
End

