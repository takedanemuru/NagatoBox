' Gambas class file

Inherits NagatoUxContainer

Public Enum TypeJapanese, TypePronunciation, TypeEnglish

Public Sub _Initialize() ' override
    
    Dim yukiRadioButton As RadioButton
    Dim yukiQueries As String[] = ["Japanese", "Pron.", "English"]
    Dim yukiIndex As Integer
    
    For yukiIndex = 0 To yukiQueries.Max
        yukiRadioButton = New RadioButton(Me._$parentContainer) As "QuerySelector"
        With yukiRadioButton
            If yukiIndex = 0 Then .Value = True
            .Text = yukiQueries[yukiIndex]
            .Tag = yukiIndex
            .AutoResize = True
        End With
    Next
    
End

Public Sub QuerySelector_Click()
    
    Raise Signal(MikuruSignal.QueryTypeChanged, [Last.Tag])
    
End
