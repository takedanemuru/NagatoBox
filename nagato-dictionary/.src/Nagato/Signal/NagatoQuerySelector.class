' Gambas class file

Inherits NagatoUxContainer

Property Read Type As Integer

Public Enum TypeAuto, TypeJapanese, TypePronunciation, TypeEnglish

Private $type As Integer = 0

Public Sub _Initialize() ' override
    
    Dim yukiRadioButton As RadioButton
    Dim yukiQueries As String[] = [("Auto"), ("Japanese"), ("Pronunciation"), ("English")]
    Dim yukiIndex As Integer
    
    For yukiIndex = 0 To yukiQueries.Max
        yukiRadioButton = New RadioButton(Me._$parentContainer) As "QuerySelector"
        With yukiRadioButton
            If yukiIndex = $type Then .Value = True
            .Text = yukiQueries[yukiIndex]
            .Tag = yukiIndex
            .AutoResize = True
        End With
    Next
    
End

Public Sub QuerySelector_Click()
    
    $type = Last.Tag
    
End

Private Function Type_Read() As Integer

    Return $type

End
