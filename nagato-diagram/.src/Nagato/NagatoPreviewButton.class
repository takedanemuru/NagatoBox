Inherits NagatoObject

Private $button As MenuButton

Private Sub initializeButton(argContainer As Container)
    
    $button = New MenuButton(argContainer) As "Button"
    
    With $button
        .AutoResize = True
        .Border = False
        .Arrow = False
        .Text = "Preview"
        .Tag = MikuruSignal.PreviewRefresh
    End With
    
End

Public Sub _new(argContainer As Container)
    
    initializeButton(argContainer)
    
End

Public Sub Button_Click()
    
    Raise Signal(Last.Tag, Null)
    
End
