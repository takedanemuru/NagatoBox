' Gambas class file

Inherits NagatoObject

Property Read Text As String

Private $editor As TextEditor

Private Sub initializeTextEditor(argContainer As Container)
    
    $editor = New TextEditor(argContainer) As "TextEditor"
    
    With $editor
        .Highlight = "c"
        .TabSize = 4
        .Font.Size = 12
        .Text = File.Load("Text/Template_1")
        .ShowLineNumber = True
        .LineNumberOffset = True
        .ShowSpaces = True
    End With
    
End

Public Sub _new(argContainer As Container)
    
    initializeTextEditor(argContainer)
    
End

Private Function Text_Read() As String

    Return $editor.Text

End

Public Sub TextEditor_KeyPress()
    
    Debug Key.Code
    
End
