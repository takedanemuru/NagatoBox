Inherits NagatoObject

Public _$container As Container
Public _$button As MenuButton

Public Sub _AddButton(argText As String, argTag As Integer, Optional argIconName As String)
    
    Me._$button = New MenuButton(Me._$container) As "Button"
    
    With Me._$button
        .AutoResize = True
        .Border = False
        .Arrow = False
        .Text = argText
        .Tag = argTag
        If argIconName Then .Picture = MikuruIcon[argIconName]
    End With
    
End

Public Sub _OnInitializeButton()
    
    
End

Public Sub _OptionalOnInitializePullDownMenu()
    
    
End

Public Sub _new(argContainer As Container)
    
    Me._$container = argContainer
    Me._OnInitializeButton()
    Me._OptionalOnInitializePullDownMenu()
    
End

Public Sub Button_Click()
    
    Raise Signal(Last.Tag, Null)
    
End
