Inherits NagatoObject

Property Read Closable As String

Private $hSplit As NagatoWidgetSplitter
Private $sourceEditor As NagatoWidgetSubContainerSourceEditor
Private $previewer As NagatoWidgetSubContainerPreviewer

Public Sub _new(argContainer As Container)
    
    $hSplit = New NagatoWidgetSplitter(argContainer)
    $sourceEditor = New NagatoWidgetSubContainerSourceEditor($hSplit.Container) As "SubContainer"
    $previewer = New NagatoWidgetSubContainerPreviewer($hSplit.Container) As "SubContainer"
    $hSplit.RestoreLayout()
    
End

Public Sub SubContainer_Signal(argSignal As Integer, argValues As Variant[])
    
    Select Case argSignal
        Case MikuruSignal.PreviewRefresh
            If argValues Then $previewer.ShowPreview(argValues[0])
    End Select
    
End

Private Function Closable_Read() As String

    Return $sourceEditor.Closable

End
