' Gambas class file

Private $mainContainer As NagatoMainContainer

Public Sub _new()
    
    Application.MainWindow = Me
    $mainContainer = New NagatoMainContainer(MainVBox) 
    
End

Public Sub Form_Open()
    
    NagatoSettingsForm.Load(Me)
    
End

Public Sub Form_Close()
    
    If $mainContainer.Closable Then
        NagatoSettingsForm.Save(Me)
    Else
        Stop Event
    End If
    
End
