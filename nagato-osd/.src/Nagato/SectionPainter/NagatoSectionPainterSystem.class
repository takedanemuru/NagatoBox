Private $painterHeader As New NagatoPainterHeader
Private $painterTextElement As New NagatoPainterTextElement
Private $painterText As New NagatoPainterText

Public Sub _call(argY As Integer) As Integer
    
    Dim yukiY As Integer = argY
    
    yukiY = $painterHeader(yukiY, "System")
    If NagatoSystemMonitor.Activated Then
        yukiY = $painterTextElement(yukiY, "CPU : ", Format(NagatoSystemMonitor.CpuUsage, "#0.00 %"))
        yukiY = $painterTextElement(yukiY, "Memory : ", Format(NagatoSystemMonitor.MemoryUsage, "#0.00 %"))
        yukiY = $painterTextElement(yukiY, "Swap : ", Format(NagatoSystemMonitor.SwapUsage, "#0.00 %"))
        yukiY = $painterTextElement(yukiY, "Processes : ", NagatoSystemMonitor.ProcessCount)
        yukiY = $painterTextElement(yukiY, "Thermal : ", NagatoSystemMonitor.Thermal & " Â°C")
    Else
        yukiY = $painterText(yukiY, "please wait ...")
    End If
    
    Return yukiY + 8
    
End

Public Sub _new()
    
    NagatoSystemMonitor.Start(1)
    
End
