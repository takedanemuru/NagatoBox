Inherits NagatoPainterTextCore

Public Sub _call(argStartY As Integer, argHeaderText As String, argValueText As String) As Integer
    
    Me._ResetTextData(argStartY, argValueText)
    If argStartY + Me._$textHeight + 8 >= HaruhiMain.H Then Return argStartY + Me._$textHeight

    Me._PaintText(argHeaderText, Align.Left)
    Me._PaintText(argValueText, Align.Right)
    
    Return argStartY + Me._$textHeight
    
End
