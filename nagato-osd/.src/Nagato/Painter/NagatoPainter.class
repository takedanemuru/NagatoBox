' Gambas class file

Private $painterBackground As New NagatoPainterBackground
Private $painterClock As New NagatoSectionPainterClock
Private $painterAnalogClock As New NagatoPainterAnalogClock
Private $painterSystem As New NagatoSectionPainterSystem
Private $painterMusic As New NagatoSectionPainterMusic
Private $painterRss As New NagatoSectionPainterRss

Private $drawingArea As DrawingArea

Public Sub _new(argContainer As Container)
    
    $drawingArea = New DrawingArea(argContainer) As "DrawingArea"
    
End

Public Sub _call()
    
    $drawingArea.Refresh()
    
End

Public Sub DrawingArea_Draw()
    
    Dim yukiY As Integer = NagatoSettingsForm.TopMargin
    
    Paint.Begin($drawingArea)
        Paint.AntiAlias = True
        'Paint.Font.Bold = True
        'Paint.Font.Name = "Times New Roman"
        $painterBackground()
        yukiY = $painterClock(yukiY)
        yukiY = $painterAnalogClock(yukiY)
        yukiY = $painterSystem(yukiY)
        yukiY = $painterMusic(yukiY)
        'yukiY = $painterRss(yukiY)
    Paint.End()
    
End
