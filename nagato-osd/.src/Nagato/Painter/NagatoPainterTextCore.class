' Gambas class file

Public _$textHeight As Integer
Public _$textRect As New Rect

Public Sub _ResetTextData(argStartY As Integer, argText As String) 
    
    Paint.Font.Size = NagatoSettingsFonts.SizeContent
    
    Me._$textHeight = Paint.Font.RichTextHeight(argText, NagatoSettingsForm.ContentWidth)
    
    With Me._$textRect
        .X = NagatoSettingsForm.SideMargin
        .Y = argStartY
        .W = NagatoSettingsForm.ContentWidth
        .H = Me._$textHeight
    End With
    
End

Public Sub _PaintText(argText As String, argAlign As Integer)
    
    With Me._$textRect
        Paint.Brush = Paint.Color(NagatoSettingsFonts.ShadeColor + NagatoSettingsFonts.Transparency)
        Paint.DrawRichText(argText, .X + 1, .Y + 1, .W, .H, argAlign)
        Paint.Fill()
        Paint.Brush = Paint.Color(NagatoSettingsFonts.BaseColor + NagatoSettingsFonts.Transparency)
        Paint.DrawRichText(argText, .X, .Y, .W, .H, argAlign)
        Paint.Fill()
    End With
    
End
