Inherits NagatoPainterTextCore

Public Sub _call(argStartY As Integer, argText As String, Optional argAlign As Integer = Align.Center) As Integer
    
    Me._ResetTextData(argStartY, argText)
    If argStartY + Me._$textHeight + 8 >= HaruhiMain.H Then Return argStartY + Me._$textHeight
    
    Me._PaintText(argText, argAlign)
    
    Return argStartY + Me._$textHeight 
    
End
