Public Sub _call(argBootomLine As Integer, argText As String, argWidth As Integer)
    
    Dim yukiTextHeight As Integer = Paint.Font.RichTextHeight(argText, argWidth - 16)
    Dim yukiShadeHeight As Integer = yukiTextHeight + 16
    Dim yukiOffset As Integer = (HaruhiMain.W - argWidth) / 2
    Dim yukiRectForShade As New Rect(yukiOffset, argBootomLine - yukiShadeHeight, argWidth, yukiShadeHeight)
    Dim yukiRectForText As New Rect(yukiOffset + 8, yukiRectForShade.y + 8, argWidth - 16, yukiTextHeight)
    
    Paint.Brush = Paint.Color(Color.Violet + Color.Transparent * 128)
        Paint.Rectangle(yukiRectForShade.X, yukiRectForShade.Y, yukiRectForShade.W, yukiRectForShade.H)
    Paint.Fill()
    
    ' Paint.Brush = Paint.Color(Color.White)
    '     With yukiRectForText 
    '         Paint.DrawRichText(argText, .X + 1, .Y + 1, .W + 1, .H + 1, Align.Center)
    '     End With
    ' Paint.Fill()

    Paint.Brush = Paint.Color(Color.White)
        With yukiRectForText 
            Paint.DrawRichText(argText, .X, .Y, .W, .H, Align.Center)
        End With
    Paint.Fill()
    
End
