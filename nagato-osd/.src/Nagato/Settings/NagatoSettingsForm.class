' Gambas class file

Inherits NagatoSettings

Property Width As Integer
Property TopMargin As Integer
Property SideMargin As Integer
Property Read ContentWidth As Integer

Private Function Width_Read() As Integer

    Return Me._$settings["form/width", 200]

End

Private Sub Width_Write(Value As Integer)

    Me._$settings["form/width"] = Value
    Me._$settings.Save()

End

Private Function TopMargin_Read() As Integer

    Return Me._$settings["form/top_margin", 16]

End

Private Sub TopMargin_Write(Value As Integer)

    Me._$settings["form/top_margin"] = Value
    Me._$settings.Save()

End

Private Function SideMargin_Read() As Integer

    Return Me._$settings["form/side_margin", 8]

End

Private Sub SideMargin_Write(Value As Integer)

    Me._$settings["form/side_margin"] = Value
    Me._$settings.Save()
    
End

Private Function ContentWidth_Read() As Integer

    Return Me.Width - Me.SideMargin * 2

End
