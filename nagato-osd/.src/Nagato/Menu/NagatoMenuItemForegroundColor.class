Inherits NagatoMenuItem

Public Sub _OnMenuItemClick()
    
    If Dialog.SelectColor() Then Return

    NagatoSettingsFonts.BaseColor = Dialog.Color
    Me._$menuItem.Picture = MikuruColorChip[Dialog.Color]
    
End

Public Sub _OnInitializeMenuItem()
    
    With Me._$menuItem
        .Text = ("Font Color")
        .Picture = MikuruColorChip[NagatoSettingsFonts.BaseColor]
    End With
    
End
