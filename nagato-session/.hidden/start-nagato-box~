NAGATO_CONFIG_DIR="${XDG_CONFIG_HOME:-"$HOME/.config"}/nagato-box"

# Ensure NAGATO_CONFIG_DIR and nagato-box-rc.xml
if [ ! -f "${NAGATO_CONFIG_DIR}/nagato-box-rc.xml" ]; then
    mkdir -p "${NAGATO_CONFIG_DIR}"
    cp /etc/xdg/nagato-box-rc.xml "${NAGATO_CONFIG_DIR}/nagato-box-rc.xml"
fi

# Run Openbox, and have it run the autostart stuff
NAGATO_CONFIG_FILE="${XDG_CONFIG_HOME:-"$HOME/.config"}/nagato-box/nagato-box-rc.xml"
exec openbox --config-file ${NAGATO_CONFIG_FILE} --startup "/usr/bin/nagato-box-autostart NagatoBox" "$@"
