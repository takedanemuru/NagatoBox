' Gambas class file

Create Static

Public Enum None, Choir, Ubuntu, Welcumz, UserDefined

Public Sub PlayDefault()
    
    Dim yukiPath As String = Temp() & ".wav"
    
    Select Case NagatoSettingsLoginSound.Mode
        Case Me.None
            Return
        Case Me.Choir
            Copy "sounds/choir.wav" To yukiPath
        Case Me.Welcumz
            Copy "sounds/welcumz.wav" To yukiPath
        Case Me.Ubuntu
            Copy "sounds/ubuntu.wav" To yukiPath
    End Select

    Exec ["play", yukiPath]

End
