Inherits NagatoUXContainerVirtical

Private $listEditor As ListEditor

Private Sub initializeListEditor()
    
    $listEditor = New ListEditor(Me._$container) As "ListEditor"
    
    With $listEditor
        .Expand = True
    End With
    
End

Public Sub SetList(argList As String[])
    
    $listEditor.List = argList
    
End

Public Sub _OnInitializeWidgets()
    
    Object.New("NagatoWidgetStaticLabel", [Me._$container, Me._$title, 30])
    initializeListEditor()
    
End
