' Gambas class file

Create Static

Property Done As Boolean

Public Enum None, Choir, Ubuntu, Welcumz, UserDefined

Private $done As Boolean = False

Public Sub PlayDefault()
    
    Dim yukiSound As Sound
    
    Select Case NagatoSettings.LoginSoundMode
        Case Me.None
            Me.Done = True
            Return
        Case Me.Choir
            yukiSound = New Sound("sounds/choir.wav")
        Case Me.Welcumz
            yukiSound = New Sound("sounds/welcumz.wav")
        Case Me.Ubuntu
            yukiSound = New Sound("sounds/ubuntu.wav")
    End Select
    
    yukiSound.Play()
    Me.Done = True
    
End

Private Function Done_Read() As Boolean

    Return $done

End

Private Sub Done_Write(Value As Boolean)

    $done = Value
    
    If $done And If NagatoXdgAutostarts.Done Then Quit 0

End
