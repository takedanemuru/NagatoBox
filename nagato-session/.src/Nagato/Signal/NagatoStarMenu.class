    Me._AddAdditionalMenu()
        MikuruMenuSeparator.Set(Me._$rootMenu)
    Object.New("NagatoMenuItemAbout", [Me._$rootMenu, ("About"), "star"])
    Object.New("NagatoMenuItemQuit", [Me._$rootMenu, ("Quit"), "button-power"])
    
End
