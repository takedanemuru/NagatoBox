Property Read Data As String[]
Property Read MaxWidth As Integer

Private $data As New String[]

Public Sub Add(argData As String[])
    
    Dim yukiData As String
    
    For Each yukiData In argData
        If Not $data.Exist(yukiData) Then $data.Add(yukiData)
    Next
    
End

Private Function Data_Read() As String[]

    Return $data

End

Private Function MaxWidth_Read() As Integer

    Dim yukiWidth As Integer
    Dim yukiString As String
    
    For Each yukiString In $data
        yukiWidth = Max(yukiWidth, HaruhiMain.Font.TextWidth(yukiString) + 16)
    Next
    
    Return yukiWidth
    
End
