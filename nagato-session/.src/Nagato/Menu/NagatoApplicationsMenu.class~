' Gambas class file

Inherits NagatoGearMenu

Public _$menuName As String = "ApplicationsMenu"

Event Add
Event Edit

Private Sub addAddMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "AddMenu"
    
    With yukiMenu
        .Text = ("Add")
        .Picture = MikuruIcon.Get("toggle-expand-alt")
    End With
    
End

Private Sub addEditMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "EditMenu"
    
    With yukiMenu
        .Text = ("Edit")
        .Picture = MikuruIcon.Get("document-edit")
    End With
    
End

Public Sub _AddAdditionalMenu() 'override
    
    addAddMenu()
    addEditMenu()
    
End

Public Sub AddMenu_Click()
    
    Raise Add
    
End

Public Sub EditMenu_Click()
    
    Raise Edit
    
End
