' Gambas class file

Inherits NagatoGearMenu

Public _$menuName As String = "UserAutosartMenu"

Event Delete
Event Edit

Private Sub addDeleteMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "DeleteMenu"
    
    With yukiMenu
        .Text = ("Delete")
        .Picture = Stock["medium/delete"]
    End With
    
End

Private Sub addEditMenu()
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "EditMenu"
    
    With yukiMenu
        .Text = ("Edit")
        .Picture = Stock["medium/pen"]
    End With
    
End

Public Sub _AddAdditionalMenu() 'override
    
    addDeleteMenu()
    addEditMenu()
    
End

Public Sub EditMenu_Click()
    
    Raise Edit
    
End

Public Sub DeleteMenu_Click()
    
    Raise Delete
    
End
