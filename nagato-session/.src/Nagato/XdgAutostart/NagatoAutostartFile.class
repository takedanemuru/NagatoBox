' Gambas class file

Property Read Overridden As Boolean
Property Read Path As String
Property Read Name As String
Property Read Exec As String
Property Read TryExec As String
Property Read Required As Boolean
Property Read Hide As Boolean
Property Read OnlyShowInByText As String
Property Read NotShowInByText As String
Property Read OnlyShowIn As String[]
Property Read NotShowIn As String[]

Private $path As String
Private $properties As NagatoAutostartFileProperties

Public Sub _new(argPath As String)
    
    $path = argPath
    $properties = New NagatoAutostartFileProperties(argPath)
    
End

Private Function Name_Read() As String

    Return File.Name($path)

End

Private Function Required_Read() As Boolean

    Return $properties.Required

End

Private Function Exec_Read() As String

    Return $properties.Exec

End

Private Function TryExec_Read() As String

    Return $properties.TryExec

End

Private Function Hide_Read() As Boolean

    Return $properties.Hide

End

Private Function OnlyShowInByText_Read() As String

    Return $properties.OnlyShowIn.Join("; ")

End

Private Function NotShowInByText_Read() As String

    Return $properties.NotShowIn.Join("; ")

End

Private Function Path_Read() As String

    Return $path

End

Private Function Overridden_Read() As Boolean

    If $path Not Begins MikuruAutostartDirectory.Global Then Return False
    
    Return Dir(MikuruAutostartDirectory.User).Exist(Me.Name)
    
End

Private Function OnlyShowIn_Read() As String[]

    Return $properties.OnlyShowIn

End

Private Function NotShowIn_Read() As String[]

    Return $properties.NotShowIn

End
