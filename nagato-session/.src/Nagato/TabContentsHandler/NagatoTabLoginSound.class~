' Gambas class file

Create Static

Private $typeSelector As NagatoWidgetModeSelector
Private $fileSelector As NagatoWidgetFileSelect

Public Sub Activate()
    
    $typeSelector = New NagatoWidgetModeSelector(HaruhiMain.TypeSelectComboBox) As "TypeSelector"
    $fileSelector = New NagatoWidgetFileSelect(HaruhiMain.FileSelectBox)
    
End

Public Sub TypeSelector_Change()
    
    $fileSelector.Refresh()
    
End
