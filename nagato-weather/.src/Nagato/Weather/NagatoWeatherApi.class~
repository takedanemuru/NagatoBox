Private Const WeatherApi As String = "http://api.yr.no/weatherapi/locationforecastlts/1.9/?lat=&1;lon=&2;msl=5"

Public Function Get(argLatitude As Float, argLongitude As Float, argAltitude As Float) As String
    
    Return Subst$(WeatherApi, argLatitude, argLongitude)
    
End
