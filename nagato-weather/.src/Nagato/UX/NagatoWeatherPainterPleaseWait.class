Private Sub drawTextContent()
    
    Paint.Brush = Paint.Color(Color.White)
    Paint.Font.Bold = True
    Paint.DrawRichText("Please wait...", 0, 0, Me._$drawingArea.W, Me._$drawingArea.H, Align.Center)
    
End

Public Sub _call() As Integer
    
    Dim yukiBackground As Integer = Color.DarkBlue
    
    Paint.Begin(Me._$drawingArea)
        Me._DrawBackground(yukiBackground)
        Paint.DrawImage(MikuruIcon.Get("question", 48).Image, (Me._$drawingArea.W - 48) / 2, 16)
        drawTextContent()
    Paint.End()
    
    Return yukiBackground
    
End

Public Sub _new(argDrawingArea As DrawingArea)
    
    Me._$drawingArea = argDrawingArea
    
End
