Inherits NagatoWidget

Private $container As NagatoMenuBarContainer
Private $spacer As Panel
Private $button As MenuButton
Private $starMenu As NagatoStarMenu

Private Sub initializePanel()
    
    $spacer = New Panel($container.Hbox)
    $spacer.Expand = True
    
End

Private Sub initializeButton()
    
    $button = New MenuButton($container.Hbox)
    
    With $button
        .Expand = False
        .W = $container.Hbox.H
        .Border = True
        .Action = False
        .Picture = MikuruIcon["star"]
        .Visible = False
    End With
    
    $starMenu = New NagatoStarMenu($button)
    
End

Public Sub SetBackgroundColor(argColor As Integer)
    
    $container.SetBackgroundColor(argColor)
    
End

Public Sub SetStarButtonVisible(argVisible As Boolean)
    
    $button.Visible = argVisible
    
End

Public Sub _new(argContainer As Container)
    
    $container = New NagatoMenuBarContainer(argContainer) As "TFEI"
    initializePanel()
    initializeButton()
    
End
