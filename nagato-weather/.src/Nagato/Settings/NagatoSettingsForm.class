' Gambas class file

Inherits NagatoSettings

Public Sub Load(argForm As Form)
    
    argForm.X = Me._$settings[Subst$("form_&1/x", argForm.Name), argForm.X]
    argForm.Y = Me._$settings[Subst$("form_&1/y", argForm.Name), argForm.Y]
    argForm.Height = Me._$settings[Subst$("form_&1/height", argForm.Name), argForm.Height]
    argForm.Width = Me._$settings[Subst$("form_&1/width", argForm.Name), argForm.Width]
    
End

Public Sub Save(argForm As Form)
    
    Me._$settings[Subst$("form_&1/x", argForm.Name)] = argForm.X
    Me._$settings[Subst$("form_&1/y", argForm.Name)] = argForm.Y
    Me._$settings[Subst$("form_&1/height", argForm.Name)] = argForm.Height
    Me._$settings[Subst$("form_&1/width", argForm.Name)] = argForm.Width
    
    Me._$settings.Save()
    
End
