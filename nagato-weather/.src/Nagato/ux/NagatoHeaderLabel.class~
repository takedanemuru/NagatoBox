' Gambas class file

Private $label As Label

Public Sub _new(argContainer As Container)
    
     $label = New Label($container) As "Label"
     
     With $label
        .Text = ("nagato-weather-experimental")
        .Expand = True
        .Foreground = Color.White
        .Alignment = Align.Center
    End With
    
End

Public Sub Label_MouseDrag()
    
    With Mouse
        HaruhiMain.X = .ScreenX - .StartX
        HaruhiMain.Y = .ScreenY - .StartY
    End With
    
End
