' Gambas class file

Private $container As Container
Private $label As Label

Public Sub _new(argContainer As Container)
    
    $container = argContainer
    
    $label = New Label($container) As "Label"
    $label.Text = ("nagato-weather-experimental")
    $label.Expand = True
    $label.Foreground = Color.White
    $label.Alignment = Align.Center
    
End

Public Sub Label_MouseDrag()
    
    With Mouse
        HaruhiMain.X = .ScreenX - .StartX
        HaruhiMain.Y = .ScreenY - .StartY
    End With
    
End
