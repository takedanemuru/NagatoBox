Inherits NagatoWidget

Property Read Value As Integer

Private $fontSizeSpinBox As SliderBox

Event Changed

Public Sub _InitializeWidget(argContainer As Container) ' override
    
    $fontSizeSpinBox = New SliderBox(argContainer) As "SliderBox"
    
    With $fontSizeSpinBox
        .Expand = True
        .MinValue = 1
        .MaxValue = Application.Font.Size * 4
        .Value = Application.Font.Size
    End With
    
End

Public Sub SliderBox_Change()
    
    Raise Changed
    
End

Private Function Value_Read() As Integer

    Return $fontSizeSpinBox.Value

End
