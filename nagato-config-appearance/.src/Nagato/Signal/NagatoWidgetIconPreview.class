Inherits NagatoWidget

Private $iconView As IconView

Private Sub setIcons()
    
    Dim yukiItemName As String
    
    For Each yukiItemName In Stock.Icons
        $iconView.Add(yukiItemName, yukiItemName, Stock[Subst$("24/&1", yukiItemName)])
    Next

    $iconView.Refresh()

End

Public Sub Refresh(argIconThemeName As String)
    
    Application.Theme = argIconThemeName
    $iconView.Clear()
    Stock.Refresh()
    setIcons()
    
End

Public Sub _InitializeWidget(argContainer As Container)
    
    $iconView = New IconView(argContainer)
    
    With $iconView
        .Expand = True
        .GridSize = 12
        .Background = Color.Lighter(Color.Violet)
    End With
    
    setIcons()
    
End
