Inherits NagatoObject

Public _$rootMenu As Menu

Public Sub _InitializeRootMenu(argUniqueName As String)
    
    Me._$rootMenu = New Menu(HaruhiMain) As "RootMenu"
    
    With Me._$rootMenu
        .Name = argUniqueName
    End With
    
End

Public Sub _AddMenuItem(argText As String, argTag As Integer, Optional argIconName As String)
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "MenuItem"
    
    With yukiMenu
        .Text = argText
        .Tag = argTag
        If argIconName Then .Picture = MikuruIcon[argIconName]
    End With
    
End

Public Sub _OnRefreshChildMenus()
    
    
    
End

Public Sub _new(argUniqueName As String)
    
    Me._InitializeRootMenu(argUniqueName)
    Me._AddMenuItem("", 0)
    
End

Public Sub RootMenu_Show()
    
    Me._$rootMenu.Children.Clear()
    Me._OnRefreshChildMenus()
    
End

Public Sub MenuItem_Click()
    
    Raise Signal(Last.Tag, Null)
    
End
