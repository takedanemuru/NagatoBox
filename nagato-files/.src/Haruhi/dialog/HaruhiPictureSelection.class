' Gambas class file


Public Sub Form_Open()

    With PictureChooser
        .Filter = ["*.png;*.jpg;*.jpeg", "Picture Files"]
        .ShowPreview = True
        .FileView.IconSize = NagatoSettingsTile.Size
    End With

End

Public Sub PictureChooser_Activate()
    
    NagatoSettingsAppearance.Background = PictureChooser.SelectedPath
    
    Me.Close()
    
End
