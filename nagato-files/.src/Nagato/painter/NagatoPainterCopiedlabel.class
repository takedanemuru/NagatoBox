Inherits NagatoLabelPainter

Private Const ThumbnailSize As Integer = 128

Public Sub Paint()
    
    paint.Brush = paint.Color(Color.Orange)
        Paint.Rectangle(0, 0, ThumbnailSize, 24)
    paint.Fill()
        Paint.DrawPicture(MikuruIcon.Get("clipboard"), 4, 4)
    paint.Brush = paint.Color(Color.White)
        Paint.Font.Bold = True
        Paint.RichText("COPIED", 24, 0, ThumbnailSize - 48, 24, Align.Center)
    Paint.Fill()
        Paint.LineWidth = 2
        Paint.MoveTo(0, 24)
        Paint.LineTo(ThumbnailSize, 24)
    Paint.Stroke()
    
End
