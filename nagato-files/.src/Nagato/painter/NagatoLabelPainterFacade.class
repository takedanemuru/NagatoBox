' Gambas class file

Create Static

Private $selectedLabelPainter As New NagatoPainterSelectedLabel
Private $readOnlyLabelPainter As New NagatoPainterReadOnlyLabel
Private $cutLabelPainter As New NagatoPainterCutLabel
Private $renamedLabelPainter As New NagatoPainterRenamedLabel
Private $copiedLabelPainter As New NagatoPainterCopiedlabel
Private $systemMonitorLabelPainter As New NagatoLabelPainterSystemMonitor
Private $rssLabelPainter As New NagatoLabelPainterRss

Public Sub _call(argMode As Integer)
    
    Me.Paint(argMode)
    
End

Public Sub Paint(argMode As Integer, Optional argText As String)
    
    With MikuruTileMode
            Select Case argMode
                Case .ModeReadOnly
                    $readOnlyLabelPainter.Paint()
                Case .ModeCut
                    $cutLabelPainter.Paint()
                Case .ModeCopied
                    $copiedLabelPainter.Paint()
                Case .ModeSelected
                    $selectedLabelPainter.Paint()
                Case .ModeRenamed 
                    $renamedLabelPainter.Paint()
                Case .SpecialSystems
                    $systemMonitorLabelPainter.Paint()
                Case .SpecialRssText
                    $rssLabelPainter.PaintModeText()
                Case .SpecialRssThumbnail
                    $rssLabelPainter.PaintModeThumbnail()
                Case .ModeNull
                    ' ignore
            End Select
        End With
    
End
