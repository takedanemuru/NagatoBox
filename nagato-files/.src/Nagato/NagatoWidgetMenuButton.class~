' Gambas class file

Inherits NagatoTrashPanelWidget

Public _$button As MenuButton
Public _$text As String = ""
Public _$tag As Integer = 0

Public Sub _Initialize()
    
    Me._$button = New MenuButton(Me._$container) As "MenuButton"
    
    With Me._$button
        .Text = Me._$text
        .Tag = Me._$tag
        .AutoResize = True
        .Expand = False
        .Arrow = False
    End With
    
End

Public Sub MenuButton_Click()
    
    Raise Signal(Last.Tag, [""])
    
End
