' Gambas class file

Inherits NagatoIconTile

Private $descriptionPainter As New NagatoDescriptionPainterPath
Private $labelPainter As New NagatoLabelPainterBroken

Public Sub _OnDrawIcon(argPath As String)
    
    Me._PaintIcon(MikuruIcon.Get("exclamation", MikuruUxTile.IconSize / 2))
    
End

Public Sub _OnDrawDescription(argPath As String)
    
    $descriptionPainter.Paint(argPath)
    
End

Public Sub _OnGetBackgroundColor() As Integer
    
    Return MikuruColor.Transparent(Color.DarkGreen, 192)
    
End

Public Sub _OptionalOnDrawHeader()
    
    $labelPainter.Paint()
    
End
