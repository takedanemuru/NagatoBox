Inherits NagatoSignalWidget

Private $collection As Collection

Public Sub _InitializeWidgets()
    
    Dim yukiDirectory As String
    Dim yukiXdgConfigBox As NagatoXdgConfigBox

    $collection = New Collection

    For Each yukiDirectory In NagatoXdg.UserDirs.All
        yukiXdgConfigBox = New NagatoXdgConfigBox(Me._$container, yukiDirectory) As "TFEI"
        $collection.Add(yukiXdgConfigBox, yukiDirectory)
    Next
    
End

Public Sub ApplyChanges()
    
    Dim yukiObject As NagatoXdgConfigBox
    
    For Each yukiObject In $collection
        yukiObject.Apply()
    Next
    
    Message.Info(("Changed"))
    
End

Public Sub Reset()
    
    Dim yukiObject As NagatoXdgConfigBox
    
    For Each yukiObject In $collection
        yukiObject.Reset()
    Next
    
End
