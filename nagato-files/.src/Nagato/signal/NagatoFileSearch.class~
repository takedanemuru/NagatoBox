' Gambas class file

Inherits NagatoLeftPaneContent

Private $container As NagatoFileSearchContainer
Private $searchBox As NagatoFileSearchBox
Private $checkBox As NagatoFileSearchCheckBox

Public Sub SetFocus()
    
    $searchBox.SetFocus()
    
End

Public Sub SetRecursive(argRecursive As Boolean)
    
    $checkBox.Value = argRecursive
    
End

Public Sub _new(argContainer As Container)
    
    $container = New NagatoFileSearchContainer(argContainer)
    $searchBox = New NagatoFileSearchBox($container.VBox) As "Box"
    $checkBox = New NagatoFileSearchCheckBox($container.VBox)
    Me._$mainContent = $container.VBox
    
End

Public Sub Box_Query(argQuery As String)
    
    Dim yukiArgs As New Variant[]
    
    yukiArgs.Add(argQuery)
    
    Raise Signal(MikuruSignal.LeftSearch, yukiArgs)
    
End

Public Sub Box_Refresh()
    
    Raise Signal(MikuruSignal.LeftRefresh, [Null])
    
End
