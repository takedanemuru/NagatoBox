Private Sub keyPress(argKeyCode As Integer)
    
    Select Case argKeyCode
        Case Key.Enter, 16777220
            Debug "enter"
        Case Key.Esc, 16777216
            Debug "escape"
    End Select
    
End

Private Sub keyPressWithControl(argKeyCode As Integer)
    
    Debug argKeyCode
    
    Select Case argKeyCode
        Case Key["x"]
            Debug "cut"
        Case Key["c"]
            Debug "copy"
        Case Key["v"]
            Debug "paste"
        Case Key["h"]
            Debug "toggle hidden"
    End Select
    
End

Public Sub Asakura_KeyPress()
    
    If Not Key.Control Then
        keyPress(Key.Code)
    Else
        keyPressWithControl(Key.Code)
    End If
    
End

