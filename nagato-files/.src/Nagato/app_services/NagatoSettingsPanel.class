Inherits NagatoSettingsCore

Property ClockFormat As String
Property Height As Integer
Property Background As Integer
Property Foreground As Integer
Property Highlight As Integer

Private Function ClockFormat_Read() As String

    Return Me._$settings["panel/clock_format", ("dd/mm/yyyy hh:nn:ss")]

End

Private Sub ClockFormat_Write(Value As String)

    Me._$settings["panel/clock_format"] = Value
    Me._$settings.Save()

End

Private Function Height_Read() As Integer

    Return Me._$settings["panel/height", 24]

End

Private Sub Height_Write(Value As Integer)

    Me._$settings["panel/height"] = Value
    Me._$settings.Save()

End

Private Function Background_Read() As Integer

    Return Me._$settings["panel/background", Color.White]

End

Private Sub Background_Write(Value As Integer)

    Me._$settings["panel/background"] = Value
    Me._$settings.Save()

End

Private Function Foreground_Read() As Integer

    Return Me._$settings["panel/foreground", Color.Violet]

End

