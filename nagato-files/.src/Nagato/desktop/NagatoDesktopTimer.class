' Gambas class file

Create Static

Property Enabled As Boolean

Private $timer As Timer

Event Timer

Public Sub Stop()
    
    $timer.Stop()
    
End

Public Sub Start()
    
    $timer = New Timer As "Timer"
    
    With $timer
        .Delay = 1000
        .Enabled = True
    End With
    
End

Public Sub Timer_Timer()
     
     Raise Timer
    
End

Private Function Enabled_Read() As Boolean

    Return $timer.Enabled

End

Private Sub Enabled_Write(Value As Boolean)

    $timer.Enabled = Value

End
