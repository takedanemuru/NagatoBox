Inherits NagatoDesktopWindows

Property Read Width As Integer
Property Read Max As Integer

Private $totalWidth As Integer

Public Sub Refresh(argTotalWidth As Integer)
    
    $totalWidth = argTotalWidth
    
End

Public Function GetDesktopWindowByMouseX(argMouseX As Integer) As DesktopWindow
    
    Dim yukiWindowIndex As Integer = argMouseX Div CInt($totalWidth / (NagatoDesktopWatcher2.Max + 1))
    
    Return NagatoDesktopWatcher2[yukiWindowIndex]
    
End

Public Sub _get(argIndex As Integer) As DesktopWindow
    
    Return NagatoDesktopWatcher2[argIndex]
    
End

Private Function Width_Read() As Integer

    If NagatoDesktopWatcher2.Count = 0 Then Return $totalWidth

    Return CInt($totalWidth / NagatoDesktopWatcher2.Count)

End

Private Function Max_Read() As Integer

    Return NagatoDesktopWatcher2.Max

End
