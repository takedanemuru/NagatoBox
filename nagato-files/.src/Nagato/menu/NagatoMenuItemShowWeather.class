' Gambas class file

Inherits NagatoMenuItem

Public Sub _InitializeItem() 'override
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    
    With yukiMenu
        .Text = ("Show Weather Infomation")
        .Picture = MikuruIcon.GetCheckButton(NagatoSettingsDesktopTile.ShowWeather)
        .Tag = Me._$path
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsDesktopTile.ShowWeather = Not NagatoSettingsDesktopTile.ShowWeather
    
End
