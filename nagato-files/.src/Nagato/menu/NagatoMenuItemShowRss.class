' Gambas class file

Inherits NagatoMenuItem

Public Sub _InitializeItem() 'override
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    
    With yukiMenu
        .Text = ("Show RSS")
        .Picture = MikuruIcon.GetCheckButton(NagatoSettingsDesktopTile.ShowRss)
        .Tag = Me._$path
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsDesktopTile.ShowRss = Not NagatoSettingsDesktopTile.ShowRss
    
End
