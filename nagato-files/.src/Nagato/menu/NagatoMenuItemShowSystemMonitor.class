' Gambas class file

Inherits NagatoMenuItem

Public Sub _InitializeItem() 'override
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    
    With yukiMenu
        .Text = ("Show System Monitor")
        .Picture = MikuruIcon.GetCheckButton(NagatoSettingsDesktopTile.ShowSystemMonitor)
        .Tag = Me._$path
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsDesktopTile.ShowSystemMonitor = Not NagatoSettingsDesktopTile.ShowSystemMonitor
    
End
