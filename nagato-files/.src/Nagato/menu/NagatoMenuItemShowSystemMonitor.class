' Gambas class file

Inherits NagatoMenuItem

Public Sub _InitializeItem() 'override
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    Dim yukiShown As Boolean = NagatoSettingsDesktopTile.GetVisible(NagatoDesktopKey.SystemMonitor)
    
    With yukiMenu
        .Text = ("Show System Monitor")
        .Picture = MikuruIcon.GetCheckButton(yukiShown)
        .Tag = Me._$path
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsDesktopTile.ToggleVisible(NagatoDesktopKey.SystemMonitor)
    
End
