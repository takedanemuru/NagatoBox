' Gambas class file

Inherits NagatoMenuItem

Private Function getIcon() As Picture
    
    Return IIf(NagatoSettingsDesktop.ShowSystemMonitor, MikuruIcon.Get("button-check"), Null)
    
End

Public Sub _InitializeItem() 'override
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    
    With yukiMenu
        .Text = ("Show System Monitor")
        .Picture = getIcon()
        .Tag = Me._$path
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsDesktop.ShowSystemMonitor = Not NagatoSettingsDesktop.ShowSystemMonitor
    
End
