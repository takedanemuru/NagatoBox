' Gambas class file

Inherits NagatoMenuItem

Public Sub _InitializeItem() 'override
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    
    With yukiMenu
        .Text = ("Show Files")
        .Picture = MikuruIcon.GetCheckButton(NagatoSettingsDesktopTile.ShowFiles)
        .Tag = Me._$path
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsDesktopTile.ShowFiles = Not NagatoSettingsDesktopTile.ShowFiles
    
End
