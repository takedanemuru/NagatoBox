' Gambas class file

Inherits NagatoFilerEvent

Public Sub _call(argSignal As Integer, argValues As Variant[])
    
    Select Case argSignal
        Case NagatoObject.CreateArchive
            MikuruCreate.Archive(Me._$userInput.Selection)
        Case NagatoObject.CreateBlankText
            MikuruCreate.BlankText(Me._$log.Current)
            If MikuruDialog.LastCreatedPath = "" Then Return
            Raise Request(NagatoFilerEvent.RequestFocus, [MikuruDialog.LastCreatedPath])
        Case NagatoObject.CreateDirectory
            MikuruCreate.NewDirectory(Me._$log.Current)
        Case NagatoObject.CreateCopyWholeDirectory
             MikuruFileManuever.CopyToDirectory([argValues[0]], Me._$log.Current)
    End Select
    
End
