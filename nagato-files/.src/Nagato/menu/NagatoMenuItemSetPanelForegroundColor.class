' Gambas class file

Inherits NagatoMenuItem

Public Sub _InitializeItem() 'override
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    
    With yukiMenu
        .Text = ("Foreground Color")
        .Picture = MikuruColorChip.Get(NagatoSettingsPanel.Foreground)
        .Tag = Me._$path
    End With
    
End

Public Sub MenuItem_Click()
    
    If Not Dialog.SelectColor() Then NagatoSettingsPanel.Foreground = Dialog.Color
    
End
