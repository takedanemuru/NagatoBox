' Gambas class file

Inherits NagatoMenuItem

Private Function getHiddenMenuIcon() As Picture
    
    Return IIf(NagatoSettings.ShowHidden, MikuruIcon.Get("button-check"), Null)
    
End

Public Sub _InitializeItem() 'override
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    
    With yukiMenu
        .Text = ("Show hidden")
        .Picture = getHiddenMenuIcon()
        .Tag = Me._$path
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettings.ShowHidden = Not NagatoSettings.ShowHidden
    
End
