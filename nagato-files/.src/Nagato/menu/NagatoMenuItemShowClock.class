' Gambas class file

Inherits NagatoMenuItem

Public Sub _InitializeItem() 'override
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "MenuItem"
    
    With yukiMenu
        .Text = ("Show Clock")
        .Picture = MikuruIcon.GetCheckButton(NagatoSettingsDesktopTile.ShowClock)
        .Tag = Me._$path
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsDesktopTile.ShowClock = Not NagatoSettingsDesktopTile.ShowClock
    
End
