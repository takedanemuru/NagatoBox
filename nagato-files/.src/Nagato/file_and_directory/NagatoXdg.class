' Gambas class file

Create Static

Public Struct Directories 
    All As String[]
    Desktop As String
    Documents As String
    Download As String
    Music As String
    Pictures As String
    PublicShare As String
    Templates As String
    Videos As String
End Struct

Public UserDirs As New Directories

Private Sub initializeDirData()
    
    With UserDirs
        .Desktop = Desktop.GetDirectory("DESKTOP")
        .Documents = Desktop.GetDirectory("DOCUMENTS")
        .Download = Desktop.GetDirectory("DOWNLOAD")
        .Music = Desktop.GetDirectory("MUSIC")
        .Pictures = Desktop.GetDirectory("PICTURES")
        .PublicShare = Desktop.GetDirectory("PUBLICSHARE")
        .Templates = Desktop.GetDirectory("TEMPLATES")
        .Videos = Desktop.GetDirectory("VIDEOS")
    End With
    
End

Public Sub initializeDirArray()
    
    With UserDirs
        .All = [.Desktop, .Documents, .Download, .Music, .Pictures, .PublicShare, .Templates, .Videos]
    End With
    
End

Public Sub _new()
    
    initializeDirData()
    initializeDirArray()
    
End

Public Function GetIcon(argPath As String) As Picture
    
    Return MikuruXdgUserDirsIcons[argPath]
    
End

Public Function GetName(argPath As String) As String
    
    Return MikuruXdgUserDirsNames[argPath]
    
End

Public Function IsUserDir(argPath As String) As Boolean
    
    Return UserDirs.All.Exist(argPath)
    
End

Public Function RemoveXdgUserDirs(argPaths As String[]) As String[]
    
    Dim yukiPath As String
    Dim yukiPaths As New String[]
    
    For Each yukiPath In argPaths
        If yukiPath = User.Home Then Continue
        If Me.IsUserDir(yukiPath) Then Continue
        yukiPaths.Add(yukiPath)
    Next
    
    Return yukiPaths
    
End
