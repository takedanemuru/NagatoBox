Inherits NagatoMenuPanelWidget

Event ChangeMode(argMode As Integer)

Public Sub _Initialize()
    
    Dim yukiButton As New MenuButton(Me._$container)
    Dim yukiMenu As NagatoStarMenuDesktopPanel
    
    With yukiButton
        .Arrow = False
        .AutoResize = True
        .Picture = MikuruIcon.Get("star")
        .Border = False
    End With
    
    yukiMenu = New NagatoStarMenuDesktopPanel(yukiButton) As "MenuItem"
    
End

Public Sub MenuItem_ChangeMode(argIndex As Integer)
    
    Raise ChangeMode(argIndex)
    
End
