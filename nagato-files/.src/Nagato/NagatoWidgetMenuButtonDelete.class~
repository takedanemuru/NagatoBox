' Gambas class file

Inherits NagatoTrashPanelWidget

Private $button As Button

Public Sub _Initialize()
    
    $button = New Button(Me._$container) As "MenuButton"
    
    With $button
        .Text = ("Delete")
        .Tag = MikuruSignal.TrashDelete
        .AutoResize = True
        .Expand = False
        .Arrow = False
    End With
    
End

Public Sub MenuButton_Click()
    
    Raise Signal(Last.Tag, [""])
    
End
