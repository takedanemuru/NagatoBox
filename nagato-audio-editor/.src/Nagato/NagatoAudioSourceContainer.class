Public Sub _new(argContainer As Container)
    
    initializeContainer(argContainer)
    Me._$pictureBox = New NagatoCoverArtBox(Me._$box) As "TFEI"
    initializeButton()
    Me._OnInitializeWidgets()
    Me._$observer = New Observer(NagatoPlayer) As "Asakura"
    
End

