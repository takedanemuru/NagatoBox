Inherits NagatoObject

Public _$box As VBox
Public _$pictureBox As NagatoCoverArtBox
Public _$button As Button
Public _$observer As Observer

Private Sub initializeContainer(argContainer As Container)
    
    Me._$box = New VBox(argContainer)
    
    With Me._$box
        .W = 2 * MikuruUX.Block + MikuruUX.CoverArtSize
        .Padding = MikuruUX.Block
    End With
    
End

Private Sub initializeButton()
    
    Me._$button = New Button(Me._$box) As "Button"
    
    With Me._$button
        .Expand = False
        .H = MikuruUX.BarHeight
        .Text = ("Preview")
        .Enabled = False
    End With
    
End

Public Sub _OnInitializeWidgets()
    
    ' virtual
    
End

Public Sub _OnClickButton()
    
    
    
End

