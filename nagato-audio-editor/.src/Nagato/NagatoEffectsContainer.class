Inherits NagatoObject

Public _$box As VBox
Public _$pictureBox As PictureBox

Private Sub initializeContainer(argContainer As Container)
    
    Me._$box = New VBox(argContainer)
    
    With Me._$box
        .W = 16 * MikuruUX.Block
        .Padding = MikuruUX.Block
        .Expand = True
    End With
    
End

Private Sub initializePictureBox()
    
    Me._$pictureBox = New PictureBox(Me._$box) As "PictureBox"
    
    With Me._$pictureBox
        .Expand = True
        .Picture = MikuruIcon["arrow-right", 32]
        .Alignment = Align.Center
    End With
    
End

Public Sub _new(argContainer As Container)
    
    initializeContainer(argContainer)
    initializePictureBox()
    
End
