Inherits NagatoObject

Private $hBox As HBox
Private $inputContainer As NagatoInputContainer
Private $effectsContainer As NagatoEffectsContainer
Private $outputContainer As NagatoOutputContainer

Private Sub initializeContainer(argContainer As Container)
    
    $hBox = New HBox(argContainer) As "Container"
    
    With $hBox
        .Expand = True
    End With
    
End

Public Sub _new(argContainer As Container)
    
    initializeContainer(argContainer)
    
    $inputContainer = New NagatoInputContainer($hBox)
    $effectsContainer = New NagatoEffectsContainer($hBox)
    $outputContainer = New NagatoOutputContainer($hBox) 
    
End
