' Gambas class file

Inherits NagatoObject

Private $hBox As HBox
Private $openButton As NagatoMenuButtonOpenFile
Private $effectsButton As NagatoMenuButtonEffects
Private $targetFileButton As NagatoMenuButtonTargetFile
Private $textLabel As NagatoTextLabel
Private $starButton As NagatoMenuButtonStar

Private Sub initializeContainer(argContainer As Container)
    
    $hBox = New HBox(argContainer) As "Container"
    
    With $hBox
        .Expand = False
        .H = MikuruUX.BarHeight
        .Background = Color.Background
    End With
    
End

Public Sub _new(argContainer As Container)
    
    initializeContainer(argContainer)
    
    $openButton = New NagatoMenuButtonOpenFile($hBox) 
    $effectsButton = New NagatoMenuButtonEffects($hBox)
    $targetFileButton = New NagatoMenuButtonTargetFile($hBox)
    $textLabel = New NagatoTextLabel($hBox) 
    $starButton = New NagatoMenuButtonStar($hBox) 
    
End
