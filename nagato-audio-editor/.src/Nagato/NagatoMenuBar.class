Inherits NagatoObject

Private $hBox As HBox
Private $openButton As NagatoMenuButtonOpenFile
Private $textLabel As NagatoTextLabel
Private $starButton As NagatoMenuButtonStar

Private Sub initializeContainer(argContainer As Container)
    
    $hBox = New HBox(argContainer) As "Container"
    
    With $hBox
        .Expand = False
        .H = MikuruUX.BarHeight
        .Background = Color.Background
    End With
    
End

Public Sub _new(argContainer As Container)
    
    initializeContainer(argContainer)
    
    $openButton = New NagatoMenuButtonOpenFile($hBox) As "TFEI"
    $textLabel = New NagatoTextLabel($hBox) As "TFEI"
    $starButton = New NagatoMenuButtonStar($hBox) As "TFEI"
    
End
