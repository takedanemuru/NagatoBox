Inherits NagatoObject

Public _$menuButton As MenuButton

Private Sub initializeMenuButton(argContainer As Container)
    
    Me._$menuButton = New MenuButton(argContainer) As "MenuButton"
    
    With Me._$menuButton
        .AutoResize = True
        .Arrow = False
        .Border = False
        .Text = ""
    End With
    
End

Public Sub _OnInitializeMenuButton(argContainer As Container)
    
    ' virtual
    
End

Public Sub _OptionalOnInitializePulldownMenu(argContainer As Container)
    
    ' virtual
    
End

Public Sub _OnMenuButtonClick()
    
    Try Raise Signal(Me._$menuButton.Tag, Null)
    
End

Public Sub _new(argContainer As Container)
    
    initializeMenuButton(argContainer)
    Me._OnInitializeMenuButton(argContainer)
    Me._OptionalOnInitializePulldownMenu(argContainer)
    
End

Public Sub MenuButton_Click()
    
    Me._OnMenuButtonClick()
    
End
