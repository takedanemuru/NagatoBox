' Gambas class file

Private $gtkBookmarks As New String[]

Public Sub _new()

    Dim yukiStream As Stream 
    Dim yukiLine As String

    yukiStream = Open User.Home &/ ".gtk-bookmarks" For Input

    While Not Eof(yukiStream)
        Line Input #yukiStream, yukiLine
        If String.InStr(yukiLine, " ") > 0 Then
            Continue
        Else
            Debug Replace$(yukiLine, "file://", "")
            $gtkBookmarks.Add(Replace$(yukiLine, "file://", ""))
        End If
    Wend

    Close #yukiStream

    $gtkBookmarks.Sort()

End

Public Sub Form_Open()

    Editor1.Styles[1].Background = Color.Red

End
