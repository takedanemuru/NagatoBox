' Gambas class file

Public Sub CallBack(argTag As Integer)
    
    Select Case argTag
        Case 0
            Shell "systemctl reboot"
        Case 1
            Shell "systemctl poweroff"
        Case 2
            Shell "openbox --exit"
    End Select
    
End

Public Sub Form_Open()

    Dim yukiDBusApplication As DBusApplication = DBus["org.freedesktop.DBus"]

    Me.Center()
    Me.Picture = Image.Load("Pictures/yukichan_25.jpg").Stretch(Me.Height, Me.Width).Picture
    
End

Public Sub ExitButton_Click()

    HaruhiQuit.Start(2)

End

Public Sub RebootButton_Click()

    HaruhiQuit.Start(0)

End

Public Sub ShutdownButton_Click()

    HaruhiQuit.Start(1)

End
