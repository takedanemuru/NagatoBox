Private $xdgConfigBoxes As NagatoXdgConfigBoxes
Private $spacer As NagatoDialogBoxSpacer
Private $applyButtons As NagatoDialogApplyButtons

Public Sub _new()

    $xdgConfigBoxes = New NagatoXdgConfigBoxes(Me) As "TFEI"
    $spacer = New NagatoDialogBoxSpacer(Me)
    $applyButtons = New NagatoDialogApplyButtons(Me) As "TFEI"

End

Public Sub Form_Open()
    
    Me.Center()
    
    $xdgConfigBoxes.Reset()
    $applyButtons.ApplyButtonEnabled = False
    
End

Public Sub TFEI_Signal(argSignal As Integer, argArgs As Variant[])
    
    Select Case argSignal
        Case MikuruSignal.DialogCancel
            Me.Close(MikuruSignal.DialogCancel)
        Case MikuruSignal.DialogApply
            $xdgConfigBoxes.ApplyChanges()
            Me.Close(MikuruSignal.DialogApply)
        Case MikuruSignal.DialogChanged
            $applyButtons.ApplyButtonEnabled = True
    End Select
    
End
