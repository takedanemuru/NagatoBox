Inherits NagatoSubPainter

Public Function Draw(argTopOffset As Integer, argPath As String) As Integer
    
    Dim yukiTemplate As String = "<br><u>Path To Restore:</u><br><br>&1<br>"
    Dim yukiText As String = Subst$(yukiTemplate, NagatoTrash.GetPreviousPath(argPath))
    Dim yukiRect As Rect = Me._GetRect(argTopOffset, yukiText)
    
    Me._DrawRichText(yukiText, yukiRect, Align.Center)
    
    Return yukiRect.Y + yukiRect.H
    
Catch
    Return argTopOffset
    
End
