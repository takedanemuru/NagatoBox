' Gambas class file

Inherits NagatoDescriptionPainter

Public Function _OnGetDescription(argText As String) As String
    
    Dim yukiText As String = argText
    Dim yukiLength As Integer
    
    If Me._IsLowerThanLimit(argText) Then Return argText
    
    For yukiLength = String.Len(argText) - 1 DownTo 1 
        yukiText = String.Left(argText, yukiLength) & "..."
        If Me._IsLowerThanLimit(yukiText) Then Return yukiText
    Next
    
    Return ""
    
End