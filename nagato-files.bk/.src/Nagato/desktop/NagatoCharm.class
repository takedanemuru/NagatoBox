' Gambas class file

Private $textArea As TextArea

Public Sub Toggle()
    
    If $textArea.W = 240 Then
        $textArea.W = 0
    Else
        $textArea.W = 240
    Endif
    
End

Public Sub _new(argContainer As Container)
    
    $textArea = New TextArea(argContainer)
    
    With $textArea
        .W = 0
        .Background = Color.Lighter(Color.Pink)
    End With
    
End
