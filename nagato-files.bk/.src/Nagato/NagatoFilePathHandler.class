' Gambas class file

Property Read Directory As String
Property Read BaseName As String
Property Read Extension As String
Property Read BaseNameLength As Integer

Private $path As String

Public Sub _new(argPath As String)
    
    $path = argPath
    
End

Private Function Directory_Read() As String

    Return File.Dir($path)

End

Private Function BaseName_Read() As String

    Return File.BaseName($path)

End

Private Function Extension_Read() As String

    Return File.Ext($path)

End

Private Function BaseNameLength_Read() As Integer

    Return String.Len(File.BaseName($path))

End
