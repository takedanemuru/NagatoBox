Create Static

Public Sub _PaintIcon(argIcon As Picture)
    
    If Object.IsValid(argIcon)
        Paint.DrawPicture(argIcon, (MikuruUxTile.TileSize - argIcon.W) / 2, MikuruUxTile.Margin + (64 - argIcon.H) / 2)
    Else
        Paint.DrawPicture(MikuruIcon.Get("question", 36), (MikuruUxTile.TileSize - 36) / 2, MikuruUxTile.Margin + (64 - 36) / 2)
    End If
    
End

