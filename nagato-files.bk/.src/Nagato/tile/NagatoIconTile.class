    Debug argPath ' virtual
    
End

Public Sub _OnGetBackgroundColor() As Integer ' virtual
    
    Return 0 
    
End

Public Sub _OptionalOnDrawHeader()
    
    
    
End

Public Function Get(argPath As String) As Picture
    
    Dim yukiBaseImage As Image = MikuruTileBaseImage[Me._OnGetBackgroundColor()]
    
    Paint.Begin(yukiBaseImage)
        Me._OnDrawIcon(argPath)
        Me._OnDrawDescription(argPath)
        Me._OptionalOnDrawHeader()
    Paint.End()
    
    Return yukiBaseImage.Picture
    
End
