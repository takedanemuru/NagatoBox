' Gambas class file

Inherits NagatoMenuConstructor

Public Sub _call()
    
    Me._$rootMenu.Children.Clear()
    Me._AddContextMenu(("Open"), 0, MikuruIcon.Get("folder"))
    Me._AddContextMenu(("Empty"), 1, MikuruIcon.Get("bin"))
    
End

Public Sub ContextMenu_Click()
    
     Select Case Last.Tag
        Case 0
            Try Shell "nagato-files -t"
        Case 1
            NagatoTrash.Empty()
    End Select
    
End
