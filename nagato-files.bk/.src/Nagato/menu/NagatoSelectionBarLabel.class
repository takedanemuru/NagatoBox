Inherits NagatoSelectionBarWidgetCore

Private $textLabel As TextLabel

Private Function getLabelTemplate(argCount As Integer) As String
    
    Select Case argCount
        Case 0
            Return "No items selected"
        Case 1
            Return "<b>1</b> item selected"
        Default
            Return "<b>&1</b> items selected"
    End Select
    
End

Public Sub SetText(argCount As Integer)
    
    $textLabel.Text = Subst$(getLabelTemplate(argCount), argCount)
    
End

Public Sub _Initialize()
    
    $textLabel = New TextLabel(Me._$container)
    
    With $textLabel
        .Alignment = Align.Center
        .Expand = True
        .Padding = 2
    End With
    
End
