' Gambas class file

Inherits NagatoFilerEvent

Public Sub _call(argEvent As Integer, argArgument As Variant)
    
    Select Case argEvent
        Case NagatoObject.FileDelete
            NagatoTrash.Delete(Me._$userInput.Selection)
        Case NagatoObject.FileMoveToCurrentDir
            MikuruFileManuever.MoveToDirectory([argArgument], Me._$log.Current)
        Case NagatoObject.FileMoveTo
            MikuruFileManuever.MoveTo(Me._$userInput.Selection, argArgument)
        Case NagatoObject.FileCopyTo
            MikuruFileManuever.CopyTo(Me._$userInput.Selection, argArgument)
        Case NagatoObject.FileCreate
            If Not Exist(Me._$log.Current) Then Return
            Copy argArgument To MikuruSafePath(Me._$log.Current &/ File.Name(argArgument))
        Case NagatoObject.FilePasteFromClipboard
            NagatoClipBoard.Paste(Me._$log.Current)
    End Select
    
End
