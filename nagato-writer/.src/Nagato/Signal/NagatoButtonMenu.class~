' Gambas class file

Create Private

Inherits NagatoPullDownMenu

Property Read Name As String

Public _$uniqueName As String = "MustBeOverridden"

Public Sub _InitializeParentMenu(argRootObject As Object)
    
    Me._$parentMenu = New Menu(argRootObject) As "ParentMenu"
    Me._$parentMenu.Name = Me._$uniqueName
    
End

Public Sub _RefreshChildMenus() ' virtual
    
    
    
End

Public Sub _new(argRootObject As Object)
    
    Me._InitializeParentMenu(argRootObject)
    Me._AddMenu("", 0)
    
End

Public Sub ParentMenu_Show()
    
    Me._$parentMenu.Children.Clear()
    Me._RefreshChildMenus()
    
End

Private Function Name_Read() As String

    Return Me._$uniqueName

End
