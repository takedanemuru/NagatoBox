Inherits NagatoMenuItem

Public Sub _OnInitializeMenuItem()
    
    With Me._$menuItem
        .Text = ("Source Editor Background")
        .Picture = MikuruColorChip(NagatoSettingsEditor.Background)
    End With
    
End

Public Sub _OnClickMenuItem()
    
    If Not Dialog.SelectColor() Then NagatoSettingsEditor.Background = Dialog.Color
    
End
