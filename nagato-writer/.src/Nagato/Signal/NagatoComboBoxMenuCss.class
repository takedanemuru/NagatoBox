Inherits NagatoComboBoxMenu

Public Const Title As String = (" CSS: ")

Public Sub _AddComboBox()
    
    Me._$comboBox = New ComboBox(Me._$parentContainer) As "MenuComboBox"
    
    With Me._$comboBox
        .ReadOnly = True
        .List = NagatoValueListCssPreview.Names
        .Index = NagatoSettingsView.CssIndex
        .Width = NagatoValueListCssPreview.NamesMaxWidth 
    End With
    
End

Public Sub _OnClick()
    
    NagatoSettingsView.CssIndex = Me._$comboBox.Index
    
End

Public Sub Asakura_SettingsChanged()
    
    Me._$comboBox.Index = NagatoSettingsView.CssIndex
    
End
