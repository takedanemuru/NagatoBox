Inherits NagatoSubMenu

Private Function getIcon(argTheme As Integer) As Variant
    
    Return IIf(argTheme = NagatoSettingsSlide.Theme, "button-check", Null)
    
End

Public Sub _AddChildMenus()
    
    Dim yukiIndex As Integer
    
    With NagatoValueListCssSlide
        For yukiIndex = 0 To .Max
            Me._AddMenu(.Names[yukiIndex], yukiIndex, getIcon(yukiIndex))
        Next
    End With

End

Public Sub MenuItem_Click()
    
    NagatoSettingsSlide.Theme = Last.Tag
    
End
