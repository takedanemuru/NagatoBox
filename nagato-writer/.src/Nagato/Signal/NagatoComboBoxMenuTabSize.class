Inherits NagatoComboBoxMenu

Public Const Title As String = (" Tab Size: ")

Public Sub _AddComboBox()
    
    Me._$comboBox = New ComboBox(Me._$parentContainer) As "MenuComboBox"
    
    With Me._$comboBox
        .ReadOnly = True
        .List = NagatoValueListTabSize.Names
        .Index = NagatoSettingsView.TabSizeIndex
        .Width = NagatoValueListTabSize.NamesMaxWidth 
    End With
    
End

Public Sub _OnClick()
    
    NagatoSettingsView.TabSizeIndex = Me._$comboBox.Index
    
End

Public Sub Asakura_RequestReload()
    
    Me._$comboBox.Index = NagatoSettingsView.TabSizeIndex
    
End
