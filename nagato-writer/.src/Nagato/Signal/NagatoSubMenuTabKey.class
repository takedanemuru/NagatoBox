Inherits NagatoSubMenu

Private Function getIconName(argTag As Integer) As Variant
    
    Return IIf(NagatoSettingsView.TabSizeIndex = argTag, "button-check", Null)
    
End

Public Sub _AddChildMenus()
    
    Dim yukiIndex As Integer
    
    With NagatoValueListTabSize
        For yukiIndex = 0 To .Max
            Me._AddMenu(.Names[yukiIndex], yukiIndex, getIconName(yukiIndex))
        Next
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsView.TabSizeIndex = Last.Tag
    
End
