' Gambas class file

Inherits NagatoUxContainer

Private $webview As WebView

Public Sub Refresh(argSource As String, Optional argFormat As String = "markdown_github")
    
    '$webview.HTML = MikuruHtmlConverter.ToHtmlDirect(argSource)
    $webview.HTML = MikuruHtmlConverter.ToHtmlDirect(argSource, argFormat)
    $webview.Refresh()
    
End

Public Sub _Initialize()
    
    $webview = New WebView(Me._$parentContainer) As "WebView"
    
    With $webview
        .Expand = True
        .NoTabFocus = True
    End With
    
End
