Inherits NagatoSubMenu

Private Function getIcon(argTag As Integer) As Variant
    
    Return IIf(argTag = NagatoSettingsView.CssIndex, "button-check", Null)
    
End

Public Sub _AddChildMenus()
    
    Dim yukiIndex As Integer
    
    For yukiIndex = 0 To NagatoValueListCssPreview.Max
        Me._AddMenu(NagatoValueListCssPreview.Names[yukiIndex], yukiIndex, getIcon(yukiIndex))
    Next
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsView.CssIndex = Last.Tag
    
End
