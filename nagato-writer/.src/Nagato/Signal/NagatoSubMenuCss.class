Inherits NagatoSubMenu

Private Function getIconName(argTag As Integer) As Variant
    
    Debug argTag
    Debug NagatoSettingsView.CssIndex
    
    Return IIf(argTag = NagatoSettingsView.CssIndex, "button-check", Null)
    
End

Public Sub _AddChildMenus()
    
    With NagatoValueListCssPreview
        Me._AddMenu("GitHub Style", .StyleGitHub, getIconName(.StyleGitHub))
        Me._AddMenu("Dark Theme", .StyleDark, getIconName(.StyleDark))
        Me._AddMenu("Light Theme", .StyleLight, getIconName(.StyleLight))
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsView.CssIndex = Last.Tag
    
End
