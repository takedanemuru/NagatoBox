Public Sub _new(argRootMenu As Menu)
    
    Dim yukiMenu As New Menu(argRootMenu) As "MenuItem"
    
    With yukiMenu
        .Text = ("Show Status Panel")
        .Picture = IIf(NagatoSettingsView.ShowStatusPanel, MikuruIcon["button-check"], Null)
    End With
    
End

Public Sub MenuItem_Click()
    
    NagatoSettingsView.ShowStatusPanel = Not NagatoSettingsView.ShowStatusPanel
    
End
