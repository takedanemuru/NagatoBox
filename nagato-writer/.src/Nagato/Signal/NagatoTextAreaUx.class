Inherits NagatoUxContainer

Property Read TextArea As TextArea
Property Read Container As VBox

Private $observer As Observer
Private $textArea As TextArea
Private $container As VBox

Private Sub initializeVBox()
    
    $container = New VBox(Me._$parentContainer)
    
    With $container
        .H = 24
        .Expand = True
    End With
    
End

Private Sub initializeTextArea()
    
    $textArea = New TextArea($container) As "TextArea"
    
    With $textArea
        .Expand = True
        .Foreground = NagatoSettingsEditor.Foreground
        .Background = NagatoSettingsEditor.Background
        .Wrap = True
        .Font.Size = NagatoSettingsEditor.FontSize
        .SetFocus()
    End With
    
End

Public Sub _initialize() ' override
    
    initializeVBox()
    initializeTextArea()
    $observer = New Observer(NagatoSettingsEditor) As "Asakura"
    
End

Private Function TextArea_Read() As TextArea

    Return $textArea

End

Private Function Container_Read() As VBox

    Return $container

End

Public Sub Asakura_SettingsChanged()
    
    With $textArea
        .Foreground = NagatoSettingsEditor.Foreground
        .Background = NagatoSettingsEditor.Background
        .Font.Size = NagatoSettingsEditor.FontSize
    End With
    
End
