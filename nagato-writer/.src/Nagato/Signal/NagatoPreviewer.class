Inherits NagatoUxContainer

Private $webview As WebView

Public Sub Refresh(argSource As String, argFormat As String)
    
    If Not NagatoSettings.UseCss Then
        $webview.HTML = MikuruHtmlConverter.ToHtmlDirect(argSource, argFormat)
    Else
        MikuruHtmlConverter.ToHtmlDirect(argSource, argFormat)
        $webview.Url = Media.URL(User.Home &/ ".nagato-writer/temp.html")
    End If
    
    $webview.Refresh()
    
End

Public Sub _Initialize()
    
    $webview = New WebView(Me._$parentContainer) As "WebView"
    
    With $webview
        .Expand = True
        .NoTabFocus = True
    End With
    
End
