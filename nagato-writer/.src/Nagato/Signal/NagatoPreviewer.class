Inherits NagatoUxContainer

Private $webview As WebView

Public Sub Refresh(argSource As String)
    
    MikuruHtmlConverter.ToHtmlDirect(argSource)
    $webview.Url = "file://" & Url$(MikuruHtmlConverter.WorkingFileAbsolute)
    
    $webview.Refresh()
    
End

Public Sub _Initialize()
    
    $webview = New WebView(Me._$parentContainer) As "WebView"
    
    With $webview
        .Expand = True
        .NoTabFocus = True
    End With
    
End
