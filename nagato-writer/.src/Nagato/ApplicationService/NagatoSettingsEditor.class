Inherits NagatoSettingsCore

Property Foreground As Integer
Property Background As Integer
Property FontSize As Integer

Event SettingsChanged

Private Sub changeSettings(argKey As String, Value As Integer)
    
    If Me._$settings[argKey] = Value Then Return
    Me._$settings[argKey] = Value
    Me._$settings.Save()
    
    Raise SettingsChanged
    
End

Private Function Foreground_Read() As Integer

    Return Me._$settings["editor/foreground", Color.Violet]

End

Private Sub Foreground_Write(Value As Integer)

    changeSettings("editor/foreground", Value)

End

Private Function Background_Read() As Integer

    Return Me._$settings["editor/background", Color.White]

End

Private Sub Background_Write(Value As Integer)

    changeSettings("editor/background", Value)

End

Private Function FontSize_Read() As Integer

    Return Me._$settings["editor/font_size", HaruhiMain.Font.Size]

End

Private Sub FontSize_Write(Value As Integer)

    changeSettings("editor/font_size", Value)

End
