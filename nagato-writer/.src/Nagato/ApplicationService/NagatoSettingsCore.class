Public _$settings As New Settings

Event SettingsChanged(argKey As String)

Public Sub _ChangeSettings(argKey As String, Value As Integer)
    
    If Me._$settings[argKey] = Value Then Return
    Me._$settings[argKey] = Value
    Me._$settings.Save()
    
    Raise SettingsChanged(argKey)
    
End
