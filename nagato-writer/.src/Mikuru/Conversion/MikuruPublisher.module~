' Gambas module file

Public Sub ToPdf(argSource As String)
    
    Dim yukiTempPathSource As String = Temp$() & ".html"
    Dim yukiTempPathTarget As String = User.Home &/ "kukicha_5.pdf"
    Dim yukiSource As String = MikuruMacro.Clean(argSource)

    File.Save(yukiTempPathSource, yukiSource)

    Exec ["wkhtmltopdf", "--encoding", "UTF-8", yukiTempPathSource, yukiTempPathTarget] Wait

    Message.Info("YUKI.N > It's done", ("OK"))
    
End
