' Gambas class file

Private $htmlPath As String

Private Sub convert()
    
    Dim yukiIncludeCss As String = Subst$("--include-after-body=&1", NagatoCss.GetSlideCss())
    
    If Exist($htmlPath) Then Kill $htmlPath
    $htmlPath = Temp$() & ".html" 
    Exec ["pandoc", "-t", "dzslides", yukiIncludeCss, "--slide-level", NagatoSettingsSlide.SectionLevel, "-s", MikuruHtmlConverter.TempFile, "-o", $htmlPath] Wait
    
End

Public Sub Set(argText As String)
    
    If argText = "" Then Return
    
    convert()
    
    WebSettings[WebSettings.JavascriptEnabled] = True
    
    SlideWebView.Url = Media.URL($htmlPath)
    
End

Public Sub SlideWebView_KeyPress()

    If Key.Code = Key.Esc Then Me.Close()

End
