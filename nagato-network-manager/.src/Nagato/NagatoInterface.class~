' Gambas class file

Inherits DBusObject

Create Static

Property Read Ready As String
Property Read DeviceCount As Integer

Public Function GetDeviceTypeReadable(argIndex As Integer) As String
    
    If argIndex > Me.DeviceCount - 1 Then Return "Not found"
    
    Return NagatoNetworkManager.Devices[argIndex].ReadableType
    
End

Public Function GetDeviceSpeed(argIndex As Integer) As Integer
    
    If argIndex > Me.DeviceCount - 1 Then Return 0
    
    Return NagatoNetworkManager.Devices[argIndex].Speed
    
End

Public Function GetDeviceAddress(argIndex As Integer) As String
    
    If argIndex > Me.DeviceCount - 1 Then Return 0
    
    Return NagatoNetworkManager.Devices[argIndex].HardwareAddress
    
End

Private Function Ready_Read() As String

    Return "YUKI.N >  Can you see this ?"

End

Private Function DeviceCount_Read() As Integer

    Return NagatoNetworkManager.Devices.Count

End
