' Gambas class file

Private $surface As NagatoSurface

Public Sub Form_Open()

    Application.MainWindow = Me
    NagatoSettings.LoadFormSettings(Me)
    $surface = New NagatoSurface(Me) As "Surface"

End

Public Sub Form_Close()
    
    NagatoSettings.SaveFormSettings(Me)
    
End

Public Sub Surface_Title(argTitle As String)
    
    Me.Title = argTitle
    
End
