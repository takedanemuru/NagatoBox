Inherits NagatoGroup

Private $theme As NagatoComboBoxTheme
Private $applyButton As NagatoContainerApplyButton
Private $fontName As NagatoComboBoxFontName
Private $fontSize As NagatoSliderBoxFontSize
Private $icon As NagatoComboBoxIcon
Private $cursor As NagatoComboBoxCursor

Public Sub _OnInitializeContainers(argContainer As Container)
    
    Object.New("NagatoLabelAppearance", [argContainer])
        Object.New("NagatoContainer", [argContainer])
    $theme = New NagatoComboBoxTheme(argContainer) As "Container"
    $fontName = New NagatoComboBoxFontName(argContainer) As "Container"
    $fontSize = New NagatoSliderBoxFontSize(argContainer) As "Container"
    $icon = New NagatoComboBoxIcon(argContainer) As "Container"
    $cursor = New NagatoComboBoxCursor(argContainer) As "Container"
        Object.New("NagatoContainer", [argContainer])
    $applyButton = New NagatoContainerApplyButton(argContainer) As "Container"
    
End

Public Sub Container_Signal(argSignal As Integer, argValues As Variant[])
    
    Select Case argSignal
        Case MikuruSignal.PropertyChanged
            $applyButton.Enable()
        Case MikuruSignal.PropertyApplyChanges
            NagatoConfigFacade.Set()
        Case MikuruSignal.GoToMain
            NagatoInterimStatus.Reset()
            Raise Signal(argSignal, argValues)
    End Select
    
End
