Inherits NagatoComboBox

Private $directories As NagatoDirectoriesIcons

Public Sub _SetList()
    
    Dim yukiPath As String
    
    $directories = New NagatoDirectoriesIcons
    
    For Each yukiPath In $directories.Directories
        Me._$comboBox.Add(File.Name(yukiPath))
        If Not (File.Name(yukiPath) == NagatoConfigFacade.IconTheme) Then Continue
        Me._$comboBox.Index = Me._$comboBox.Count - 1
    Next
    
End

Public Sub _OnChangeProperty()
    
    NagatoInterimStatus.IconTheme = Me._$comboBox.Current.Text
    
End

Public Function _OnGetBackgroundColor() As Integer
    
    Return Color.White + Color.Transparent * 128
    
End

Public Sub _OnGetLabelText() As String
    
    Return "Icon"
    
End
