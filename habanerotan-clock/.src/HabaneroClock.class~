' Gambas class file

Inherits HabaneroCore

Property Read Type As Integer

Private Sub refreshProperty()
    
    Dim yukiNow As Date
    
    yukiNow = Time(Now)
    Me.$hourTen = Hour(yukiNow) Div 10
    Me.$hourOne = Hour(yukiNow) Mod 10
    Me.$minuteTen = Minute(yukiNow) Div 10
    Me.$minuteOne = Minute(yukiNow) Mod 10
    Me.$secondTen = Second(yukiNow) Div 10
    Me.$secondOne = Second(yukiNow) Mod 10
    
    Me.sendTick()
    
End

Public Sub _new()
    
    Me.initializeTimer()
    Me.$timer.Start()
    
End

Public Sub HabaneroTimer_Timer()
    
    refreshProperty()
    
End

Private Function Type_Read() As Integer
    
    Return SeparatorType.Colon
    
End
