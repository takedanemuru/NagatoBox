Private $xmlDocument As New XmlDocument

Private Sub readActionElements(argXmlElement As XmlElement)
    
    Dim yukiActionType As String
    
    yukiActionType = argXmlElement.Attributes["name"]
    Debug "Action Type : ";; yukiActionType
    If yukiActionType = "Execute" Then
        Debug "Command : ";; argXmlElement.GetChildrenByTagName("command")[0].Value
    Endif
    
End

Private Sub readKeybindElements(argXmlElements As XmlElement[])
    
    Dim yukiElement As XmlElement
    
    For Each yukiElement In argXmlElements
        Debug "Keybind : ";; yukiElement.Attributes["key"]
        If yukiElement.GetChildrenByTagName("action").Count = 0 Then Continue
        readActionElements(yukiElement.GetChildrenByTagName("action")[0])
    Next
    
End

Public Sub _new()
    
    $xmlDocument.Open(Desktop.ConfigDir &/ "nagato-box/nagato-box-rc.xml")
    
    readKeybindElements($xmlDocument.GetElementsByNamespace("keybind"))
    
End

