' Gambas class file

Inherits NagatoPropertyWidget

Private $checkBox As CheckBox

Private Sub addCheckBox()
    
    $checkBox = New CheckBox(Me._$hBox) As "CheckBox"
    
    With $checkBox
        .Width = 32
        .Value = True
        .Expand = False
    End With
    
End

Private Sub addExpandLabel(argLabelTitle As String)
    
    Dim yukiLabel As New Label(Me._$hBox)
    
    With yukiLabel
        .Text = argLabelTitle
        .Expand = True
    End With
    
End

Public Sub _AddValueWidget(argLabelTitle As String, argHeader As String) ' override 
    
    addCheckBox()
    addExpandLabel(argLabelTitle)
    
    If NagatoConfigFile.Properties[argHeader] = "true" Then
        $checkBox.Value = True
    Else
        $checkBox.Value = False
    Endif
    
End
