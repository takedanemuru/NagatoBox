' Gambas class file

Private Sub addPropertyWidgetBoolean(argVBox As VBox, argTranslatableTitle As String, argHeader As String)
    
    Dim yukiWidgetBoolean As NagatoPropertyWidgetBoolean
    
    yukiWidgetBoolean = New NagatoPropertyWidgetBoolean(argVBox, argTranslatableTitle, argHeader)
    
End

Private Sub addPropertyWidgetInteger(argVBox As VBox, argTitle As String, argHeader As String, argMax As Float, argMin As Float)
    
    Dim yukiWidgetInteger As NagatoPropertyWidgetInteger
    
    yukiWidgetInteger = New NagatoPropertyWidgetInteger(argVBox, argTitle, argHeader, argMax, argMin)
    
End

Private Sub addPropertyWidgetFloat(argVBox As VBox, argTitle As String, argHeader As String, argMax As Float, argMin As Float)
    
    Dim yukiWidgetInteger As NagatoPropertyWidgetFloat
    
    yukiWidgetInteger = New NagatoPropertyWidgetFloat(argVBox, argTitle, argHeader, argMax, argMin)
    
End

Private Sub initializePropertyWidgets()
    
    addPropertyWidgetBoolean(ShadowVBox, ("Shadow"), "shadow")
    addPropertyWidgetBoolean(ShadowVBox, ("No Dock Shadow"), "no-dock-shadow")
    addPropertyWidgetBoolean(ShadowVBox, ("No Drag&Drop Shadow"), "no-dnd-shadow")
    addPropertyWidgetBoolean(ShadowVBox, ("Clear Shadow"), "clear-shadow")
    addPropertyWidgetInteger(ShadowVBox, ("Shadow Radius"), "shadow-radius", 30, 0)
    addPropertyWidgetInteger(ShadowVBox, ("Shadow Offset X"), "shadow-offset-x", 20, -20)
    addPropertyWidgetInteger(ShadowVBox, ("Shadow Offset Y"), "shadow-offset-y", 20, -20)
    addPropertyWidgetFloat(ShadowVBox, ("Shadow Opacity"), "shadow-opacity", 100, 0)
    addPropertyWidgetBoolean(ShadowVBox, ("Ignore Shaped Window"), "shadow-ignore-shaped")
    
    addPropertyWidgetFloat(OpacityVBox, ("Menu Opacity"), "menu-opacity", 100, 0)
    addPropertyWidgetFloat(OpacityVBox, ("Inactive Window Opacity"), "inactive-opacity", 100, 0)
    addPropertyWidgetFloat(OpacityVBox, ("Frame Opacity"), "frame-opacity", 100, 0)
    addPropertyWidgetBoolean(OpacityVBox, ("Inactive Opacity Override"), "inactive-opacity-override")
    
    addPropertyWidgetBoolean(FadingVBox, ("Fading"), "fading")
    addPropertyWidgetInteger(FadingVBox, ("Fade Delta"), "fade-delta", 30, 0)
    addPropertyWidgetFloat(FadingVBox, ("Fade-In Step"), "fade-in-step", 100, 0)
    addPropertyWidgetFloat(FadingVBox, ("Fade-Out Step"), "fade-out-step", 100, 0)
    addPropertyWidgetBoolean(FadingVBox, ("No Fading Open/Close"), "no-fading-openclose")
    
End

Public Sub Form_Open()

    NagatoConfigFile.Ensure()
    initializePropertyWidgets()
    Debug NagatoConfigFile.Properties["shadow"]

    Application.MainWindow = Me

End

Public Sub Form_Close()
    
    Quit
    
End
