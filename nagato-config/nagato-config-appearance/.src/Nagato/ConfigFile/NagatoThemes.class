' Gambas class file

Property Read List As String[]
Property Read Count As Integer

Private Const GlobalThemeDirectory As String = "/usr/share/themes"

Private $list As New String[]

Public Sub _new()
    
    Dim yukiPath As String
    
    For Each yukiPath In Dir(GlobalThemeDirectory)
        If Not MikuruThemeChecker.Check(GlobalThemeDirectory &/ yukiPath) Then Continue
        $list.Add(yukiPath)
    Next
    
End

Private Function List_Read() As String[]

    Return $list.Sort()

End

Private Function Count_Read() As Integer

    Return $list.Count

End
