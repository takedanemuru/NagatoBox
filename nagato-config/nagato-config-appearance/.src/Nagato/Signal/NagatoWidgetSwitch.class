Inherits NagatoWidget

Private $switch As SwitchButton

Public Sub _InitializeWidget(argContainer As Container)
    
    $switch = New SwitchButton(argContainer)
    
    With $switch
        .Width = 120
        .Value = NagatoConfigFacade.IsThemeUnified
        .Background = Color.Merge(Color.Violet, Color.White, 0.8)
    End With

    argContainer.Visible = Not NagatoConfigFacade.IsThemeUnified
    
End

