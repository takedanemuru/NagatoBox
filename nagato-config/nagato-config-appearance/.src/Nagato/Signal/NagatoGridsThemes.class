Inherits NagatoGrids

Public Sub _InitializeGrids()
    
    Me._SetGridsFrame(("Widget Theme"))
    
End

Public Sub SetCurrentTheme(argThemeName As String)
    
    Dim yukiIndex As Integer
    
    For yukiIndex = 0 To Me._$grids.Rows.Max
        If Me._$grids[yukiIndex, Me.ColumnTheme].Text = argThemeName Then
            Me._$grids[yukiIndex, Me.ColumnCheck].Picture = MikuruIcon["button-check"]
        Endif
    Next
    
End

Public Sub SetList(argList As String[])
    
    Dim yukiThemeName As String
    
    For Each yukiThemeName In argList.Sort(gb.IgnoreCase)
        Inc Me._$grids.Rows.Count
        Me._$grids[Me._$grids.Rows.Max, Me.ColumnTheme].Text = yukiThemeName 
        If Even(Me._$grids.Rows.Max) Then Me._SetBackground()
    Next
    
End

Private Sub setStarButton()
    
    Dim yukiRow As Integer
    
    For yukiRow = 0 To Me._$grids.Rows.Max
        If Me._$grids[yukiRow, 1].Text = NagatoConfigFacade.WidgetTheme Then
            Me._$grids[yukiRow, 0].Picture = MikuruIcon["button-check"]
        Else If yukiRow = Me._$grids.Row Then
            Me._$grids[yukiRow, 0].Picture = MikuruIcon["auction"]
        Else
            Me._$grids[yukiRow, 0].Picture = Null
        Endif
    Next
    
End

Public Sub Grids_Activate()
    
    Dim yukiSelected As String = Me._$grids[Me._$grids.Row, Me.ColumnTheme].Text
    
    If yukiSelected = NagatoConfigFacade.WidgetTheme Then Return
    
    NagatoInterimStatus.WidgetTheme = yukiSelected
    
    setStarButton()
    
    Raise Signal(MikuruSignal.PropertyChanged, [Me._$grids.Row])
    
End
