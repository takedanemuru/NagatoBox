Inherits NagatoSignal

Public Enum ColumnCheck, ColumnTheme

Public _$grids As GridView

Public Sub _SetGridsFrame(argTitle As String)
    
    With Me._$grids
        .Header = GridView.Horizontal
        .Expand = True
        .Columns.Count = 2
        .Columns[Me.ColumnCheck].W = 32
        .Columns[Me.ColumnTheme].Text = (argTitle)
        .Mode = Select.Single
    End With
    
End

Public Sub _InitializeGrids() ' virtual, MUST be overridden
    
    
    
End

Public Sub _SetBackground()
    
    Dim yukiIndex As Integer
    
    With Me._$grids
        For yukiIndex = 0 To .Columns.Max
            .[.Rows.Max, yukiIndex].Background = Color.Merge(Color.Violet, Color.White, 0.9)
        Next
    End With
    
End

Public Sub _new(argContainer As Container)
    
    Me._$grids = New GridView(argContainer) As "Grids"
    Me._InitializeGrids()
    
End
