' Gambas class file

Create Static

Property Read GlobalDir As String
Property Read UserDir As String

Public Function GetGtk2Gtk3Themes() As String[]
    
    Dim yukiResult As New String[]
    Dim yukiThemeDir As String
    
    For Each yukiThemeDir In Dir(Me.GlobalDir).Sort()
        If Not Exist(Me.GlobalDir &/ yukiThemeDir &/ "gtk-2.0") Then Continue
        If Not Exist(Me.GlobalDir &/ yukiThemeDir &/ "gtk-3.0") Then Continue
        yukiResult.Add(yukiThemeDir)
    Next
    
    Return yukiResult
    
End

Private Function GlobalDir_Read() As String

    Return "/usr/share/themes"

End

Private Function UserDir_Read() As String

    Return User.Home &/ ".themes"

End
