' Gambas class file

Private Sub setFontsComboBox()
    
    Dim yukiFont As String
    
    FontsComboBox.List.Clear()
    
    For Each yukiFont In Fonts
        FontsComboBox.Add(yukiFont)
    Next
    
End

Public Sub _new()

    Application.MainWindow = Me
    
    MikuruConfigTest()
    
End

Public Sub Form_Open()

    Me.Center()

    MikuruGtkThemes.Reload()

    ThemesComboBox.List = MikuruGtkThemes.Names
    ThemesComboBox.Index = ThemesComboBox.List.Find(MikuruGtkConfig.ThemeName)
    Debug ThemesComboBox.Current.Text

    setFontsComboBox()

End

Public Sub ApplyButton_Click()

    MikuruGtkConfig.ThemeName = ThemesComboBox.Current.Text

End
