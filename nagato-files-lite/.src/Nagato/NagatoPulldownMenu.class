Inherits NagatoUserControl

Public _$rootMenu As Menu
Public _$uniqueName As String

Public Sub _AddMenuItem(argText As String, argTag As Variant, Optional argIcon As Picture)
    
    Dim yukiMenu As New Menu(Me._$rootMenu) As "MenuItem"
    
    With yukiMenu
        .Text = argText
        .Tag = argTag
        If argIcon Then .Picture = argIcon
    End With
    
End

Public Sub _OnRefreshChildMenus()
    
    
    
End

Public Sub _OnClickMenuItem()
    
    
    
End

Public Sub _new(argMenuName As String, argUniqueName As String)
    
    Me._$uniqueName = argUniqueName
    Me._$rootMenu = New Menu(HaruhiMain) As "RootMenu"
    
    With Me._$rootMenu
        .Name = argMenuName
    End With
    
    Me._OnRefreshChildMenus()
    
End

Public Sub RootMenu_Show()
    
    Me._$rootMenu.Children.Clear()
    Me._OnRefreshChildMenus()
    
End

Public Sub MenuItem_Click()
    
    Me._OnClickMenuItem()
    
End
