Inherits NagatoPathWidget

Private $bookmarkButton As NagatoMenuButtonBookmark
Private $pathBox As NagatoPathBar
Private $starButton As NagatoMenuButtonStar

Public Sub _OptionalOnInitializeContainer(argContainer As Container) 
    
    Me._$container = New HBox(argContainer)
    
    With Me._$container
        Me._$container.H = MikuruUX.HeaderHeight
    End With
    
End

Public Sub _OnInitializeWidgets(argPath As String)
    
    $pathBox = New NagatoPathBar(Me._$container, argPath, Me._$groupName) As "TFEI"
    $bookmarkButton = New NagatoMenuButtonBookmark(Me._$container, Me._$groupName) As "TFEI"
    $starButton = New NagatoMenuButtonStar(Me._$container, Me._$groupName) As "TFEI"
    
End

Public Sub _call(argSignal As Integer, argValues As Variant[])
    
    Select Case argSignal
        Case MikuruSignal.DirectoryMoveTo
            $pathBox.SetPath(argValues[0])
    End Select
    
End
