' Gambas class file

Inherits NagatoMenuForPaths

Private Sub addBookMarkMenu(argDirectory As String)
    
    Dim yukiMenu As New Menu(Me._$parentMenu) As "BookmarkMenu"
    
    With yukiMenu
        .Text = argDirectory
        .Picture = MikuruIcon.GetDirectoryIcon(argDirectory)
        .Tag = Desktop.GetDirectory(argDirectory)
    End With
    
End

Public Sub _OptionalOnInitializeParentMenu()
    
    Me._$parentMenu.Text = ("Copy To ...")
    
End

Public Sub _OnInitializeChildMenus()
    
    Dim yukiPath As String
    
    For Each yukiPath In MikuruDirectory.Bookmarks
        addBookMarkMenu(yukiPath)
    Next
    
End
