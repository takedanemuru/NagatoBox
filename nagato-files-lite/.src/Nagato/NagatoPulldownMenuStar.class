Inherits NagatoPulldownMenu

Private Sub getCheckIcon(argProperty As Integer) As Picture
    
    Return MikuruIcons.GetCheckButton(NagatoSettingsView[Me._$uniqueName, argProperty])
    
End

Public Sub _OnRefreshChildMenus()
    
    Me._AddMenuItem(("Toggle Extra"), MikuruSignal.AppToggleExtra)
    Me._AddMenuItem(("Show Hidden"), MikuruSignal.UserInputToggleHidden, getCheckIcon(MikuruProperty.ViewShowHidden))
        Me._AddMenuItem("", 0)
    Me._AddMenuItem(("About"), 0, MikuruIcon["star"])
    Me._AddMenuItem(("Quit"), 0, MikuruIcon["button-power"])
    
End

Public Sub _OnClickMenuItem()
    
    Raise Signal(Last.Tag, Null)
    
End
