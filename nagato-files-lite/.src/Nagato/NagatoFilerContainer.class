Inherits NagatoPathWidget

Private $headerBar As NagatoHeaderContainer
Private $filer As NagatoFiler

Private Sub moveTo(argDirectory As String)
    
    $headerBar(MikuruSignal.DirectoryMoveTo, [argDirectory])
    $filer(MikuruSignal.DirectoryMoveTo, [argDirectory])
    
End

Public Sub _OptionalOnInitializeContainer(argContainer As Container)
    
    Me._$container = New VBox(argContainer)
    Me._$container.Expand = True
    
End

Public Sub _OnInitializeWidgets(argPath As String)
    
    $headerBar = New NagatoHeaderContainer(Me._$container, argPath, Me._$groupName) As "HeaderBar"
    $filer = New NagatoFiler(Me._$container, argPath, Me._$groupName) As "Filer"
    
End

Public Sub HeaderBar_Signal(argSignal As Integer, argValues As Variant[])
    
    Select Case argSignal
        Case MikuruSignal.DirectoryMoveTo
            moveTo(argValues[0])
    End Select
    
End

Public Sub Filer_Signal(argSignal As Integer, argValues As Variant[])
    
    Select Case argSignal
        Case MikuruSignal.DirectoryMoveTo
            moveTo(argValues[0])
    End Select
    
End
