Inherits NagatoWidget

Property Read TableView As TableView

Private $tableView As TableView

Private Sub setTableViewProperties()
    
    With $tableView
        .Header = GridView.Horizontal
        .Expand = True
        .Grid = False
        .Mode = Select.Single
    End With
    
End

Private Sub setColumnsProperties()
    
    With $tableView
        .Columns.Count = 5
        .Columns[0].W = MikuruUX.IconGridSize
        .Columns[1].W = HaruhiMain.W / 4
        .Columns[1].Text = ("Name")
        .Columns[2].Alignment = Align.Right
        .Columns[2].Text = ("Size")
        .Columns[3].Text = ("MimeType")
    End With
    
End

Public Sub _OnInitializeWidget(argContainer As Container)
    
    $tableView = New TableView(argContainer) As "TableView"
    
    setTableViewProperties()
    setColumnsProperties()
    
End

Private Function TableView_Read() As TableView

    Return $tableView

End
